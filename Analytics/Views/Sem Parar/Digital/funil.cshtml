@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-semparar-funil-digital">
    <div ng-if="dashboard.status == 200">
        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Funil - Digital</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>


        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12" ng-if="dashFiltros.status === 200">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--FAIXA ATRASO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Faixa Atraso</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.faixaAtraso" dados="dashFiltros.faixaAtraso" style="width:100%"></select2>
                        </div>

                        <!--STATUS BASE-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Status Base</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.statusBase" dados="dashFiltros.statusBase" style="width:100%"></select2>
                        </div>

                        <!--TIPO DEVEDOR-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Tipo Devedor</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.tipoDevedor" dados="dashFiltros.tipoDevedor" style="width:100%"></select2>
                        </div>

                        <!--TIPO PLANO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Tipo Plano</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.tipoPlano" dados="dashFiltros.tipoPlano" style="width:100%"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--FUNIL-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Funil</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="funil.indicador" ng-change="carregarFunil()">
                                <option value="acumulado">Acumulado</option>
                                <option value="mes">Mês</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <canvasjs config="dashboard.funil" style="width: 100%; height: 480px"></canvasjs>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ANALISE POR STATUS-->
        <div class="row">
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Status</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.historico">
                                <thead>
                                    <tr>
                                        <th>Status</th>
                                        <th>Quantidade</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Promessa</th>
                                        <th>Tx Trabalhado</th>
                                        <th>Tx Contato</th>
                                        <th>Tx Loc</th>
                                        <th>Tx Apv</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="c in dashboard.historico | groupBy: 'ds_statusBase'">

                                    <tr class="text-bold">
                                        <td class="text-bold">
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{c[0].ds_statusBase}}
                                        </td>
                                        <td>{{c | avgColumn: 'qtd' | number}}</td>
                                        <td>{{c | avgColumn: 'discado'| number}}</td>
                                        <td>{{c | avgColumn: 'contato'| number}}</td>
                                        <td>{{c | avgColumn: 'cpc'| number}}</td>
                                        <td>{{c | avgColumn: 'cpca'| number}}</td>
                                        <td>{{c | avgColumn: 'promessa'| number}}</td>
                                        <td>{{c | divideSumColumns: 'discado':'qtd' | percentage:1}}</td>
                                        <td>{{c | divideSumColumns: 'contato':'qtd' | percentage:1}}</td>
                                        <td>{{c | divideSumColumns: 'cpc':'qtd' | percentage:1}}</td>
                                        <td>{{c | divideSumColumns: 'cpca':'qtd' | percentage:1}}</td>
                                        <td>{{c | divideSumColumns: 'promessa':'qtd' | percentage:1}}</td>
                                    </tr>

                                    <tr ng-repeat="p in c" ng-show="showTbody">
                                        <td>{{p.data}}</td>
                                        <td>{{p.qtd | number}}</td>
                                        <td>{{p.discado | number}}</td>
                                        <td>{{p.contato | number}}</td>
                                        <td>{{p.cpc | number}}</td>
                                        <td>{{p.cpca | number}}</td>
                                        <td>{{p.promessa | number}}</td>
                                        <td>{{p.discado / p.qtd | percentage:1}}</td>
                                        <td>{{p.contato / p.qtd | percentage:1}}</td>
                                        <td>{{p.cpc / p.qtd | percentage:1}}</td>
                                        <td>{{p.cpca / p.qtd | percentage:1}}</td>
                                        <td>{{p.promessa / p.qtd | percentage:1}}</td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<script>
    angular.module('app').controller('ctrl-semparar-funil-digital', function ($scope, $http, $filter, $interval, dadosPagina) {
        dadosPagina.titulo = 'Funil - Digital';
        dadosPagina.descricao = 'Sem Parar'

        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            faixaAtraso: '',
            statusBase: '',
            tipoDevedor: '',
            tipoPlano: '',
        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.funil = {indicador: 'acumulado'};

        //carregar os filtros
        $http({
            method: 'GET',
            url: "/api/semparar/dashboard/digital/filtros",
        }).then(function success(r) {
            let data = r.data;
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.faixaAtraso = data.Table1;
            $scope.dashFiltros.statusBase = data.Table6;
            $scope.dashFiltros.tipoDevedor = data.Table7;
            $scope.dashFiltros.tipoPlano = data.Table8;
        });

            $scope.carregarDashboard = function () {
                $http({
                    method: 'POST',
                    url: "/api/semparar/dashboard/digital/funil",
                    data: $scope.filtros,
                }).then(function success(r) {
                    $scope.dashboard.status = r.status;
                    let data = r.data;
                    $scope.dashboard.dados = r.data;
                    $scope.dashboard.historico = data.Table2;
                    $scope.dashboard.acumulado = data.Table;
                    $scope.dashboard.mes = data.Table1;
                    $scope.carregarFunil();
            });
        }
       
        
        $scope.carregarFunil = function () {
        let resumo;
            switch ($scope.funil.indicador){
                case 'mes':
                    resumo = $scope.dashboard.mes[0];
                    break;
                default:
                   resumo = $scope.dashboard.acumulado[0];
            }
           $scope.dashboard.funil = {
                animationEnabled: true,
                data: [{
                    type: "funnel",
                    toolTipContent: "<b>{label}</b>: {value} <b>({percentage}%)</b>",
                    indexLabel: "{label} ({percentage}%)",
                    dataPoints: [
                        { y: 25, value: resumo.qtd, label: "Carteira", percentage: (resumo.qtd * 100 / resumo.qtd).toFixed(1) / 1 },
                        { y: 25, value: resumo.discado, label: "Discado", percentage: (resumo.discado * 100 / resumo.qtd).toFixed(1) / 1 },
                        { y: 20, value: resumo.contato, label: "Contato", percentage: (resumo.contato * 100 / resumo.discado).toFixed(1) / 1 },
                        { y: 15, value: resumo.cpc, label: "CPC", percentage: (resumo.cpc * 100 / resumo.contato).toFixed(1) / 1 },
                        { y: 10, value: resumo.cpca, label: "CPCA", percentage: (resumo.cpca * 100 / resumo.cpc).toFixed(1) / 1 },
                        { y: 10, value: resumo.promessa, label: "Promessa", percentage: (resumo.promessa * 100 / resumo.cpca).toFixed(1) / 1 },
                        ]
                    }]
                };
           }
        $scope.carregarDashboard();
    console.log()
        
    });



</script>