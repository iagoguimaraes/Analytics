@{
    Layout = "~/Views/master.cshtml";
}



<div ng-controller="ctrl-semparar-producao">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Produção Humano</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>


        <!-- FILTROS -->
        <div class="row margin-bottom">

            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- Filtros -->
                        <div class="tab-pane active" id="control-sidebar-filters-tab">
                            <!--DATA INCIAL-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Inicial</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                                </div>
                            </div>

                            <!--DATA FINAL-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Final</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                                </div>
                            </div>

                            <!--HORA-->
                            <div class="row">
                                <div class="col-xs-12 col-sm-6">
                                    <div class="form-group">
                                        <label class="control-sidebar-subheading">Hora Inicio</label>
                                        <select class="form-control" ng-model="filtros.horaini">
                                            <option value="7" selected="selected">07h</option>
                                            <option value="8">08h</option>
                                            <option value="9">09h</option>
                                            <option value="10">10h</option>
                                            <option value="11">11h</option>
                                            <option value="12">12h</option>
                                            <option value="13">13h</option>
                                            <option value="14">14h</option>
                                            <option value="15">15h</option>
                                            <option value="16">16h</option>
                                            <option value="17">17h</option>
                                            <option value="18">18h</option>
                                            <option value="19">19h</option>
                                            <option value="20">20h</option>
                                            <option value="21">21h</option>
                                            <option value="22">22h</option>
                                        </select>
                                    </div>
                                </div>


                                <div class="col-xs-12 col-sm-6">
                                    <!--HORA FIM-->
                                    <div class="form-group">
                                        <label class="control-sidebar-subheading">Hora Final</label>
                                        <select class="form-control" ng-model="filtros.horafim">
                                            <option value="7">07h</option>
                                            <option value="8">08h</option>
                                            <option value="9">09h</option>
                                            <option value="10">10h</option>
                                            <option value="11">11h</option>
                                            <option value="12">12h</option>
                                            <option value="13">13h</option>
                                            <option value="14">14h</option>
                                            <option value="15">15h</option>
                                            <option value="16">16h</option>
                                            <option value="17">17h</option>
                                            <option value="18">18h</option>
                                            <option value="19">19h</option>
                                            <option value="20">20h</option>
                                            <option value="21">21h</option>
                                            <option value="22" selected="selected">22h</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!--EMPRESA-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Empresa</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.empresas" dados="dashFiltros.empresas" style="width:100%"></select2>
                            </div>

                            <!--CARTEIRA-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Carteira</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.carteiras" dados="dashFiltros.carteiras" style="width:100%"></select2>
                            </div>

                            <!--FAIXA ATRASO-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Faixa Atraso</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.faixaAtraso" dados="dashFiltros.faixaAtraso" style="width:100%"></select2>
                            </div>

                            <!--PLANO-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Plano</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.plano" dados="dashFiltros.plano" style="width:100%"></select2>
                            </div>

                            <!--TIPO DEVEDOR-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Devedor</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.devedor" dados="dashFiltros.devedor" style="width:100%"></select2>
                            </div>

                            <!--BOTÃO-->
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- DAHSBOARD -->
        <div ng-if="dashboard.status == 200">

            <!-- RESUMO -->
            <div class="row margin-bottom">
                <div class="col-xs-12 col-md-4 col-lg-2">
                    <div class="small-box bg-gray">
                        <div class="inner">
                            <h3 ng-bind="dashboard.resumo.discado | megaNumber"></h3>
                            <p>Discado</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-phone"></i>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4 col-lg-2">
                    <div class="small-box bg-aqua">
                        <div class="inner">
                            <h3 ng-bind="dashboard.resumo.contato | megaNumber"></h3>
                            <h4 class="pull-right" ng-bind="dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1"></h4>
                            <p>Contato</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-headphones"></i>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-4 col-lg-2">
                    <div class="small-box bg-red">
                        <div class="inner">
                            <h3 ng-bind="dashboard.resumo.cpc | megaNumber"></h3>
                            <h4 class="pull-right" ng-bind="dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1"></h4>
                            <p>CPC</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-male"></i>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 col-lg-2">
                    <div class="small-box bg-yellow">
                        <div class="inner">
                            <h3 ng-bind="dashboard.resumo.cpca | number"></h3>
                            <h4 class="pull-right" ng-bind="dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1"></h4>
                            <p>CPCA</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-street-view"></i>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 col-lg-2">
                    <div class="small-box bg-green">
                        <div class="inner">
                            <h3 ng-bind="dashboard.resumo.promessa | number"></h3>
                            <h4 class="pull-right" ng-bind="dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1"></h4>
                            <p>Promessa</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-thumbs-o-up"></i>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 col-lg-2">
                    <div class="small-box bg-blue">
                        <div class="inner">
                            <h3 ng-bind="dashboard.resumo.acordo | number"></h3>
                            <h4 class="pull-right" ng-bind="dashboard.resumo.acordo / dashboard.resumo.cpca | percentage: 1"></h4>
                            <p>Acordo</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-thumbs-up"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ANÁLISE POR DIA -->
            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Análise por Dia</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table1')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.dia">
                                    <thead>
                                        <tr>
                                            <th>Dia</th>
                                            <th>Discado</th>
                                            <th>Contato</th>
                                            <th>CPC</th>
                                            <th>CPCA</th>
                                            <th>Promessa</th>
                                            <th>Pr Vlr</th>
                                            <th>Acordo</th>
                                            <th>Ac Vlr</th>
                                            <th>Total</th>
                                            <th>Vlr</th>
                                            <th>HitRate</th>
                                            <th>TxLoc</th>
                                            <th>TxApv</th>
                                            <th>Conversão</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="dia in dashboard.dia">
                                            <td>{{dia.data | date : 'dd/MM/yyyy'}}</td>
                                            <td>{{dia.discado | number}}</td>
                                            <td>{{dia.contato | number}}</td>
                                            <td>{{dia.cpc | number}}</td>
                                            <td>{{dia.cpca | number}}</td>
                                            <td>{{dia.promessa | number}}</td>
                                            <td>{{dia.vlr_promessa | number}}</td>
                                            <td>{{dia.acordo | number}}</td>
                                            <td>{{dia.vlr_acordo | number}}</td>
                                            <td>{{dia.total | number}}</td>
                                            <td>{{dia.valor | number}}</td>
                                            <td>{{dia.contato / dia.discado | percentage:1}}</td>
                                            <td>{{dia.cpc / dia.contato | percentage:1}}</td>
                                            <td>{{dia.cpca / dia.cpc | percentage:1}}</td>
                                            <td>{{(dia.promessa + dia.acordo ) / dia.cpca | percentage:1}}</td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Total</th>
                                            <th>{{dashboard.resumo.discado | number}}</th>
                                            <th>{{dashboard.resumo.contato | number}}</th>
                                            <th>{{dashboard.resumo.cpc | number}}</th>
                                            <th>{{dashboard.resumo.cpca | number}}</th>
                                            <th>{{dashboard.resumo.promessa | number}}</th>
                                            <th>{{dashboard.resumo.vlr_promessa | number}}</th>
                                            <th>{{dashboard.resumo.acordo | number}}</th>
                                            <th>{{dashboard.resumo.vlr_acordo | number}}</th>
                                            <th>{{dashboard.resumo.total | number}}</th>
                                            <th>{{dashboard.resumo.valor | number}}</th>
                                            <th>{{dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1}}</th>
                                            <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</th>
                                            <th>{{dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1}}</th>
                                            <th>{{(dashboard.resumo.promessa + dashboard.resumo.acordo) / dashboard.resumo.cpca | percentage: 1}}</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- ROLAGEM BUCKET -->
            <div class="row margin-bottom">
                <div class="col-xs-12 col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Rolagem Bucket</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('rolagem','Table7')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                            <small class="pull-right">
                                <label>Lote: </label>
                                <select ng-change="carregarGraficoRolagem()" ng-model="lote.mes">
                                    <option ng-repeat="cc in dashboard.listMonth" value="{{cc.mes}}">{{cc.ds_mes}}</option>
                                </select>
                            </small>
                        </div>
                        <div class="card-body">
                            <high-charts config="dashboard.piebucket"></high-charts>
                        </div>
                    </div>
                </div>

                <div class="col-xs-6">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Análise por Bucket</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table3')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.bucket">
                                    <thead>
                                        <tr>
                                            <th>Bucket</th>
                                            <th>Contratos</th>
                                            <th>Titulos</th>
                                            <th>% Rolagem</th>
                                        </tr>
                                    </thead>
                                    <tbody ng-repeat="e in dashboard.bucket | groupBy: 'bucketIni'">

                                        <tr class="text-bold">
                                            <td>
                                                <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                                {{e[0].bucketIni}}
                                            </td>
                                            <td>{{e | sumByColumn: 'qtd'| number}}</td>
                                            <td>{{e | sumByColumn: 'qtd_titulos'| number}}</td>
                                            <td></td>
                                        </tr>

                                        <tr ng-repeat="c in e" ng-show="showTbody">
                                            <td>{{c.bucketFim}}</td>
                                            <td>{{c.qtd | number}}</td>
                                            <td>{{c.qtd_titulos | number}}</td>

                                            <td>{{c.qtd / c.qtd_total | percentage:1}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- GRÁFICO POR DIA -->
            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Gráfico por Dia</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <small class="pull-right">
                                <select ng-model="grafico.indicador" ng-change="carregarGrafico()">
                                    <option value="hitrate">Hit Rate</option>
                                    <option value="txloc">Tx Loc</option>
                                    <option value="txapv">Tx Apv</option>
                                    <option value="discado">Discado</option>
                                    <option value="contato">Contato</option>
                                    <option value="cpc">CPC</option>
                                    <option value="cpca">CPCA</option>
                                    <option value="promessa">Promessa</option>
                                    <option value="acordo">Acordo</option>
                                    <option value="conversao">Conversão</option>
                                </select>
                            </small>
                        </div>
                        <div class="card-body">
                            <high-chart series="dashboard.grafico" axis-Categories="dashboard.datas" plot-Options-Line-Data-Label="true"></high-chart>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ANÁLISE POR OCORRENCIA -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Andamentos</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table2')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.tabulacao" paging="false" order="[[1,'desc']]"></d-table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>

    angular.module('app').controller('ctrl-semparar-producao', function ($scope, $http, $filter, $interval, dadosPagina) {
        dadosPagina.titulo = 'Produção';
        dadosPagina.descricao = 'Sem Parar'

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            empresas: '',
            carteiras: '',
            faixaAtraso: '',
            plano: '',
            devedor: '',
            horaini: '7',
            horafim: '22',
        };
        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.grafico = { indicador: 'hitrate' };
        $scope.lote = { mes: '' };

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/semparar/dashboard/humano/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            let data = r.data;
            $scope.dashFiltros.status = r.status;

            $scope.dashFiltros.empresas = data.Table;
            $scope.dashFiltros.carteiras = r.data.Table1;
            $scope.dashFiltros.faixaAtraso = r.data.Table2;
            $scope.dashFiltros.plano = r.data.Table6;
            $scope.dashFiltros.devedor = r.data.Table5;

        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/semparar/dashboard/humano/producao",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.status = r.status;
                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.dia = data.Table1;
                $scope.dashboard.tabulacao = data.Table2;
                $scope.dashboard.dados = r.data;
                
                $scope.dashboard.listMonth = data.Table4;
                $scope.lote.mes = $scope.dashboard.listMonth.map(obj => obj.mes)[0];

                $scope.carregarGrafico();
                $scope.carregarGraficoRolagem();

            });
        }

        $scope.carregarGraficoRolagem = function () {

            let titulo = alasql('select ds_mes from ? ', [$scope.dashboard.dados.Table4.filter(obj => obj.mes == $scope.lote.mes)])[0].ds_mes;


            let dados_status = alasql('select bucketIni status, sum(qtd) quantidade from ? where mes = ' + $scope.lote.mes + ' group by bucketIni', [$scope.dashboard.dados.Table3]);
            dados_status = dados_status.map(o => ({ name: o.status, drilldown: o.status, y: o.quantidade }));

            let dados_substatus = [];

            for (s in dados_status) {

                let d = alasql('select bucketFim substatus, qtd quantidade from ? where mes = ' + $scope.lote.mes + '', [$scope.dashboard.dados.Table3.filter(d => d.bucketIni == dados_status[s]['name'])]);
                d = d.map(o => [o.substatus, o.quantidade]);
                let obj = {
                    name: dados_status[s]['name'],
                    id: dados_status[s]['name'],
                    data: d
                }
                dados_substatus.push(obj);
            }

            // filtra a tabela ANÁLISE BUCKET
            $scope.dashboard.bucket = alasql('select bucketIni, bucketFim, sum(qtd) qtd, sum(qtd_titulos) qtd_titulos, sum(qtd_total) qtd_total from ? group by bucketIni, bucketFim', [$scope.dashboard.dados.Table3.filter(obj => obj.mes == $scope.lote.mes)])

            // Gráfico rolagem BUCKET
            $scope.dashboard.piebucket = {
                chart: {
                    type: 'pie'
                },
                title: {
                    text: 'Lotes ' + titulo
                },
                plotOptions: {
                    series: {
                        dataLabels: {
                            enabled: true,
                            format: '{point.name}: {point.y}'
                        }
                    }
                },
                tooltip: {
                    headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                    pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.percentage:.2f}%</b> do total<br/>'
                },
                series: [{
                    name: "Atraso Inicial do Lote",
                    colorByPoint: true,
                    data: dados_status
                }],
                drilldown: {
                    series: dados_substatus
                },
                credits: {
                    enabled: false
                },
            };
        }

        // carrega gráfico conforme indicador escolhido
        $scope.carregarGrafico = function () {
            let dados = $scope.dashboard.dia;
            $scope.dashboard.datas = dados.map(obj => obj.data);
            switch ($scope.grafico.indicador) {
                case 'hitrate':
                    $scope.dashboard.grafico = [{ name: 'hitrate', data: dados.map(obj => (obj.contato * 100 / obj.discado).toFixed(1) * 1) }];
                    break;
                case 'txloc':
                    $scope.dashboard.grafico = [{ name: 'txloc', data: dados.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) * 1) }];
                    break;
                case 'txapv':
                    $scope.dashboard.grafico = [{ name: 'txapv', data: dados.map(obj => (obj.cpca * 100 / obj.cpc).toFixed(1) * 1) }];
                    break;
                case 'conversao':
                    $scope.dashboard.grafico = [{ name: 'conversao', data: dados.map(obj => ((obj.promessa + obj.acordo) * 100 / obj.cpca).toFixed(1) * 1) }];
                    break;
                default:
                    $scope.dashboard.grafico = [{ name: $scope.grafico.indicador, data: dados.map(obj => obj[$scope.grafico.indicador]) }];
            }
        }

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

        $scope.carregarDashboard();

    });

</script>
