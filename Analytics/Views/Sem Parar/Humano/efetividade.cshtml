@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-semparar-efetividade">

    <!-- DAHSBOARD -->
    <div ng-if="dashboard.status == 200">
       
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-5">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.qtd_acordo | number"></h3>
                        <p>Qtd Acordo</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-credit-card"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-7">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.vl_acordo | currency:'R$'"></h3>
                        <p>Vlr Acordo</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-money"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-5">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.pagamento | number"></h3>
                        <p>Qtd Pagamento</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-chevron-circle-down"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-7">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.valor | currency:'R$'"></h3>
                        <p>Vlr Pagamento</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-chevron-circle-down"></i>
                    </div>
                </div>
            </div>
        </div>


            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <high-chart series="dashboard.qtDia" axis-Categories="dashboard.diasPag" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                </div>
            </div>
            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <high-chart series="dashboard.qtDiaAcordo" axis-Categories="dashboard.diasAcordo" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                </div>
            </div>

            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <high-chart series="dashboard.efetividadeDia" axis-Categories="dashboard.diasEfetividade" plot-Options-Line-Data-Label="true"></high-chart>
                </div>
            </div>

            <!--PRODUÇÃO POR OPERADOR-->
            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <h3 class="box-title">Análise por Operador</h3>
                    <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.operador" scroll-collapse="true" scroll-y="324px" order="[[3,'desc']]"></d-table>
                </div>
            </div>

        </div>

    <!-- SIDE BAR CONTROL -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Create the tabs -->
        <div class="tab-content">

            <!-- PERIODO 1 -->
            <div class="tab-pane active" id="control-sidebar-filters-tab">

                <!--DATA INCIAL-->
                <div class="form-group">
                    <label class="control-sidebar-subheading">Data Inicial</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                    </div>
                </div>

                <!--DATA FINAL-->
                <div class="form-group">
                    <label class="control-sidebar-subheading">Data Final</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                    </div>
                </div>

                <!--VISÃO-->
                <div class="form-group">
                    <label class="control-sidebar-subheading">Visão</label>
                    <select class="form-control" ng-model="filtros.visao">
                        <option value="vencimento" selected="selected">Vencimento</option>
                        <option value="andamento">Andamento</option>
                    </select>
                </div>

                <!--BOTÃO-->
                <div class="form-group">
                    <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()">Carregar Dados</button>
                </div>

            </div>
        </div>
    </aside>
    <!-- /.control-sidebar -->
    <!-- Add the sidebar's background. This div must be placed
    immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>

</div>


<script>

    angular.module('app').controller('ctrl-semparar-efetividade', function ($scope, $http, $filter, dadosPagina) {
        dadosPagina.titulo = 'Efetividade';
        dadosPagina.descricao = 'Sem Parar'

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            visao: 'vencimento',

        };
        $scope.dashFiltros = {};
        $scope.dashboard = {};


        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/semparar/dashboard/humano/efetividade",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;

                $scope.dashboard.diasPag = r.data.Table1.map(obj => obj.data);
                $scope.dashboard.diasAcordo = r.data.Table4.map(obj => obj.data);
                $scope.dashboard.diasEfetividade = r.data.Table4.map(obj => obj.data);

                $scope.dashboard.status = r.status;
                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.qtDia = [{ name: 'Quantidade Pagamentos', data: r.data.Table1.map(obj => (obj.qtd_pagto)) }];
                $scope.dashboard.efetividadeDia = [{ name: 'Efetividade', data: data.Table2.map(obj => (obj.qtd_pagto * 100 / obj.qtd_acordo).toFixed(1) / 1) }];
                $scope.dashboard.operador = r.data.Table3;
                $scope.dashboard.qtDiaAcordo = [{ name: 'Quantidade Acordos', data: r.data.Table4.map(obj => (obj.qtd_acordo)) }];
            });
        }

        $scope.carregarDashboard();

    });

</script>