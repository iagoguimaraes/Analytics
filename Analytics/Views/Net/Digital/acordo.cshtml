@{
    Layout = "~/Views/master.cshtml";
}


<!-- DAHSBOARD -->
<div ng-controller="ctrl-net-acordo">
    <div ng-if="dashboard.status === 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Acordos Digital</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>


        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">

            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- Filtros -->
                        <div class="tab-pane active" id="control-sidebar-filters-tab">
                            <!--DATA-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Inicial</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                                </div>
                            </div>

                            <!--DATA FINAL-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Final</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                                </div>
                            </div>

                            <!--EMPRESA-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Empresa</label>
                                <select2 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="filtros.empresa" dados="dashFiltros.empresa"></select2>
                            </div>

                            <!--PRODUTO-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Produto</label>
                                <select2 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="filtros.produto" dados="dashFiltros.produto"></select2>
                            </div>


                            <!--BOTÃO-->
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <!--Resumo-->
        <div class="row clearfix">
            <!--Promessas-->
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="info-box-new bg-new-green hover-expand-effect hover-zoom-effect">
                    <div class="icon">
                        <i class="material-icons">thumb_up</i>
                    </div>
                    <div class="content">
                        <div class="text">Total Acordos</div>
                        <div class="number" ng-bind="dashboard.resumo.quantidade | number"></div>
                    </div>
                </div>
            </div>
            <!--Pagamento-->
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="info-box-new bg-new-blue hover-expand-effect hover-zoom-effect">
                    <div class="icon">
                        <i class="material-icons">attach_money</i>
                    </div>
                    <div class="content">
                        <div class="text">Acordos Pagos</div>
                        <div class="number" ng-bind="dashboard.resumo.quantidade_pago | number"></div>
                    </div>
                </div>
            </div>
            <!--Efetividade-->
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="info-box-new bg-new-grey hover-expand-effect hover-zoom-effect">
                    <div class="icon">
                        <i class="material-icons">trending_up</i>
                    </div>
                    <div class="content">
                        <div class="text">Efetividade</div>
                        <div class="number" ng-bind="dashboard.resumo.quantidade_pago/dashboard.resumo.quantidade | percentage:1"></div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row margin-bottom">
            <!--PRODUTO-->
            <div class="col-xs-12 col-md-4 margin-bottom">
                <div class="card">
                    <div class="card-header ">
                        <span class="card-header-title">Produto</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row margin-bottom">
                            <high-chart series="dashboard.qtProduto" plot-Options-Spline-Data-Label="true" axis-Categories="dashboard.produtos" plot-Options-Column-Stacking="normal" style="width: 100%; height: 250px"></high-chart>
                        </div>
                    </div>
                </div>
            </div>

            <!--STATUS-->
            <div class="col-xs-12 col-md-4 margin-bottom">
                <div class="card">
                    <div class="card-header ">
                        <span class="card-header-title">Status</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row margin-bottom">
                            <high-chart series="dashboard.qtStatus" plot-Options-Spline-Data-Label="true" axis-Categories="dashboard.statusacordo" plot-Options-Column-Stacking="normal" style="width: 100%; height: 250px"></high-chart>
                        </div>
                    </div>
                </div>
            </div>

            <!--PARCELAS-->
            <div class="col-xs-12 col-md-4 margin-bottom">
                <div class="card">
                    <div class="card-header ">
                        <span class="card-header-title">Parcelas</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table5')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row margin-bottom">
                            <high-chart series="dashboard.qtParcela" plot-Options-Spline-Data-Label="true" axis-Categories="dashboard.parcelas" plot-Options-Column-Stacking="normal" style="width: 100%; height: 250px"></high-chart>
                        </div>
                    </div>
                </div>
            </div>

            <!--GRAFICO POR DIA-->
            <div class="col-xs-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Gráfico por DIA</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row margin-bottom">
                            <high-chart series="dashboard.qtDia" plot-Options-Spline-Data-Label="true" axis-Categories="dashboard.dias" plot-Options-Column-Stacking="normal"></high-chart>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--POR ESTADO-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-12">
                <div class="card">
                    <div id="info" class="card-header">
                        <span class="card-header-title">Efetividade por Estado </span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <label>
                                <input type="radio" ng-model="graficoMapa.exibir" value="false" />
                                Tabela
                            </label>
                            <label>
                                <input type="radio" ng-model="graficoMapa.exibir" value="true" checked="checked" />
                                Gráfico
                            </label>
                        </small>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive" ng-show="graficoMapa.exibir == 'true'">
                            <div class="row">
                                <div class="col-xs-12 col-md-4">
                                    <div class="small-box bg-yellow-active">
                                        <div class="inner">
                                            <p><h4>Qtd Pagamento</h4></p>
                                            <h3 ng-bind="dashboard.mapa.quantidade_pago | number"></h3>
                                            <p>{{ dashboard.mapa.estado }}</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-md-4">
                                    <div class="small-box bg-green-active">
                                        <div class="inner">
                                            <p><h4>Valor Pagamento</h4></p>
                                            <h3 ng-bind="dashboard.mapa.valor_pago | currency:'R$ '"></h3>
                                            <p>{{ dashboard.mapa.estado }}</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-md-4">
                                    <div class="small-box bg-blue-active">
                                        <div class="inner">
                                            <p><h4>Ticket Médio Pagamento</h4></p>
                                            <h3 ng-bind="( dashboard.mapa.valor_pago / dashboard.mapa.quantidade_pago ) | currency : 'R$ '"> Ticket Médio Pago</h3>
                                            <p>{{ dashboard.mapa.estado }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <mapa-brasil style="height: 505px" dados="dashboard.estado" ng-change="mudarEstado(idSelecionadoMapa)" ng-model="idSelecionadoMapa"></mapa-brasil>
                        </div>

                        <div class="table-responsive" ng-show="graficoMapa.exibir == 'false'">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.estado">
                                <thead>
                                    <tr>
                                        <th>Região</th>
                                        <th>Qtd Acordos</th>
                                        <th>Qtd Pagamento</th>
                                        <th>% Efetividade</th>
                                        <th>R$ Pagamento</th>
                                        <th>Ticket Médio Pagamento</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="e in dashboard.estado | groupBy: 'regiao'">
                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{e[0].regiao}}
                                        </td>
                                        <td>{{e | sumByColumn: 'quantidade'| number}}</td>
                                        <td>{{e | sumByColumn: 'quantidade_pago'| number}}</td>
                                        <td>{{e | divideSumColumns: 'quantidade_pago':'quantidade' | percentage:1}}</td>
                                        <td>{{e | sumByColumn: 'valor_pago'| currency: 'R$ '}}</td>
                                        <td>{{e | divideSumColumns: 'valor_pago':'quantidade_pago' | currency:'R$ '}}</td>
                                    </tr>
                                    <tr ng-repeat="p in e" ng-show="showTbody">
                                        <td>{{p.estado}}</td>
                                        <td>{{p.quantidade | number}}</td>
                                        <td>{{p.quantidade_pago | number}}</td>
                                        <td>{{p.quantidade_pago / p.quantidade | percentage:1}}</td>
                                        <td>{{p.valor_pago | currency: 'R$ '}}</td>
                                        <td>{{p.valor_pago / p.quantidade_pago | currency:'R$ '}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--HISTORICO RECEBIMENTO-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Financeiro ultimos mesês</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table6')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row margin-bottom">
                            <high-chart series="dashboard.qtMes" axis-Categories="dashboard.visao" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>


<script>
    angular.module('app').controller('ctrl-net-acordo', function ($scope, $http, $filter, $interval, dadosPagina) {

        dadosPagina.titulo = 'Acordo';
        dadosPagina.descricao = 'Net Digital'
        $scope.showTbody = false;

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            produto: '',
            empresa: '',

        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.graficoMapa = { exibir: 'true' };

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/net/dashboard/filtros",
            data: $scope.filtros,
        }).then(function success(r) {

            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.produto = r.data.Table8;
            $scope.dashFiltros.empresa = r.data.Table11;

        });


        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/net/dashboard/digital/acordo",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.dia = r.data.Table1;

                $scope.dashboard.dias = r.data.Table1.map(obj => obj.data);
                $scope.dashboard.produtos = r.data.Table2.map(obj => obj.ds_produto);
                $scope.dashboard.statusacordo = r.data.Table3.map(obj => obj.ds_status_acordo);
                $scope.dashboard.parcelas = r.data.Table5.map(obj => obj.ds_parcela);
                $scope.dashboard.visao = r.data.Table6.map(obj => obj.mes_do_ano_descricao);

                $scope.dashboard.estado = alasql('select "BR-" + uf id, quantidade [percent], percent_pago [value], uf, estado, regiao, quantidade, quantidade_pago, valor, quantidade_pago, valor_pago from ?', [r.data.Table4]);

                $scope.dashboard.maiorEfetividade = alasql('select top 1 "BR-" + uf id from ?', [r.data.Table4])[0];
                $scope.mudarEstado($scope.dashboard.maiorEfetividade);


                $scope.dashboard.qtDia = [
                    { name: 'Acordo', type: "column", color: '#2196f3', data: r.data.Table1.map(obj => (obj.quantidade)) }
                    , { name: 'Pago', type: "column", color: '#49885e', data: r.data.Table1.map(obj => (obj.quantidade_pago)) }
                    , { name: '% Efetividade', yAxis: 1, type: 'spline', color: 'rgba(105, 214, 153, 1)', data: r.data.Table1.map(obj => (obj.quantidade_pago * 100 / obj.quantidade).toFixed(1) * 1) }];

                $scope.dashboard.qtProduto = [
                    { name: 'Acordo', type: "column", color: '#2196f3', data: r.data.Table2.map(obj => (obj.quantidade)) }
                    , { name: 'Pago', type: "column", color: '#49885e', data: r.data.Table2.map(obj => (obj.quantidade_pago)) }
                    , { name: '% Efetividade', yAxis: 1, type: 'spline', color: 'rgba(105, 214, 153, 1)', data: r.data.Table2.map(obj => (obj.quantidade_pago * 100 / obj.quantidade).toFixed(1) * 1) }];

                $scope.dashboard.qtStatus = [{ name: 'Acordos', type: "area", color: '#2196f3', data: r.data.Table3.map(obj => (obj.quantidade)) }];

                $scope.dashboard.qtParcela = [
                    { name: 'Acordo', type: "column", color: '#2196f3', data: r.data.Table5.map(obj => (obj.quantidade)) }
                    , { name: 'Pago', type: "column", color: '#49885e', data: r.data.Table5.map(obj => (obj.quantidade_pago)) }
                    , { name: '% Efetividade', yAxis: 1, type: 'spline', color: 'rgba(105, 214, 153, 1)', data: r.data.Table5.map(obj => (obj.quantidade_pago * 100 / obj.quantidade).toFixed(1) * 1) }];


                $scope.dashboard.qtMes = [
                    { name: 'Acordo', type: "column", color: '#2196f3', data: r.data.Table6.map(obj => (obj.quantidade)) }
                    , { name: 'Pago', type: "column", color: '#49885e', data: r.data.Table6.map(obj => (obj.quantidade_pago)) }
                    , { name: '% Efetividade', yAxis: 1, type: 'spline', color: 'rgba(105, 214, 153, 1)', data: r.data.Table6.map(obj => (obj.quantidade_pago * 100 / obj.quantidade).toFixed(1) * 1) }];




            });
        }


        $scope.mudarEstado = function (id) {

            let dados = alasql('select id, [value], uf, estado, quantidade_pago, valor_pago from ? where id like ("%' + id + '%")', [$scope.dashboard.estado])[0];
            $scope.dashboard.mapa = dados;

            console.log($scope.dashboard.mapa);
        }

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

        $scope.carregarDashboard();


    });
</script>