@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-caedu-acordo">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Colchão de Acordos</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--SEGMENTOS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Segmento</label>
                            <select2 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="filtros.segmento" dados="dashFiltros.segmento"></select2>
                        </div>
                        <!--FAIXAS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Faixas</label>
                            <select2 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="filtros.faixa" dados="dashFiltros.faixa"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- RESUMO -->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-6">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.qtd_vencido | number"></h3>
                        <p>Qtd Vencido</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-credit-card"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.qtd_vencer | number"></h3>
                        <p>Qtd à Vencer</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-credit-card"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.valor_vencido | currency:'R$ '"></h3>
                        <p>Vlr Vencido</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-money"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.valor_vencer | currency:'R$ '"></h3>
                        <p>Vlr à Vencer</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-money"></i>
                    </div>
                </div>
            </div>
        </div>

        <!--GRAFICO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Vencimentos do Período</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="grafico.indicador" ng-change="carregarGrafico()">
                                <option value="qtd">Quantidade</option>
                                <option value="vlr">Valor</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xs-12 col-md-12">
                                <high-chart series="dashboard.dia" axis-Categories="dashboard.dias" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                            </div>                           
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--TABELA EMPRESA/CARTEIRA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Colchão por Empresa/Carteira</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.carteira">
                                <thead>
                                    <tr>
                                        <th>Carteira</th>
                                        <th>Qtd Vencido</th>
                                        <th>Qtd à Vencer</th>
                                        <th>Vlr Vencido</th>
                                        <th>Vlr à Vencer</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="e in dashboard.carteira | groupBy: 'grupo'">

                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{e[0].grupo}}
                                        </td>
                                        <td>{{e | sumByColumn: 'qtd_vencido'| number}}</td>
                                        <td>{{e | sumByColumn: 'qtd_vencer'| number}}</td>
                                        <td>{{e | sumByColumn: 'valor_vencido'| currency:'R$ '}}</td>
                                        <td>{{e | sumByColumn: 'valor_vencer'| currency:'R$ '}}</td>                                        
                                    </tr>

                                    <tr ng-repeat="c in e" ng-show="showTbody">
                                        <td>{{c.ds_faixa}}</td>
                                        <td>{{c.qtd_vencido | number}}</td>
                                        <td>{{c.qtd_vencer | number}}</td>
                                        <td>{{c.valor_vencido | currency:'R$ '}}</td>
                                        <td>{{c.valor_vencer | currency:'R$ '}}</td>                                        
                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--VENCIMENTO POR OPERADOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-7">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Vencimento por Operador</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        
                    </div>
                    <div class="card-body">
                        <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.operador" scroll-collapse="true" scroll-y="324px" order="[[3,'desc']]"></d-table>
                    </div>
                </div>
            </div>

            <!--VENCIMENTO POR MÊS-->
            <div class="col-xs-12 col-md-5">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Colchão Mês à Mês</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="grafico.indicadorMes" ng-change="carregarGraficoMes()">
                                <option value="qtd">Quantidade</option>
                                <option value="vlr">Valor</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.colchao" axis-Categories="dashboard.parcelas" plot-Options-Bar-Data-Label="true" type="bar" height="450px"></high-chart>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>

<script>
    angular.module('app').controller('ctrl-caedu-acordo', function ($scope, $http, $filter) {
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            segmento: '',
            faixa: '',
        }
        $scope.dashboard = {};
        $scope.dashFiltros = {};
        $scope.grafico = { indicador: 'qtd', indicadorMes: 'qtd' };


        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/caedu/dashboard/humano/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.segmento = r.data.Table;
            $scope.dashFiltros.faixa = r.data.Table1;
        });


        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/caedu/dashboard/acordo",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.dias = r.data.Table1.map(obj => obj.data);
                $scope.dashboard.parcelas = r.data.Table4.map(obj => obj.mes);
                $scope.dashboard.dados = r.data;
                $scope.dashboard.carteira = r.data.Table2;
                $scope.dashboard.operador = r.data.Table3;
                

                $scope.carregarGrafico();
                $scope.carregarGraficoMes();
            });
        }

        $scope.carregarGrafico = function () {
            let dados = $scope.dashboard.dados;

            if ($scope.grafico.indicador == 'vlr') {
                $scope.dashboard.dia = [{ name: 'Valor', data: dados.Table1.map(obj => (obj.valor_parcelas)) }];
                //$scope.dashboard.segmento = [{ name: 'Valor', innerSize: '60%', data: dados.Table2.map(obj => ({ name: obj.segmento, y: obj.valor })) }];
            }
            else {
                $scope.dashboard.dia = [{ name: 'Quantidade', data: dados.Table1.map(obj => (obj.qtd_acordo)) }];
                //$scope.dashboard.segmento = [{ name: 'Quantidade', data: dados.Table2.map(obj => ({ name: obj.segmento, y: obj.quantidade })) }];
            }
        }

        $scope.carregarGraficoMes = function () {
            let dados = $scope.dashboard.dados;

            if ($scope.grafico.indicadorMes == 'vlr') {
                $scope.dashboard.colchao = [{ name: 'Valor', data: dados.Table4.map(obj => (obj.valor_vencer)) }];
                //$scope.dashboard.segmento = [{ name: 'Valor', innerSize: '60%', data: dados.Table2.map(obj => ({ name: obj.segmento, y: obj.valor })) }];
            }
            else {
                $scope.dashboard.colchao = [{ name: 'Quantidade', data: dados.Table4.map(obj => (obj.qtd_vencer)) }];
                //$scope.dashboard.segmento = [{ name: 'Quantidade', data: dados.Table2.map(obj => ({ name: obj.segmento, y: obj.quantidade })) }];
            }
        }

        $scope.carregarDashboard();

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });


</script>


