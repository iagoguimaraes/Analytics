@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-mktzap-gerencial">
    <div ng-if="dashboard.status == 200">

        <header class="page-header">
            <div class="page-name">Dashboard Gerencial</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">

            <div class="col-xs-12" ng-if="dadosFiltros.status === 200">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <br />
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--CAMPANHAS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Campanhas</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.campanhas" dados="dadosFiltros.campanhas" style="width:100%"></select2>
                        </div>

                        <!--SETORES-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Setores</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.setores" dados="dadosFiltros.setores" style="width:100%"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!--FUNIL-->
            <div class="col-xs-12 col-md-6 margin-bottom">

                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Atendimentos</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="small-box bg-aqua">
                                    <div class="inner">
                                        <h3>{{dashboard.resumo.tma}}h</h3>
                                        <p>TMA</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fa fa-clock-o"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="small-box bg-purple">
                                    <div class="inner">
                                        <h3>{{dashboard.resumo.tme}}m</h3>
                                        <p>TME</p>
                                    </div>
                                    <div class="icon">
                                        <i class="fa fa-history"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <canvasjs config="dashboard.funil" style="width: 100%; height: 385px"></canvasjs>

                    </div>
                </div>
            </div>
            <!--CANAL-->
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Canal</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvasjs config="dashboard.canal" style="width: 100%; height: 300px"></canvasjs>
                        <div class="row">
                            <div class="col-xs-12">
                                <table class="table table-striped table-bordered" style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th>Canal</th>
                                            <th>Atendimento</th>
                                            <th>TMA</th>
                                            <th>TME</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="c in dashboard.canal_tabela">
                                            <td>{{c.canal}}</td>
                                            <td>{{c.atendimento}}</td>
                                            <td>{{c.tma}}h</td>
                                            <td>{{c.tme}}m</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ANALISE POR CARTEIRA-->
        <div class="row">
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Carteira</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" style="max-height: 400px;">
                            <table class="table table-striped table-bordered" style="width:100%;" ng-if="dashboard.campanha">
                                <thead>
                                    <tr>
                                        <th>Campanha</th>
                                        <th>Atendimento</th>
                                        <th>Finalizado</th>
                                        <th>Interação</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Negociação</th>
                                        <th>Md Mensagem</th>
                                        <th>TMA</th>
                                        <th>TME</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="c in dashboard.campanha | groupBy: 'campanha'">

                                    <tr class="text-bold">
                                        <td class="text-bold">
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{c[0].campanha}}
                                        </td>
                                        <td>{{c | sumByColumn: 'atendimento' | number}}</td>
                                        <td>{{c | sumByColumn: 'finalizado'| number}}</td>
                                        <td>{{c | sumByColumn: 'interacao'| number}}</td>
                                        <td>{{c | sumByColumn: 'cpc'| number}}</td>
                                        <td>{{c | sumByColumn: 'cpca'| number}}</td>
                                        <td>{{c | sumByColumn: 'negociacao'| number}}</td>
                                        <td>{{c | avgColumn: 'msg'}}</td>
                                        <td>{{c | avgColumn: 'tma'}}h</td>
                                        <td>{{c | avgColumn: 'tme'}}m</td>

                                    </tr>

                                    <tr ng-repeat="p in c" ng-show="showTbody">
                                        <td>{{p.setor}}</td>
                                        <td>{{p.atendimento | number}}</td>
                                        <td>{{p.finalizado | number}}</td>
                                        <td>{{p.interacao | number}}</td>
                                        <td>{{p.cpc | number}}</td>
                                        <td>{{p.cpca | number}}</td>
                                        <td>{{p.negociacao | number}}</td>
                                        <td>{{p.msg}}</td>
                                        <td>{{p.tma}}h</td>
                                        <td>{{p.tme}}m</td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!--TABULACAO-->
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Tabulações</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvasjs config="dashboard.tabulacao" style="width: 100%; height: 300px"></canvasjs>
                    </div>
                </div>
            </div>
            <!--DEMANDA-->
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Entrada de Atendimento</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="dashboard.demanda.visao" ng-change="carregarGraficoDemanda()">
                                <option value="hora">Hora</option>
                                <option value="dia">Dia</option>
                                <option value="semana">Semana</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <canvasjs config="dashboard.demanda.grafico" style="width: 100%; height: 300px"></canvasjs>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<script>
    angular.module('app').controller('ctrl-mktzap-gerencial', function ($scope, $http, $filter) {

        let newdate = new Date(new Date().setDate(new Date().getDate() - 1));
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.dadosFiltros = {};
        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),           
            campanhas: '',
            setores: '',
        };
        $scope.showTbody = false;
        $scope.dashboard = {
            demanda: { visao: 'hora'}
        };


        // carrega os filtros e colocar no scope
        $http({
            method: 'GET',
            url: "/api/mktzap/filtros",
        }).then(function success(r) {                
            $scope.dadosFiltros.status = r.status;

            $scope.dadosFiltros.campanhas = r.data.Table;
            $scope.dadosFiltros.setores = r.data.Table1;
        });

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/mktzap/gerencial",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.dados = r.data;
                $scope.dashboard.status = r.status;

                // RESUMO
                let resumo = r.data.Table[0];
                $scope.dashboard.resumo = resumo;

                // CAMPANHA
                $scope.dashboard.campanha = r.data.Table2;

                // FUNIL
                $scope.dashboard.funil = {
                    animationEnabled: true,
                    data: [{
                        type: "funnel",
                        toolTipContent: "<b>{label}</b>: {y} <b>({percentage}%)</b>",
                        indexLabel: "{label} ({percentage}%)",
                        dataPoints: [
                            { y: resumo.atendimento, label: "Atendimento", percentage: 100 },
                            { y: resumo.finalizado, label: "Finalizado", percentage: (resumo.finalizado * 100 / resumo.atendimento).toFixed(1) / 1 },
                            { y: resumo.interacao, label: "Interação", percentage: (resumo.interacao * 100 / resumo.finalizado).toFixed(1) / 1 },
                            { y: resumo.cpc, label: "CPC", percentage: (resumo.cpc * 100 / resumo.interacao).toFixed(1) / 1 },
                            { y: resumo.cpca, label: "CPCA", percentage: (resumo.cpca * 100 / resumo.cpc).toFixed(1) / 1 },
                            { y: resumo.negociacao, label: "Negociação", percentage: (resumo.negociacao * 100 / resumo.cpca).toFixed(1) / 1 }
                        ]
                    }]
                };

                // CANAL
                let canal = r.data.Table1;
                $scope.dashboard.canal = {
                    animationEnabled: true,
                    data: [{
                        type: "pie",
                        indexLabel: "{label} - #percent%",
                        toolTipContent: "<b>{label}:</b> {y} (#percent%)",
                        dataPoints: canal.map(obj => ({ label: obj.canal, y: obj.atendimento }))
                    }]
                };

                let whatsapp = canal.filter(c => c.canal == 'Whatsapp')[0];
                let webchat = canal.filter(c => c.canal == 'WebChat')[0];
                let email = canal.filter(c => c.canal == 'Email')[0];
                let facebook = canal.filter(c => c.canal == 'Facebook')[0];
                $scope.dashboard.canal_tabela = [
                    { canal: 'Whatsapp', atendimento: whatsapp.atendimento, tma: whatsapp.tma, tme: whatsapp.tme },
                    { canal: 'Webchat', atendimento: webchat.atendimento, tma: webchat.tma, tme: webchat.tme },
                    { canal: 'Email', atendimento: email.atendimento, tma: email.tma, tme: email.tme },
                    { canal: 'Facebook', atendimento: facebook.atendimento, tma: facebook.tma, tme: facebook.tme },
                ];

                // OCORRENCIA
                $scope.dashboard.tabulacao = {
                    animationEnabled: true,
                    data: [{
                        type: "doughnut",
                        innerRadius: 70,
                        toolTipContent: "<b>{label}:</b> {y} (#percent%)",
                        dataPoints: r.data.Table3.map(obj => ({ label: obj.status, y: obj.atendimento }))
                    }]
                };

                // DEMANDA
                $scope.dashboard.demanda.dados = [
                    r.data.Table4,
                    r.data.Table5,
                    r.data.Table6
                ];
                $scope.carregarGraficoDemanda();            

            });
        }

        $scope.carregarGraficoDemanda = function () {
            let visao = $scope.dashboard.demanda.visao;
            let dados;
            if (visao == 'hora') {
                dados = $scope.dashboard.demanda.dados[0];
            }
            if (visao == 'dia') {
                dados = $scope.dashboard.demanda.dados[1];
            }
            if (visao == 'semana') {
                dados = $scope.dashboard.demanda.dados[2];
            }

            $scope.dashboard.demanda.grafico = {
                animationEnabled: true,
                toolTip: {
                    shared: true
                },
                data: [
                    {
                        type: 'column',
                        name: 'Recorrencia',
                        color: 'rgba(0, 150, 255, 0.3)',
                        showInLegend: true,
                        axisYType: "secondary",
                        dataPoints: dados.map(obj => ({ label: obj[visao], y: obj.registros }))
                    },
                    {
                        type: "rangeArea",
                        name: 'Atendimentos (Min e Max)',
                        showInLegend: true,
                        dataPoints: dados.map(obj => ({ label: obj[visao], y: [obj.minimo, obj.maximo] }))
                    },
                    {
                        type: "line",
                        name: 'Atendimentos (Média)',
                        showInLegend: true,
                        dataPoints: dados.map(obj => ({ label: obj[visao], y: obj.media }))
                    },
                ]
            }
        }

        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>