@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" type="image/png" href="~/ccashico.ico" />
    <title>Credit Cash Analytics</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/Styles/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/Styles/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Content/Styles/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/Styles/adminlte.css">
    <!-- Google Font -->
    <link rel="stylesheet" href="~/Content/Styles/google-fonts.css">
    <style>
        .bg {
            position: absolute;
            height: 100%;
            width: 100%;
            background: url('../../Content/Images/CreditCashDig_CloudWord_1920x1080.jpg') no-repeat right top;
        }

        .login-box {
            border: 1px solid gray;
            -webkit-box-shadow: 10px 10px 10px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 10px 10px 10px 0px rgba(0,0,0,0.75);
            box-shadow: 10px 10px 10px 0px rgba(0,0,0,0.75);
            opacity: 0.98;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="bg">
        <div class="login-box">
            <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">Entre com seu login e senha</p>
                <form action="/Default/Logar" method="post">
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" placeholder="Usuário" name="login" required>
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <input type="password" class="form-control" placeholder="Senha" name="senha" required>
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
            <!-- /.login-box-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Content/Scripts/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/Scripts/bootstrap.min.js"></script>
</body>
</html>
