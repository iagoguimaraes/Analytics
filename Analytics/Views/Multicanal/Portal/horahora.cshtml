@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-omne-horahora">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Hora Hora Portal</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>


        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">

            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- Filtros -->
                        <div class="tab-pane active" id="control-sidebar-filters-tab">
                            <!--DATA INCIAL-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Inicial</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                                </div>
                            </div>

                            <!--DATA FINAL-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Final</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                                </div>
                            </div>

                            <!--FILA-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Filas</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.fila" dados="dashFiltros.fila" style="width:100%"></select2>
                            </div>


                            <!--BOTÃO-->
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- DAHSBOARD -->
        <div ng-if="dashboard.status == 200">

            <!-- RESUMO INDICADORES -->
            <div class="box box-widget widget-user">
                <div class="box-footer">
                    <div class="row" style="background-color:rgba(255, 255, 255, 0.00); color:black; opacity: 0.8">
                        <div class="col-sm-2 border-right">
                            <div class="description-block">
                                <h5 class="description-header" ng-bind="dashboard.resumo.qtd_acesso | megaNumber"></h5>
                                <span class="description-text">Acessos</span>
                            </div>
                        </div>
                        <div class="col-sm-2 border-right">
                            <div class="description-block">
                                <h5 class="description-header" ng-bind="dashboard.resumo.qtd_simulacao | megaNumber"></h5>
                                <span class="description-text">Simulações</span>
                            </div>
                        </div>
                        <div class="col-sm-2 border-right">
                            <div class="description-block">
                                <h5 class="description-header" ng-bind="dashboard.resumo.qtd_negociacao | number"></h5>
                                <span class="description-text">Negociações</span>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="description-block">
                                <h5 class="description-header" ng-bind="dashboard.resumo.divida | currency:'R$ '"></h5>
                                <span class="description-text">R$ Divida</span>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="description-block">
                                <h5 class="description-header" ng-bind="dashboard.resumo.desconto | currency:'R$ '"></h5>
                                <span class="description-text">R$ Desconto</span>
                            </div>
                        </div>
                        <div class="col-sm-2 border-right">
                            <div class="description-block">
                                <h5 class="description-header" ng-bind="dashboard.resumo.negociado | currency:'R$ ' "></h5>
                                <span class="description-text">R$ Negociado</span>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="background-color: #0298d5; color:white; opacity: 0.8">
                        <div class="col-sm-2 col-sm-offset-3 border-right">
                            <div class="description-block">
                                <h5 class="description-header" ng-bind="dashboard.resumo.qtd_simulacao / dashboard.resumo.qtd_acesso | percentage: 1"></h5>
                                <span class="description-text">% Simulações</span>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="description-block">
                                <h5 class="description-header" ng-bind="dashboard.resumo.qtd_negociacao / dashboard.resumo.qtd_simulacao | percentage: 1"></h5>
                                <span class="description-text">% Negociações</span>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="description-block">
                                <h5 class="description-header" ng-bind="dashboard.resumo.negociado / dashboard.resumo.qtd_negociacao | currency:'R$ '"></h5>
                                <span class="description-text">Tck Médio</span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row margin-bottom">
                <!--ACESSOS-->
                <div class="col-xs-12 col-md-12 margin-bottom">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Acessos</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table2')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                            <small class="pull-right">
                                <select ng-model="grafico.indicadorAcesso" ng-change="carregarGraficoPizza()">
                                    <option value="qtd_acesso">Acessos</option>
                                    <option value="qtd_simulacao">Simulações</option>
                                    <option value="qtd_negociacao">Negociações</option>
                                    <option value="divida">R$ Divida</option>
                                    <option value="desconto">R$ Desconto</option>
                                    <option value="negociado">R$ Fechado</option>
                                </select>
                            </small>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xs-12 col-md-4 margin-bottom">
                                    <high-chart series="dashboard.dispositivoGraf" type="pie" title-Text="Dispositivo" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                                </div>
                                <div class="col-xs-12 col-md-4 margin-bottom">
                                    <mapa-brasil style="height:400px" width="100%" dados="dashboard.mapa"></mapa-brasil>
                                </div>
                                <div class="col-xs-12 col-md-4 margin-bottom">
                                    <high-chart series="dashboard.sistemaGraf" type="column" title-Text="Sistemas" axis-Categories="dashboard.sistemaDesc" plot-Options-Line-Data-Label="true"></high-chart>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Análise por Hora</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table1')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                            <small class="pull-right">
                                <label>
                                    <input type="radio" name="graficoHoraExibir" ng-model="grafico.exibir" value="false" checked="checked" />
                                    Tabela
                                </label>
                                <label>
                                    <input type="radio" name="graficoHoraExibir" ng-model="grafico.exibir" value="true" />
                                    Gráfico
                                </label>
                            </small>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive" ng-show="grafico.exibir == 'false'">
                                <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.hora">
                                    <thead>
                                        <tr>
                                            <th>Hora</th>
                                            <th>Acessos</th>
                                            <th>Simualações</th>
                                            <th>Negociações</th>
                                            <th>% Simulacao</th>
                                            <th>% Negociacao</th>
                                            <th>R$ Divida</th>
                                            <th>R$ Desconto</th>
                                            <th>R$ Fechado</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="hora in dashboard.hora">
                                            <td>{{hora.hora }}</td>
                                            <td>{{hora.qtd_acesso | number}}</td>
                                            <td>{{hora.qtd_simulacao | number}}</td>
                                            <td>{{hora.qtd_negociacao | number}}</td>
                                            <td>{{hora.qtd_simulacao / hora.qtd_acesso | percentage:1}}</td>
                                            <td>{{hora.qtd_negociacao / hora.qtd_simulacao | percentage:1}}</td>
                                            <td>{{hora.divida | currency:'R$ '}}</td>
                                            <td>{{hora.desconto | currency:'R$ '}}</td>
                                            <td>{{hora.negociado | currency:'R$ '}}</td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Total</th>
                                            <th>{{dashboard.resumo.qtd_acesso | number}}</th>
                                            <th>{{dashboard.resumo.qtd_simulacao | number}}</th>
                                            <th>{{dashboard.resumo.qtd_negociacao | number}}</th>
                                            <th>{{dashboard.resumo.qtd_simulacao / dashboard.resumo.qtd_acesso | percentage: 1}}</th>
                                            <th>{{dashboard.resumo.qtd_negociacao / dashboard.resumo.qtd_simulacao | percentage: 1}}</th>
                                            <th>{{dashboard.resumo.divida | currency:'R$ '}}</th>
                                            <th>{{dashboard.resumo.desconto | currency:'R$ '}}</th>
                                            <th>{{dashboard.resumo.negociado | currency:'R$ '}}</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>

                            <!--GRAFICO-->
                            <div ng-show="grafico.exibir == 'true'">
                                <span class="pull-right">
                                    <select ng-model="grafico.indicador" ng-change="carregarGrafico()">
                                        <option value="qtd_acesso">Acessos</option>
                                        <option value="qtd_simulacao">Simulações</option>
                                        <option value="qtd_negociacao">Negociações</option>
                                        <option value="conversao">% Negociacao</option>
                                        <option value="divida">R$ Divida</option>
                                        <option value="desconto">R$ Desconto</option>
                                        <option value="negociado">R$ Fechado</option>
                                    </select>
                                </span>
                                <high-chart series="dashboard.grafico" axis-Categories="dashboard.horas" plot-Options-Line-Data-Label="true"></high-chart>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>

    angular.module('app').controller('ctrl-omne-horahora', function ($scope, $http, $filter, $interval, dadosPagina) {
        dadosPagina.titulo = 'Hora Hora';
        dadosPagina.descricao = 'Omne'

        // filtros iniciais
        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
            fila: '',

        };
        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.grafico = { indicador: 'qtd_acesso', indicadorAcesso: 'qtd_acesso', exibir: 'false' };

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/omne/filtros",
            data: $scope.filtros,
        }).then(function success(r) {

            $scope.dashFiltros.status = r.status;

            $scope.dashFiltros.fila = r.data.Table;
            $scope.dashFiltros.origem = r.data.Table1;

        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/omne/horahora",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.dados = r.data;
                $scope.dashboard.status = r.status;
                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.hora = data.Table1;

                $scope.dashboard.estado = data.Table2;

                $scope.dashboard.dispositivo = data.Table4;
                $scope.dashboard.fila = data.Table5;
                $scope.dashboard.sistema = data.Table3;


                $scope.carregarGrafico();
                $scope.carregarGraficoPizza();
            });
        }

        // carrega o mapa de acordo com o indicador escolhido
        $scope.carregarGrafico = function () {
            let dados = $scope.dashboard.hora;
            $scope.dashboard.horas = dados.map(obj => obj.hora);
            switch ($scope.grafico.indicador) {
                case 'conversao':
                    $scope.dashboard.grafico = [{ name: 'conversao', data: dados.map(obj => (obj.qtd_negociacao * 100 / obj.qtd_simulacao).toFixed(1) * 1) }];
                    break;
                default:
                    $scope.dashboard.grafico = [{ name: $scope.grafico.indicador, data: dados.map(obj => obj[$scope.grafico.indicador]) }];
            }
        }

        // carrega o grafico de acordo com o indicador escolhido
        $scope.carregarGraficoPizza = function () {

            let dadosDis = $scope.dashboard.dispositivo;
            let dadosSis = $scope.dashboard.sistema;
            let dadosFil = $scope.dashboard.fila;
            let dadosEst = $scope.dashboard.estado;

            $scope.dashboard.sistemaDesc = dadosSis.map(obj => obj.ds_sistema_op);


            $scope.dashboard.sistemaGraf = [{ name: $scope.grafico.indicadorAcesso, data: dadosSis.map(obj => obj[$scope.grafico.indicadorAcesso]) }];

            $scope.dashboard.mapa = dadosEst.map(obj => ({ id: 'BR-' + obj.ds_estado, value: obj[$scope.grafico.indicadorAcesso] }));
            $scope.dashboard.dispositivoGraf = [{ name: 'Quantidade', innerSize: '10%', data: dadosDis.map(obj => ({ name: obj.ds_dispositivo, y: obj[$scope.grafico.indicadorAcesso] })) }];
            $scope.dashboard.filaGraf = [{ name: 'Quantidade', innerSize: '10%', data: dadosFil.map(obj => ({ name: obj.ds_fila, y: obj[$scope.grafico.indicadorAcesso] })) }];

        }

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

        $scope.carregarDashboard();

    });

</script>