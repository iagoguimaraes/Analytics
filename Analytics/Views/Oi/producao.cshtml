                                            <td>{{e | sumByColumn: 'cpca'| number}}</td>
                                            <td>{{e | sumByColumn: 'promessa'| number}}</td>
                                            <td>{{e | divideSumColumns: 'cpc':'contato' | percentage:1}}</td>
                                            <td>{{e | divideSumColumns: 'cpca':'cpc' | percentage:1}}</td>
