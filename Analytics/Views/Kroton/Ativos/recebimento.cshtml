@{
    Layout = "~/Views/master.cshtml";
}



<div ng-controller="ctrl-kroton-recebimentocomissao">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Recebimento</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>


        <!-- FILTROS -->
        <div class="row margin-bottom">

            <div class="col-xs-12" ng-if="dashFiltros.status === 200">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- Filtros -->
                        <div class="tab-pane active" id="control-sidebar-filters-tab">

                            <!--CARTEIRA-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Carteira</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.carteiras" dados="dashFiltros.carteiras" style="width:100%"></select2>
                            </div>

                            <!--STATUS ALUNO-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Status Aluno</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.statusaln" dados="dashFiltros.statusaln" style="width:100%"></select2>
                            </div>

                            <!--DATA INCIAL-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Inicial</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                                </div>
                            </div>

                            <!--DATA FINAL-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Final</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                                </div>
                            </div>

                            <!--BOTÃO-->
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- DAHSBOARD -->
        <div ng-if="dashboard.status == 200">

            <div class="container-fluid">

                <!-- Widgets -->
                <div class="row clearfix">
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box-new bg-new-blue hover-zoom-effect">
                            <div class="icon">
                                <i class="material-icons">done_outline</i>
                            </div>
                            <div class="content">
                                <div class="text">Total Pagamentos</div>
                                <div class="number" ng-bind="dashboard.resumo.totalpag | number"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box-new bg-new-cyan hover-expand-effect">
                            <div class="icon">
                                <i class="material-icons">done</i>
                            </div>
                            <div class="content">
                                <div class="text">Espontaneos</div>
                                <div class="number" ng-bind="dashboard.resumo.espontaneo | number"></div>
                                <div class="percent-new" ng-bind="dashboard.resumo.espontaneo / dashboard.resumo.totalpag | percentage:1"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box-new bg-new-light-green hover-expand-effect">
                            <div class="icon">
                                <i class="material-icons">done_all</i>
                            </div>

                            <div class="content">
                                <div class="text">Operação</div>
                                <div class="number" ng-bind="dashboard.resumo.promessa | number"></div>
                                <div class="percent-new" ng-bind="dashboard.resumo.promessa / dashboard.resumo.totalpag | percentage:1"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box-new bg-new-light-green hover-expand-effect">
                            <div class="icon">
                                <i class="material-icons">done_all</i>
                            </div>

                            <div class="content">
                                <div class="text">Mala</div>
                                <div class="number" ng-bind="dashboard.resumo.mala | number"></div>
                                <div class="percent-new" ng-bind="dashboard.resumo.mala / dashboard.resumo.totalpag | percentage:1"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box-new bg-new-blue hover-zoom-effect">
                            <div class="icon">
                                <i class="material-icons">attach_money</i>
                            </div>
                            <div class="content">
                                <div class="text">R$ Pagamentos</div>
                                <div class="number" ng-bind="dashboard.resumo.vlr_totalpag | megaNumber "></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box-new bg-new-cyan hover-expand-effect">
                            <div class="icon">
                                <i class="material-icons">money_off</i>
                            </div>
                            <div class="content">
                                <div class="text">R$ Espontaneos</div>
                                <div class="number" ng-bind="dashboard.resumo.vlr_espontaneo | megaNumber "></div>
                                <div class="percent-new" ng-bind="dashboard.resumo.vlr_espontaneo/dashboard.resumo.vlr_totalpag | percentage:1"></div>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box-new bg-new-light-green hover-expand-effect">
                            <div class="icon">
                                <i class="material-icons">attach_money</i>
                            </div>

                            <div class="content">
                                <div class="text">R$ Operação</div>
                                <div class="number" ng-bind="dashboard.resumo.vlr_promessa | megaNumber "></div>
                                <div class="percent-new" ng-bind="dashboard.resumo.vlr_promessa/dashboard.resumo.vlr_totalpag | percentage:1"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="info-box-new bg-new-light-green hover-expand-effect">
                            <div class="icon">
                                <i class="material-icons">attach_money</i>
                            </div>

                            <div class="content">
                                <div class="text">R$ Mala</div>
                                <div class="number" ng-bind="dashboard.resumo.vlr_mala | megaNumber "></div>
                                <div class="percent-new" ng-bind="dashboard.resumo.vlr_mala/dashboard.resumo.vlr_totalpag | percentage:1"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!--ANALISE POR SUPERVISOR-->
            <div class="row">
                <div class="col-xs-12 col-lg-12  col-md-6 margin-bottom">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Análise por Segmento</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table2')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.tabela">
                                    <thead>
                                        <tr>
                                            <th>Credor</th>
                                            <th>Total Pagamento</th>
                                            <th>Total Pag R$</th>
                                            <th>Espontâneo </th>
                                            <th>Espontâneo R$</th>
                                            <th>Mala</th>
                                            <th>Mala R$</th>
                                            <th>Promessa</th>
                                            <th>Promessa R$</th>
                                            <th>% Operação</th>
                                        </tr>
                                    </thead>
                                    <tbody ng-repeat="g in dashboard.tabela | groupBy: 'empresa'">

                                        <tr class="text-bold">
                                            <td>
                                                <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                                {{g[0].empresa}}
                                            </td>
                                            <td>{{g | sumByColumn: 'totalpag'| number}}</td>
                                            <td>{{g | sumByColumn: 'vlr_totalpag'| currency:'R$ '}}</td>

                                            <td>{{g | sumByColumn: 'espontaneo'| number}}</td>
                                            <td>{{g | sumByColumn: 'vlr_espontaneo'| currency:'R$ '}}</td>


                                            <td>{{g | sumByColumn: 'mala'| number}}</td>
                                            <td>{{g | sumByColumn: 'vlr_mala'| currency:'R$ '}}</td>

                                            <td>{{g | sumByColumn: 'promessa'| number}}</td>
                                            <td>{{g | sumByColumn: 'vlr_promessa'| currency:'R$ '}}</td>
                                            <td>{{g | divideSumColumns: 'promessa':'totalpag' | percentage:1 }}</td>

                                        </tr>

                                        <tr ng-repeat="c in g" ng-show="showTbody">
                                            <td>{{c.produto}}</td>
                                            <td>{{c.totalpag | number}}</td>
                                            <td>{{c.vlr_totalpag | currency:'R$ ' }}</td>
                                            <td>{{c.espontaneo | number}}</td>
                                            <td>{{c.vlr_espontaneo | currency:'R$ '}}</td>
                                            <td>{{c.mala | number}}</td>
                                            <td>{{c.vlr_mala | currency:'R$ '}}</td>
                                            <td>{{c.promessa | number}}</td>
                                            <td>{{c.vlr_promessa | currency:'R$ '}}</td>
                                            <td>{{c.promessa/c.totalpag | percentage:1}}</td>

                                        </tr>

                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!--ANALISE POR SUPERVISOR E EQUIPE-->
            <div class="row">
                <div class="col-xs-12 col-lg-6  col-md-6 margin-bottom">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Recebimento por Supervisor</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table1')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            @*<high-charts config="dashboard.vlCarteira2"></high-charts>*@
                            <high-chart series="dashboard.Vlsupervisor" type="pie" inner-size="60%" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 margin-bottom">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Recebimento por Equipes</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table3')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <high-chart series="dashboard.equipes" axis-Categories="dashboard.equipe" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row clearfix">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="info-box-new-4 hover-zoom-effect">
                        <div class="icon">
                            <i class="material-icons col-blue">done_outline</i>
                        </div>
                        <div class="content">
                            <div class="text">Media Espontâneo Mês</div>
                            <div class="number" ng-bind="dashboard.media.media_espontaneo | currency:'R$ '"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="info-box-new-4 hover-zoom-effect">
                        <div class="icon">
                            <i class="material-icons col-blue">done</i>
                        </div>
                        <div class="content">
                            <div class="text">Media Operação Mês</div>
                            <div class="number" ng-bind="dashboard.media.media_operacao | currency:'R$ '"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="info-box-new-4 hover-zoom-effect">
                        <div class="icon">
                            <i class="material-icons col-blue">done_all</i>
                        </div>

                        <div class="content">
                            <div class="text">Media Mala Mês</div>
                            <div class="number" ng-bind="dashboard.media.media_mala | currency:'R$ '"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!--HISTORICO RECEBIMENTO-->
            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Financeiro ultimos 12 mesês</span>

                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table4')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <high-charts config="dashboard.recebimentomes"></high-charts>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>

    angular.module('app').controller('ctrl-kroton-recebimentocomissao', function ($scope, $http, $filter, $interval, dadosPagina) {
            dadosPagina.titulo = 'Recebimento';
            dadosPagina.descricao = 'Kroton Ativos'

            // filtros iniciais
            let newdate = new Date();
            let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(),1);


            $scope.filtros = {
                dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
                dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
                carteiras: '',
                statusaln: '',
                id_empresa: '1', /*Id Empresa - Kroton Ativos*/

            };
            $scope.dashFiltros = {};
            $scope.dashboard = {};
            $scope.grafico = { indicador: 'hitrate' };

            // carregar os filtros
            $http({
                method: 'POST',
                url: "/api/kroton/dashboard/filtros",
                data: $scope.filtros,
            }).then(function success(r) {

                $scope.dashFiltros.status = r.status;
                $scope.dashFiltros.carteiras = r.data.Table;
                $scope.dashFiltros.statusaln = r.data.Table1;

            });

            // obtem filtros do escopo e carrega os dados do dashboard
            $scope.carregarDashboard = function () {
                $http({
                    method: 'POST',
                    url: "/api/kroton/dashboard/recebimento",
                    data: $scope.filtros,
                }).then(function success(r) {
                    let data = r.data;
                    $scope.dashboard.status = r.status;
                    $scope.dashboard.resumo = r.data.Table[0];
                    $scope.dashboard.tabela = r.data.Table2;
                    $scope.dashboard.Vlsupervisor = [{ name: 'Recebimento', innerSize: '60%', data: r.data.Table1.map(obj => ({ name: obj.supervisor, y: obj.valor_promessa })) }];
                    $scope.dashboard.equipe = r.data.Table3.map(obj => obj.equipe);
                    $scope.dashboard.equipes = [{ name: 'Equipe', data: r.data.Table3.map(obj => (obj.valor_promessa)) }];
                    $scope.dashboard.meses = data.Table4.map(obj => obj.mesDoAnoNome);
                    $scope.dashboard.pagmeses = [{ name: 'Espontaneo', data: data.Table4.map(obj => (obj.valor_espontaneo)), color: '#FF4500' }
                                                ,{ name: 'Operação', data: data.Table4.map(obj => (obj.promessa)), color: '#FF8C00'}
                                                ,{ name: 'Mala', data: data.Table4.map(obj => (obj.valor_mala)), color: '#FFA500' }];

                    $scope.dashboard.media = r.data.Table5[0];
                    $scope.dashboard.recebimentomes =
                    {
                            chart: {
                                    type: 'column'
                            },
                            title: {
                                text: ''
                            },
                            xAxis: {
                                categories: data.Table4.map(obj => obj.mesDoAnoNome)
                            },
                            yAxis: {
                                min: 0,
                                title: {
                                    text: ''
                                },
                                stackLabels: {
                                    enabled: true,
                                    style: {
                                        fontWeight: 'bold',
                                        color: (Highcharts.theme && Highcharts.theme.textColor) || 'gray'
                                    }
                                }
                            },
                            legend: {
                                align: 'right',
                                x: -30,
                                verticalAlign: 'top',
                                y: 25,
                                floating: true,
                                backgroundColor: (Highcharts.theme && Highcharts.theme.background2) || 'white',
                                borderColor: '#CCC',
                                borderWidth: 1,
                                shadow: false
                            },
                            tooltip: {
                                headerFormat: '<b>{point.x}</b><br/>',
                                pointFormat: '{series.name}: {point.y}<br/>Total: {point.stackTotal}',
                            },
                            plotOptions: {
                                column: {
                                        stacking: 'normal',
                                            dataLabels: {
                                                enabled: true,
                                                color: (Highcharts.theme && Highcharts.theme.dataLabelsColor) || 'white',
                                                formatter: function () {
                                                    return $filter("megaNumber")(this.y)
                                                    }
                                          }
                                }
                            },
                            series: [{
                                name: 'Espontaneo',
                                data: data.Table4.map(obj => (obj.valor_espontaneo)),
                                dataLabels: {
                                    formatter: function () {
                                        return $filter("megaNumber")(this.y)
                                    }
                                }

                            }, {
                                name: 'Operação',
                                data: data.Table4.map(obj => (obj.promessa)),
                                dataLabels: {
                                    formatter: function () {
                                        return $filter("megaNumber")(this.y)
                                    }
                                }
                            }, {
                                name: 'Mala',
                                data: data.Table4.map(obj => (obj.valor_mala)),
                                dataLabels: {
                                formatter: function () {
                                    return $filter("megaNumber")(this.y)
                        }
                    }
                            }]
                    }

                    Highcharts.createElement('link', {
                        href: 'https://fonts.googleapis.com/css?family=Signika:400,700',
                        rel: 'stylesheet',
                        type: 'text/css'
                    }, null, document.getElementsByTagName('head')[0]);

                    // Add the background image to the container
                    Highcharts.wrap(Highcharts.Chart.prototype, 'getContainer', function (proceed) {
                        proceed.call(this);
                        this.container.style.background =
                            'url(https://www.highcharts.com/samples/graphics/sand.png)';
                    });


                    Highcharts.theme = {
                        colors: ['#1565C0', '#2196F3', '#4FC3F7', '#90CAF9', '#81D4FA', '#B3E5FC'],
                        chart: {
                            backgroundColor: null,
                            style: {
                                fontFamily: 'Signika, serif'
                            }
                        },
                        title: {
                            style: {
                                color: 'black',
                                fontSize: '16px',
                                fontWeight: 'bold'
                            }
                        },
                        subtitle: {
                            style: {
                                color: 'black'
                            }
                        },
                        tooltip: {
                            borderWidth: 0
                        },
                        legend: {
                            itemStyle: {
                                fontWeight: 'bold',
                                fontSize: '13px'
                            }
                        },
                        xAxis: {
                            labels: {
                                style: {
                                    color: '#6e6e70'
                                }
                            }
                        },
                        yAxis: {
                            labels: {
                                style: {
                                    color: '#6e6e70'
                                }
                            }
                        },
                        plotOptions: {
                            series: {
                                shadow: true
                            },
                            candlestick: {
                                lineColor: '#404048'
                            },
                            map: {
                                shadow: false
                            },
                            column: {
                                dataLabels: {
                                    formatter: function () {
                                    return $filter("megaNumber")(this.y)
                                        }
                                    }
                                }
                        },

                        // Highstock specific
                        navigator: {
                            xAxis: {
                                gridLineColor: '#D0D0D8'
                            }
                        },
                        rangeSelector: {
                            buttonTheme: {
                                fill: 'white',
                                stroke: '#C0C0C8',
                                'stroke-width': 1,
                                states: {
                                    select: {
                                        fill: '#D0D0D8'
                                    }
                                }
                            }
                        },
                        scrollbar: {
                            trackBorderColor: '#C0C0C8'
                        },

                        // General
                        background2: '#E0E0E8'

                    };

                    // Apply the theme
                            Highcharts.setOptions(Highcharts.theme);

                });
            }

            // extrair dados para excel
            $scope.extrair = function (tabela) {
                alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
            }

            $scope.carregarDashboard();

        });

</script>
