@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-kroton-horahora">

    <!--RESUMO-->
    <div class="box box-widget widget-user">
        <div class="widget-user-header bg-black" style="background: url('/Content/Images/Kroton/bg-kroton.jpg') center center; ">
        </div>
        <div class="widget-user-image">
            <img class="img-circle" src="~/Content/Images/Kroton/logo-kroton.jpg" height="128" width="128" style="border: 2px solid #0066cc">
        </div>
        <div class="box-footer">

            <div class="row">
                <div class="col-sm-2 col-sm-offset-1 border-right">
                    <div class="description-block">
                        <h5 class="description-header" ng-bind="dashboard.resumo.qtd_discado | megaNumber"></h5>
                        <span class="description-text">Discado</span>
                    </div>
                </div>
                <div class="col-sm-2 border-right">
                    <div class="description-block">
                        <h5 class="description-header" ng-bind="dashboard.resumo.contato | megaNumber"></h5>
                        <span class="description-text">Contato</span>
                    </div>
                </div>
                <div class="col-sm-2 border-right">
                    <div class="description-block">
                        <h5 class="description-header" ng-bind="dashboard.resumo.cpc | megaNumber"></h5>
                        <span class="description-text">CPC</span>
                    </div>
                </div>
                <div class="col-sm-2 border-right">
                    <div class="description-block">
                        <h5 class="description-header" ng-bind="dashboard.resumo.cpca | number"></h5>
                        <span class="description-text">CPCA</span>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="description-block">
                        <h5 class="description-header" ng-bind="dashboard.resumo.promessa | number"></h5>
                        <span class="description-text">Promessa</span>
                    </div>
                </div>
            </div>

            <div class="row bg-blue-gradient">
                <div class="col-sm-2 col-sm-offset-1 border-right">
                    <div class="description-block">
                        <h5 class="description-header" ng-bind="dashboard.resumo.qtd_discado / dashboard.resumo.promessa | number: 1"></h5>
                        <span class="description-text">Esforço</span>
                    </div>
                </div>
                <div class="col-sm-2 border-right">
                    <div class="description-block">
                        <h5 class="description-header" ng-bind="dashboard.resumo.contato / dashboard.resumo.qtd_discado | percentage: 1"></h5>
                        <span class="description-text">Hit Rate</span>
                    </div>
                </div>
                <div class="col-sm-2 border-right">
                    <div class="description-block">
                        <h5 class="description-header" ng-bind="dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1"></h5>
                        <span class="description-text">Tx Loc</span>
                    </div>
                </div>
                <div class="col-sm-2 border-right">
                    <div class="description-block">
                        <h5 class="description-header" ng-bind="dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1"></h5>
                        <span class="description-text">Tx Apv</span>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="description-block">
                        <h5 class="description-header" ng-bind="dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1"></h5>
                        <span class="description-text">Conversao</span>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!--ANALISE POR HORA-->
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Análise por Hora</h3>
                    <small class="pull-right">
                        <label>
                            <input type="radio" name="graficoHoraExibir" ng-model="graficoHora.exibir" value="false" checked="checked" />
                            Tabela
                        </label>
                        <label>
                            <input type="radio" name="graficoHoraExibir" ng-model="graficoHora.exibir" value="true" />              
                            Gráfico
                        </label>
                                 
                    </small>
                </div>
                <div class="box-body">

                    <!--TABELA-->
                    <div class="table-responsive" ng-show="graficoHora.exibir == 'false'">
                        <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.horahora">
                            <thead>
                                <tr>
                                    <th>Hora</th>
                                    <th>Discado</th>
                                    <th>Contato</th>
                                    <th>CPC</th>
                                    <th>CPCA</th>
                                    <th>Promessa</th>
                                    <th>Hit Rate</th>
                                    <th>Tx Loc</th>
                                    <th>Tx Apv</th>
                                    <th>Conversão</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="hora in dashboard.horahora">
                                    <td>{{hora.hora}}</td>
                                    <td>{{hora.qtd_discado | number}}</td>
                                    <td>{{hora.contato | number}}</td>
                                    <td>{{hora.cpc | number}}</td>
                                    <td>{{hora.cpca | number}}</td>
                                    <td>{{hora.promessa | number}}</td>
                                    <td>{{hora.contato / hora.qtd_discado | percentage:1}}</td>
                                    <td>{{hora.cpc / hora.contato | percentage:1}}</td>
                                    <td>{{hora.cpca / hora.cpc | percentage:1}}</td>
                                    <td>{{hora.promessa / hora.cpca | percentage:1}}</td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Total</th>
                                    <th>{{dashboard.resumo.qtd_discado | number}}</th>
                                    <th>{{dashboard.resumo.contato | number}}</th>
                                    <th>{{dashboard.resumo.cpc | number}}</th>
                                    <th>{{dashboard.resumo.cpca | number}}</th>
                                    <th>{{dashboard.resumo.promessa | number}}</th>
                                    <th>{{dashboard.resumo.contato / dashboard.resumo.qtd_discado | percentage: 1}}</th>
                                    <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</th>
                                    <th>{{dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1}}</th>
                                    <th>{{dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1}}</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!--GRAFICO-->
                    <div ng-show="graficoHora.exibir == 'true'">
                        <span class="pull-right">
                            <select ng-model="graficoHora.indicador" ng-change="carregarGraficoHora()">
                                <option value="hitrate">Hit Rate</option>
                                <option value="txloc">Tx Loc</option>
                                <option value="txapv">Tx Apv</option>
                                <option value="conversao">Conversão</option>
                                <option value="qtd_discado">Discado</option>
                                <option value="contato">Contato</option>
                                <option value="cpc">CPC</option>
                                <option value="cpca">CPCA</option>
                                <option value="promessa">Promessa</option>
                            </select>
                        </span>
                        <high-chart series="dashboard.graficoHora" axis-Categories="dashboard.horas" plot-Options-Line-Data-Label="true"></high-chart>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <!--ANALISE POR CARTEIRA-->
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary" style="border-top-color: lightgray">
                <div class="box-header with-border">
                    <h3 class="box-title">Análise por Carteira</h3>
                </div>
                <div class="box-body">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.credor">
                            <thead>
                                <tr>
                                    <th>Credor</th>
                                    <th>Discado</th>
                                    <th>Contato</th>
                                    <th>CPC</th>
                                    <th>CPCA</th>
                                    <th>Promessa</th>
                                    <th>HitRate</th>
                                    <th>TxLoc</th>
                                    <th>TxApv</th>
                                    <th>Conversão</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="e in dashboard.credor | groupBy: 'carteira'">

                                <tr class="text-bold">
                                    <td>
                                        <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                        {{e[0].carteira}}
                                    </td>
                                    <td>{{e | sumByColumn: 'qtd_discado'| number}}</td>
                                    <td>{{e | sumByColumn: 'contato'| number}}</td>
                                    <td>{{e | sumByColumn: 'cpc'| number}}</td>
                                    <td>{{e | sumByColumn: 'cpca'| number}}</td>
                                    <td>{{e | sumByColumn: 'promessa'| number}}</td>
                                    <td>{{e | divideSumColumns: 'contato':'qtd_discado' | corrigePercent | percentage:1}}</td>
                                    <td>{{e | divideSumColumns: 'cpc':'contato' | percentage:1}}</td>
                                    <td>{{e | divideSumColumns: 'cpca':'cpc' | percentage:1}}</td>
                                    <td>{{e | divideSumColumns: 'promessa':'cpca' | percentage:1}}</td>
                            
                             </tr>


                            <tr ng-repeat="c in e" ng-show="showTbody">
                                <td>{{c.status_aluno}}</td>
                                <td>{{c.qtd_discado | number}}</td>
                                <td>{{c.contato | number}}</td>
                                <td>{{c.cpc | number}}</td>
                                <td>{{c.cpca | number}}</td>
                                <td>{{c.promessa | number}}</td>
                                <td>{{c.contato / c.qtd_discado | corrigePercent | percentage:1}}</td>
                                <td>{{c.cpc / c.contato | percentage:1}}</td>
                                <td>{{c.cpca / c.cpc | percentage:1}}</td>
                                <td>{{c.promessa / c.cpca | percentage:1}}</td>
                            </tr>

                            </tbody>

                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!--PRODUÇÃO POR OPERADOR-->
    <div class="row margin-bottom">
        <div class="col-xs-12">
            <h3 class="box-title">Análise por Operador</h3>
            <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.operador" scroll-collapse="true" scroll-y="324px" order="[[4,'desc']]"></d-table>
        </div>
    </div>

    <!-- SIDE BAR CONTROL -->
    <aside class="control-sidebar control-sidebar-dark" ng-if="dashFiltros.status === 200">
        <!-- Create the tabs -->
        <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
            <li class="active"><a data-target="#control-sidebar-filters-tab" data-toggle="tab"><i class="fa fa-filter"></i></a></li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
            <!-- Filtros -->
            <div class="tab-pane active" id="control-sidebar-filters-tab">
                <!--DATA INCIAL-->
                <div class="form-group">
                    <label class="control-sidebar-subheading">Data Inicial</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                    </div>
                </div>

                <!--DATA FINAL-->
                <div class="form-group">
                    <label class="control-sidebar-subheading">Data Final</label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                    </div>
                </div>

                <!--CARTEIRAS-->
                <div class="form-group">
                    <label class="control-sidebar-subheading">Carteiras</label>
                    <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.carteiras" dados="dashFiltros.carteiras"></select2>
                </div>

                <!--STATUS-->
                <div class="form-group">
                    <label class="control-sidebar-subheading">Status Aluno</label>
                    <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.statusAluno" dados="dashFiltros.statusAluno"></select2>
                </div>

                <!--BOTÃO-->
                <div class="form-group">
                    <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()">Carregar Dados</button>
                </div>

            </div>
            <!-- /.tab-pane -->
        </div>
    </aside>
    <!-- /.control-sidebar -->
    <!-- Add the sidebar's background. This div must be placed
    immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>

</div>

<script>
    angular.module('app').controller('ctrl-kroton-horahora', function ($scope, $http, $filter, $interval, dadosPagina) {
    
        dadosPagina.titulo = 'Hora Hora';
        dadosPagina.descricao = 'Kroton Ativos';
        $scope.showTbody = false;

        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
            carteiras: '',
            statusAluno: '',
        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.graficoHora = { indicador: 'promessa', exibir: 'false' };


        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/kroton/dashboard/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.carteiras = r.data.Table;
            $scope.dashFiltros.statusAluno = r.data.Table1;
        });

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/kroton/dashboard/horahora",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;

                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.horahora = data.Table1;
                $scope.dashboard.credor = data.Table2;
                $scope.dashboard.status = data.Table3;
                $scope.dashboard.operador = data.Table4;

                $scope.carregarGraficoHora();
            });
        }

        // carrega o grafico conforme com o indicador escolhido
        $scope.carregarGraficoHora = function () {
            let dados = $scope.dashboard.horahora;
            $scope.dashboard.horas = dados.map(obj => obj.hora);
            switch ($scope.graficoHora.indicador) {
                case 'hitrate':
                    $scope.dashboard.graficoHora = [{ name: 'hitrate', data: dados.map(obj => (obj.contato * 100 / obj.qtd_discado).toFixed(1) * 1) }];
                    break;
                case 'txloc':
                    $scope.dashboard.graficoHora = [{ name: 'txloc', data: dados.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) * 1) }];
                    break;
                case 'txapv':
                    $scope.dashboard.graficoHora = [{ name: 'txapv', data: dados.map(obj => (obj.cpca * 100 / obj.cpc).toFixed(1) * 1) }];
                    break;
                case 'conversao':
                    $scope.dashboard.graficoHora = [{ name: 'conversao', data: dados.map(obj => (obj.promessa * 100 / obj.cpca).toFixed(1) * 1) }];
                    break;
                default:
                    $scope.dashboard.graficoHora = [{ name: $scope.graficoHora.indicador, data: dados.map(obj => obj[$scope.graficoHora.indicador]) }];
            }

        }

        $scope.carregarDashboard();

    });
</script>