@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-viavarejo-pagamento">

    <!-- DAHSBOARD -->
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Pagamento</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none" ng-if="dashFiltros.status == 200">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--SCORE-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Score</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.score" dados="dashFiltros.score" style="width:100%"></select2>
                        </div>

                        <!--REGUA-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Régua</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.regua" dados="dashFiltros.regua" style="width:100%"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-4">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.quantidade | number"></h3>
                        <p>Qtd Total</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-credit-card"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.quantidade_ope | number "></h3>
                        <p>Qtd Operação</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-money"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.quantidade_esp | number "></h3>
                        <p>Qtd Espontaneo</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-money"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-4">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.valor | currency:'R$' "></h3>
                        <p>Valor Total</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-credit-card"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.valor_op | currency:'R$'"></h3>
                        <p>Valor Operação</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-money"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.valor_esp | currency:'R$'"></h3>
                        <p>Valor Espontaneo</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-money"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-8">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Dia Quantidade</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('DiaQuantidade','Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <span class="pull-right">
                            <select ng-model="graf.indicador" ng-change="carregarGrafico()">
                                <option value="total">Total</option>
                                <option value="operacao">Operação</option>
                                <option value="espontaneo">Espontaneo</option>
                            </select>
                        </span>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.qtDia" axis-Categories="dashboard.dias" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Segmento Quantidade</span>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.resultado" style="width: 100%;"></high-charts>
                    </div>
                </div>
            </div>

        </div>

        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-8">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Dia Valor</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('DiaValor','Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.vlDia" axis-Categories="dashboard.dias" plot-Options-Line-Data-Label="true"></high-chart>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Segmento Valor</span>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.resultadoValor" style="width: 100%;"></high-charts>
                    </div>
                </div>
            </div>

        </div>

        <!--PRODUÇÃO POR OPERADOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Operador</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.operador" scroll-collapse="true" scroll-y="324px" order="[[4,'desc']]"></d-table>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="control-sidebar-bg"></div>


</div>

<script>

    angular.module('app').controller('ctrl-viavarejo-pagamento', function ($scope, $http, $filter, $interval, dadosPagina) {
        dadosPagina.titulo = 'Pagamento';
        dadosPagina.descricao = 'Via Varejo'

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

         $scope.graf = {
            indicador: 'total'
        };

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            score: '',
            regua: ''
        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/viavarejo/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            let data = r.data;
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.score = data.Table;
            $scope.dashFiltros.regua = data.Table1;
        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/viavarejo/pagamento",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.dados = data;
                $scope.dashboard.status = r.status;

                $scope.dashboard.dias = r.data.Table1.map(obj => obj.data);

                $scope.dashboard.status = r.status;
                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.operador =  r.data.Table5;

                $scope.carregarGraficoCarteira();
                $scope.carregarGraficoCarteiraValor();
                $scope.carregarGrafico(); 
            });
        }

        // carrega o mapa de acordo com o indicador escolhido
        $scope.carregarGrafico = function () {

            let dadosQtd = $scope.dashboard.dados.Table1;
            let dadosVlr = $scope.dashboard.dados.Table2;
            console.log(dadosQtd);
            switch ($scope.graf.indicador) {
                case 'total':
                    $scope.dashboard.qtDia = [{ name: 'Quantidade', data: dadosQtd.map(obj => (obj.quantidade)) }];
                    $scope.dashboard.vlDia = [{ name: 'Valor', data: dadosVlr.map(obj => (obj.valor)) }];
                    break;
                case 'operacao':
                    $scope.dashboard.qtDia = [{ name: 'Quantidade', data: dadosQtd.map(obj => (obj.quantidade_ope)) }];
                    $scope.dashboard.vlDia = [{ name: 'Valor', data: dadosVlr.map(obj => (obj.valor_op)) }];
                    break;
                case 'espontaneo':
                    $scope.dashboard.qtDia = [{ name: 'Quantidade', data: dadosQtd.map(obj => (obj.quantidade_esp)) }];
                    $scope.dashboard.vlDia = [{ name: 'Valor', data: dadosVlr.map(obj => (obj.valor_esp)) }];
                    break;
                default:
                    $scope.dashboard.qtDia = [{ name: 'Quantidade', data: dadosQtd.map(obj => (obj.quantidade)) }];
                    $scope.dashboard.vlDia = [{ name: 'Valor', data: dadosVlr.map(obj => (obj.valor)) }];
            }
         }


        $scope.carregarGraficoCarteira = function () {
            let dados_status = alasql('select ds_score, sum(quantidade) quantidade from ? group by ds_score', [$scope.dashboard.dados.Table3]);
            dados_status = dados_status.map(o => ({ name: o.ds_score, drilldown: o.ds_score, y: o.quantidade }));

            let dados_substatus = [];
            for (s in dados_status) {
                let d = alasql('select ds_regua, quantidade from ?', [$scope.dashboard.dados.Table3.filter(d => d.ds_score == dados_status[s]['name'])]);

                d = d.map(o => [o.ds_regua, o.quantidade]);
                let obj = {
                    name: dados_status[s]['name'],
                    id: dados_status[s]['name'],
                    data: d
                }
                dados_substatus.push(obj);
            }

            $scope.dashboard.resultado = {
                chart: {
                    type: 'pie'
                },
                title: {
                    text: ''
                },
                plotOptions: {
                    series: {
                        dataLabels: {
                            enabled: true,
                            format: '{point.name}: {point.y}'
                        }
                    }
                },
                tooltip: {
                    headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                    pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.percentage:.2f}%</b> do total<br/>'
                },
                series: [{
                    name: "Score",
                    colorByPoint: true,
                    data: dados_status
                }],
                drilldown: {
                    series: dados_substatus
                },
                credits: {
                    enabled: false
                },
            };
        }

        $scope.carregarGraficoCarteiraValor = function () {
            let dados_status = alasql('select ds_score, sum(valor) valor from ? group by ds_score', [$scope.dashboard.dados.Table4]);
            dados_status = dados_status.map(o => ({ name: o.ds_score, drilldown: o.ds_score, y: o.valor }));

            let dados_substatus = [];
            for (s in dados_status) {
                let d = alasql('select ds_regua, valor from ?', [$scope.dashboard.dados.Table4.filter(d => d.ds_score == dados_status[s]['name'])]);

                d = d.map(o => [o.ds_regua, o.valor]);
                let obj = {
                    name: dados_status[s]['name'],
                    id: dados_status[s]['name'],
                    data: d
                }
                dados_substatus.push(obj);
            }

            $scope.dashboard.resultadoValor = {
                chart: {
                    type: 'pie'
                },
                title: {
                    text: ''
                },
                plotOptions: {
                    series: {
                        dataLabels: {
                            enabled: true,
                            format: '{point.name}: {point.y}'
                        }
                    }
                },
                tooltip: {
                    headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                    pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.percentage:.2f}%</b> do total<br/>'
                },
                series: [{
                    name: "Score",
                    colorByPoint: true,
                    data: dados_status
                }],
                drilldown: {
                    series: dados_substatus
                },
                credits: {
                    enabled: false
                },
            };
        }

        $scope.carregarDashboard();
        

        // extrair dados para excel
        $scope.extrair = function (nomeArquivo, tabela) {
            alasql('SELECT * INTO XLSX("' + nomeArquivo + '.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });

</script>