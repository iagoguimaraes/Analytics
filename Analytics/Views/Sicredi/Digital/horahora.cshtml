@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="sicredidig-horahora">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Hora Hora Digital</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--EMPRESAS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Empresa</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.empresa" dados="dashFiltros.empresas" style="width:100%"></select2>
                        </div>

                        <!--FILAS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Fila</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.fila" dados="dashFiltros.filas" style="width:100%"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="box box-widget widget-user">
            <div class="widget-user-header" style="background: url('/Content/Images/Sicredi/benner_sicredi1.png') center center"></div>
            <div class="box-footer">
                <div class="row">
                    <div class="col-sm-2  col-sm-offset-1 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.discado | megaNumber"></h5>
                            <span class="description-text">Discado</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.contato | megaNumber"></h5>
                            <span class="description-text">Contato</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpc | megaNumber"></h5>
                            <span class="description-text">CPC</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpca | number"></h5>
                            <span class="description-text">CPCA</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.promessa | number"></h5>
                            <span class="description-text">Promessa</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-2 col-sm-offset-1 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.discado_ad | megaNumber"></h5>
                            <span class="description-text">Discado AD</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.contato_ad | megaNumber"></h5>
                            <span class="description-text">Contato AD</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpc_ad | megaNumber"></h5>
                            <span class="description-text">CPC AD</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpca_ad | number"></h5>
                            <span class="description-text">CPCA AD</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.promessa_ad | number"></h5>
                            <span class="description-text">Promessa AD</span>
                        </div>
                    </div>
                </div>

                <div class="row" style="background-color:rgb(36, 156, 89); color:white">
                    <div class="col-sm-2 col-sm-offset-1 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.agente | number"></h5>
                            <span class="description-text">AD</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1"></h5>
                            <span class="description-text">Hit Rate</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1"></h5>
                            <span class="description-text">Tx Loc</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1"></h5>
                            <span class="description-text">Conversao</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.vlr_promessa | currency:'R$ '"></h5>
                            <span class="description-text">$ Saldo Promessas</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!--HORA HORA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Hora</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.horahora">
                            <thead>
                                <tr>
                                    <th>Hora</th>
                                    <th>AD</th>
                                    <th>Discado</th>
                                    <th>Contato</th>
                                    <th>CPC</th>
                                    <th>CPCA</th>
                                    <th>Promessa</th>
                                    <th>R$ Promessa</th>
                                    <th>Discado AD</th>
                                    <th>Contato AD</th>
                                    <th>CPC AD</th>
                                    <th>CPCA AD</th>
                                    <th>Promessa AD</th>
                                    <th>Hit Rate</th>
                                    <th>Tx Loc</th>
                                    <th>Tx Apv</th>
                                    <th>Conversão</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="hora in dashboard.horahora">
                                    <td>{{hora.hora}}</td>
                                    <td>{{hora.agente | number}}</td>
                                    <td>{{hora.discado | number}}</td>
                                    <td>{{hora.contato | number}}</td>
                                    <td>{{hora.cpc | number}}</td>
                                    <td>{{hora.cpca | number}}</td>
                                    <td>{{hora.promessa | number}}</td>
                                    <td>{{hora.vlr_promessa | currency: 'R$ '}}</td>
                                    <td>{{hora.discado_ad | number}}</td>
                                    <td>{{hora.contato_ad | number}}</td>
                                    <td>{{hora.cpc_ad | number}}</td>
                                    <td>{{hora.cpca_ad | number}}</td>
                                    <td>{{hora.promessa_ad | number}}</td>
                                    <td>{{hora.contato / hora.discado | percentage:1}}</td>
                                    <td>{{hora.cpc / hora.contato | percentage:1}}</td>
                                    <td>{{hora.cpca / hora.cpc | percentage:1}}</td>
                                    <td>{{hora.promessa / hora.cpca | percentage:1}}</td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Total</th>
                                    <th>{{dashboard.resumo.agente | number}}</th>
                                    <th>{{dashboard.resumo.discado | number}}</th>
                                    <th>{{dashboard.resumo.contato | number}}</th>
                                    <th>{{dashboard.resumo.cpc | number}}</th>
                                    <th>{{dashboard.resumo.cpca | number}}</th>
                                    <th>{{dashboard.resumo.promessa | number}}</th>
                                    <th>{{dashboard.resumo.vlr_promessa | currency: 'R$ '}}</th>
                                    <th>{{dashboard.resumo.discado_ad | number}}</th>
                                    <th>{{dashboard.resumo.contato_ad | number}}</th>
                                    <th>{{dashboard.resumo.cpc_ad | number}}</th>
                                    <th>{{dashboard.resumo.cpca_ad | number}}</th>
                                    <th>{{dashboard.resumo.promessa_ad | number}}</th>
                                    <th>{{dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1}}</th>
                                    <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</th>
                                    <th>{{dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1}}</th>
                                    <th>{{dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1}}</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!--EMPRESA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Empresa</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.empresa">
                                <thead>
                                    <tr>
                                        <th>Empresa</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Promessa</th>
                                        <th>R$ Promessa</th>
                                        <th>Hit Rate</th>
                                        <th>Tx Loc</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="empresa in dashboard.empresa">
                                        <td>{{empresa.ds_empresa}}</td>
                                        <td>{{empresa.discado | number}}</td>
                                        <td>{{empresa.contato | number}}</td>
                                        <td>{{empresa.cpc | number}}</td>
                                        <td>{{empresa.cpca | number}}</td>
                                        <td>{{empresa.promessa | number}}</td>
                                        <td>{{empresa.vlr_promessa | number}}</td>
                                        <td>{{empresa.contato / empresa.discado | percentage:1}}</td>
                                        <td>{{empresa.cpc / empresa.contato | percentage:1}}</td>
                                        <td>{{empresa.promessa / empresa.cpca | percentage:1}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.discado | number}}</th>
                                        <th>{{dashboard.resumo.contato | number}}</th>
                                        <th>{{dashboard.resumo.cpc | number}}</th>
                                        <th>{{dashboard.resumo.cpca | number}}</th>
                                        <th>{{dashboard.resumo.promessa | number}}</th>
                                        <th>{{dashboard.resumo.vlr_promessa | currency:'R$ '}}</th>
                                        <th>{{dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--GRAFICO POR HORA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Gráfico por Hora</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="grafico.indicador" ng-change="carregarGrafico()">
                                <option value="hitrate">% Hit Rate</option>
                                <option value="txloc">% Loc</option>
                                <option value="txapv">% Apv</option>
                                <option value="conversao">Conversão</option>
                                <option value="contato">Contato</option>
                                <option value="cpc">CPC</option>
                                <option value="cpca">CPCA</option>
                                <option value="promessa">Promessa</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.grafico" axis-Categories="dashboard.horas" plot-Options-Line-Data-Label="true"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--DIAGRAMA-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Diagrama de Finalizações</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <sankey-chart dados="dashboard.diagrama" series-name="Qt Tabulação"></sankey-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--DISCADOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Insucesso no Contato</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.discador" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE ISDN-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise de Isdn Cause</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table5')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <label>ISDN CAUSES: </label>
                            <select ng-change="carregarGraficoIsdn()" ng-model="grafico.isdn">
                                <option ng-repeat="cc in dashboard.listCauses" value="{{cc.id_isdn}}">{{cc.causes}}</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.graficoisdnHora" title="Volume da causa por Hora" axis-Categories="dashboard.horas" plot-Options-Line-Data-Label="true"></high-chart>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.graficoisdn" title="Volume por Causas"  axis-Categories="dashboard.causes" plot-Options-Column-Data-Label="true"></high-chart>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    angular.module('app').controller('sicredidig-horahora', function ($scope, $http, $filter) {
        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
            empresa: '',
            fila: '',
        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.grafico = { indicador: 'promessa', isdn: 19 }

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/sicredi/dashboard/digital/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dados = r.status;

            $scope.dashFiltros.empresas = r.data.Table;
            $scope.dashFiltros.filas = r.data.Table1;

        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/sicredi/dashboard/digital/horahora",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.horahora = data.Table1;
                $scope.dashboard.empresa = data.Table2;
                $scope.dashboard.diagrama = data.Table3;
                $scope.dashboard.discador = [{ name: 'Quantidade', innerSize: '60%', data: data.Table4.map(obj => ({ name: obj.ocorrencia, y: obj.qtd })) }];

                $scope.dashboard.isdncause = data.Table5;
                $scope.dashboard.listCauses = alasql('select distinct id_isdn, causes from ?', [data.Table5]);

                $scope.carregarGrafico();
                $scope.carregarGraficoIsdn();
            });
        }

        // carrega o grafico de acordo com o indicador escolhido
        $scope.carregarGrafico = function () {
            let dados = $scope.dashboard.horahora;
            $scope.dashboard.horas = dados.map(obj => obj.hora);

            switch ($scope.grafico.indicador) {
                case 'hitrate':
                    $scope.dashboard.grafico = [{ name: 'hitrate', color: '#1c6b36', data: dados.map(obj => (obj.contato * 100 / obj.discado).toFixed(1) * 1) }];
                    break;
                case 'txloc':
                    $scope.dashboard.grafico = [{ name: 'txloc', color: '#1c6b36', data: dados.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) * 1) }];
                    break;
                case 'txapv':
                    $scope.dashboard.grafico = [{ name: 'txapv', color: '#1c6b36', data: dados.map(obj => (obj.cpca * 100 / obj.cpc).toFixed(1) * 1) }];
                    break;
                case 'conversao':
                    $scope.dashboard.grafico = [{ name: 'conversao', color: '#1c6b36', data: dados.map(obj => (obj.promessa * 100 / obj.cpca).toFixed(1) * 1) }];
                    break;
                default:
                    $scope.dashboard.grafico = [{ name: $scope.grafico.indicador, color: '#1c6b36', data: dados.map(obj => obj[$scope.grafico.indicador]) }];
            }

        }

        // carrega o grafico de acordo com o indicador escolhido
        $scope.carregarGraficoIsdn = function () {
            let dadosAgrupadosCause = alasql('select causes,sum(qtd) qtd from ? group by causes', [$scope.dashboard.isdncause]);

            let dadosAgrupadosHora = alasql('select hora , sum(qtd) qtd from ? where id_isdn = '+$scope.grafico.isdn+' group by hora ', [$scope.dashboard.isdncause]);
            $scope.dashboard.causes = dadosAgrupadosCause.map(obj => obj.causes);
            
            $scope.dashboard.graficoisdn = [{ name: 'Quantidade', color: 'rgb(28, 107, 54, 0.8)', type: 'column', data: dadosAgrupadosCause.map(obj => obj.qtd) }];
            $scope.dashboard.graficoisdnHora = [{ name: 'Quantidade', color: 'rgb(28, 107, 54, 0.8)', type: 'line', data: dadosAgrupadosHora.map(obj => obj.qtd) }];

        }

        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>