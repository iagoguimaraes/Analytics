@{
    Layout = "~/Views/master.cshtml";
}


<!-- DAHSBOARD -->

<div ng-controller="ctrl-tim-analise">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Estratificação de Base</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--EMPRESA-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Empresa</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.empresa" dados="dashFiltros.empresa" style="width:100%"></select2>
                        </div>

                        <!--SEGMENTO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Segmento</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.segmento" dados="dashFiltros.segmento" style="width:100%"></select2>
                        </div>

                        <!--FAIXA DE ATRASO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Atraso</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.atraso" dados="dashFiltros.atraso" style="width:100%"></select2>
                        </div>

                        <!--PRODUTO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Produto</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.produto" dados="dashFiltros.produto" style="width:100%"></select2>
                        </div>

                        <!--SALDO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Saldo</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.saldo" dados="dashFiltros.saldo" style="width:100%"></select2>
                        </div>

                        <!--ESTADO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Estado</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.estado" dados="dashFiltros.estado" style="width:100%"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-4">
                <div class="small-box bg-white">
                    <div class="inner" style="color:black">
                        <h3 ng-bind="dashboard.resumo.CONTRATO | number"></h3>
                        <p>Total Contratos</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-file-text"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.CONTRATOVLR | megaNumber"></h3>
                        <p>Total Financeiro</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-money"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.TCK_MEDIO | currency:'R$'"></h3>
                        <p>Tckt Medio</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-ticket"></i>
                    </div>
                </div>
            </div>
        </div>

        <!--VALOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Faixa Valor</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('CarteiraValor','Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.valor" axis-Categories="dashboard.faixaValor" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--POR FAIXA DE ATRASO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Faixa de Atraso</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('CarteiraAtraso','Table5')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.atraso" axis-Categories="dashboard.faixaAtraso" plot-Options-Line-Data-Label="true" type="line"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--CARTEIRAS-->
        <div class="row margin-bottom">
            <!--EMPRESA-->
            <div class="col-xs-6 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Contratos por empresa</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('CarteiraIdade','Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.empresa" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>
            <!--CARTEIRAS-->
            <div class="col-xs-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Contratos por carteira</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('CarteiraGrupo','Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.carteira" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <div class="row margin-bottom">
            <!--SITUAÇÃO-->
            <div class="col-xs-6 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Contratos por situação</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table6')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.situacao" height="600" axis-Categories="dashboard.faixaSituacao" plot-Options-Bar-Data-Label="true" type="bar"></high-chart>
                    </div>
                </div>
            </div>
            <!--POR ESTADO-->
            <div class="col-xs-12 col-md-6">
                <div class="card">
                    <div id="info" class="card-header">
                        <span class="card-header-title">Contratos por estado</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('estado','Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <label>
                                <input type="radio" ng-model="graficoMapa.exibir" value="false" />
                                Tabela
                            </label>
                            <label>
                                <input type="radio" ng-model="graficoMapa.exibir" value="true" checked="checked" />
                                Gráfico
                            </label>
                        </small>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive" ng-show="graficoMapa.exibir == 'true'">
                            <div class="row">
                                <div class="col-xs-12 col-md-5">
                                    <div class="small-box bg-green-active">
                                        <div class="inner">
                                            <p><h4>Qtd - {{dashboard.mapa.estado}}</h4></p>
                                            <h3 ng-bind="dashboard.mapa.quantidade | number"></h3>
                                            <h4 ng-bind="(dashboard.mapa.percentual)+' %'"></h4>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-xs-12 col-md-7">
                                    <div class="small-box bg-blue-active">
                                        <div class="inner">
                                            <p><h4>Valor - {{dashboard.mapa.estado}}</h4></p>
                                            <h3 ng-bind="dashboard.mapa.valor | currency: 'R$ '"></h3>
                                            <h4 ng-bind="dashboard.mapa.ticket_medio | currency: 'R$ '"></h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <mapa-brasil style="height: 400px" width="100%" dados="dashboard.estado" ng-change="mudarEstado(idSelecionadoMapa)" ng-model="idSelecionadoMapa"></mapa-brasil>
                        </div>

                        <div class="table-responsive" ng-show="graficoMapa.exibir == 'false'">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.estado">
                                <thead>
                                    <tr>
                                        <th>Região</th>
                                        <th>Quantidade</th>
                                        <th>Valor</th>
                                        <th>Percentual</th>
                                        <th>Ticket Médio</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="e in dashboard.estado | groupBy: 'regiao'">
                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{e[0].regiao}}
                                        </td>
                                        <td>{{e | sumByColumn: 'quantidade'| number}}</td>
                                        <td>{{e | sumByColumn: 'valor'| currency: 'R$ '}}</td>
                                        <td>{{e | sumByColumn: 'percentual' | number: 2 }}</td>
                                        <td>{{e | avgColumn: 'ticket_medio' | number: 2}}</td>
                                    </tr>
                                    <tr ng-repeat="p in e" ng-show="showTbody">
                                        <td>{{p.estado}}</td>
                                        <td>{{p.quantidade | number}}</td>
                                        <td>{{p.valor | currency: 'R$ '}}</td>
                                        <td>{{p.percentual }}</td>
                                        <td>{{p.ticket_medio | currency: 'R$ '}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    angular.module('app').controller('ctrl-tim-analise', function ($scope, $http, $filter, $interval, dadosPagina) {
        dadosPagina.titulo = 'Estratificação de Base';
        dadosPagina.descricao = 'Tim Telecomunicações'

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            empresa: '',
            segmento: '',
            atraso: '',
            produto: '',
            saldo: '',
            estado: '',
        };

        $scope.mapa = {
            indicador: 'percentual'
        };

        $scope.idSelecionadoMapa = '';
        $scope.graficoMapa = { exibir: 'true' };
        $scope.dashFiltros = {};
        $scope.dashboard = {};

        //carregar os filtros
        $http({
            method: 'GET',
            url: "/api/tim/dashboard/humano/filtros",
        }).then(function success(r) {
            $scope.dados = r.status;
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.empresa = r.data.Table;
            $scope.dashFiltros.segmento = r.data.Table1;
            $scope.dashFiltros.atraso = r.data.Table2;
            $scope.dashFiltros.produto = r.data.Table9;
            $scope.dashFiltros.saldo = r.data.Table7;
            $scope.dashFiltros.estado = r.data.Table10;


        });

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/tim/dashboard/humano/baseativa",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                let data = r.data;
                $scope.dashboard.dados = r.data;
                $scope.dashboard.resumo = data.Table[0];


                $scope.dashboard.faixaCarteira = data.Table1.map(obj => obj.empresa);
                $scope.dashboard.faixaEmpresa = data.Table2.map(obj => obj.ds_empresa);
                $scope.dashboard.faixaValor = data.Table3.map(obj => obj.ds_fx_saldo);
                $scope.dashboard.faixaAtraso = data.Table5.map(obj => obj.ds_faixaAtraso);
                $scope.dashboard.faixaSituacao = data.Table6.map(obj => obj.ds_situacao);

                let indicador = 'CONTRATO';
                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.atraso = [{ name: [indicador], data: data.Table5.map(obj => (obj[indicador])), color: '#0073b7' }];
                //$scope.dashboard.idade = [{ name: [indicador], data: data.Table2.map(obj => (obj[indicador])), color: '#0073b7' }];
                $scope.dashboard.empresa = [{ name: 'Quantidade', innerSize: '60%', data: data.Table2.map(obj => ({ name: obj.ds_empresa, y: obj.CONTRATO })) }];
                $scope.dashboard.valor = [{ name: [indicador], data: data.Table3.map(obj => (obj[indicador])), color: '#0073b7' }];
                $scope.dashboard.carteira = [{ name: 'Quantidade', data: r.data.Table1.map(obj => ({ name: obj.empresa, y: obj.CONTRATO })) }];
                //$scope.dashboard.carteira = [{ name: 'Quantidade', innerSize: '60%', data: data.Table1.map(obj => ({ name: obj.empresa, y: obj.CONTRATO })) }];
                $scope.dashboard.situacao = [{ name: 'Quantidade', data: data.Table6.map(obj => (obj.CONTRATO)), color: '#0073b7' }];

                $scope.dashboard.estado = alasql('select "BR-" + uf id, quantidade [percent], percentual [value], uf, estado, regiao, quantidade, valor, ticket_medio, percentual from ?', [data.Table4]);


                $scope.dashboard.maiorUF = alasql('select top 1 "BR-" + uf id from ?', [data.Table4])[0];

                $scope.mudarEstado($scope.dashboard.maiorUF);

                //$scope.carregarMapa();

            });
        }

        $scope.mudarEstado = function (id) {

            let dados = alasql('select id, [value], uf, estado, regiao, quantidade, valor, percentual, ticket_medio from ? where id like ("%' + id + '%")', [$scope.dashboard.estado])[0];
            $scope.dashboard.mapa = dados;
        }

        // carrega o mapa de acordo com o indicador escolhido
        $scope.carregarMapa = function () {
            let dados = $scope.dashboard.dados.Table4;
            switch ($scope.mapa.indicador) {
                case 'percentual':
                    $scope.dashboard.mapa = dados.map(obj => ({ id: 'BR-' + obj.ds_estado, value: (obj.percentual) }));
                    break;
                case 'quantidade':
                    $scope.dashboard.mapa = dados.map(obj => ({ id: 'BR-' + obj.ds_estado, value: (obj.quantidade) }));
                    break;
                default:
                    $scope.dashboard.mapa = dados.map(obj => ({ id: 'BR-' + obj.ds_estado, value: obj[$scope.mapa.indicador] }));
            }
        }


        $scope.carregarDashboard();

        // extrair dados para excel
        $scope.extrair = function (nomeArquivo, tabela) {
            alasql('SELECT * INTO XLSX("' + nomeArquivo + '.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>
