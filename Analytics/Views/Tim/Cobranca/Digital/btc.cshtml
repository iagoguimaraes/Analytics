@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-tim-btc">
    <div ng-if="dashboard.r.status === 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Best Time to Call</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--PRODUTO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Produtos</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.produtos" dados="dashFiltros.produtos"></select2>
                        </div>

                        <!--FAIXA ATRASO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Faixa de Atraso</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.faixa" dados="dashFiltros.faixa"></select2>
                        </div>

                        <!--ROTA-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Rota</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.rota" dados="dashFiltros.rota"></select2>
                        </div>

                        <!--TIPO DE TELEFONE-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Tipo de Telefone</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.tptelefone" dados="dashFiltros.telefone"></select2>
                        </div>

                        <!--TIPO DE CHAMADA-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Tipo de Chamada</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.tpchamada" dados="dashFiltros.chamada"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!--BTC-->
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">BTC</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.hitratePorHora" axis-Categories="dashboard.horas" plot-Options-Column-Data-Label="true" type="column" height="200"></high-chart>
                        <high-chart series="dashboard.txlocPorHora" axis-Categories="dashboard.horas" plot-Options-Column-Data-Label="true" type="column" height="200"></high-chart>
                        <high-chart series="dashboard.conversaoPorHora" axis-Categories="dashboard.horas" plot-Options-Column-Data-Label="true" type="column" height="200"></high-chart>
                    </div>
                </div>
            </div>

            <!--REGIAO-->
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Analise por Região</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="mapa.indicador" ng-change="carregarMapa()">
                                <option value="hitrate">Hit Rate</option>
                                <option value="txloc">Tx Loc</option>
                                <option value="txapv">Tx Apv</option>
                                <option value="conversao">Conversão</option>
                                <option value="discado">Discado</option>
                                <option value="contato">Contato</option>
                                <option value="cpc">CPC</option>
                                <option value="cpca">CPCA</option>
                                <option value="promessa">Promessa</option>
                                <option value="saldo">R$ Promessa</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <mapa-brasil style="height: 600px" width="100%" dados="dashboard.mapa"></mapa-brasil>
                    </div>
                </div>
            </div>
        </div>

        <!--ROTA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Analise por Rota</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xs-12 col-md-4">
                                <h4 class="text-center">Volume por Rota</h4>
                                <high-chart series="dashboard.quantidadePorRota" type="pie" height="300" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                            </div>
                            <div class="col-xs-12 col-md-4">
                                <h4 class="text-center">Hit Rate por Rota</h4>
                                <high-chart series="dashboard.hitratePorRota" axis-Categories="dashboard.rotas" plot-Options-Bar-Data-Label="true" type="bar" height="300"></high-chart>
                            </div>
                            <div class="col-xs-12 col-md-4">
                                <h4 class="text-center">Tx Loc por Rota</h4>
                                <high-chart series="dashboard.txlocPorRota" axis-Categories="dashboard.rotas" plot-Options-Column-Data-Label="true" type="column" height="300"></high-chart>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--TIPO TEL-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Analise por Tipo de Telefone</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xs-12 col-md-4">
                                <h4 class="text-center">Volume por Tipo de Telefone</h4>
                                <high-chart series="dashboard.quantidadePorTel" type="pie" height="300" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                            </div>
                            <div class="col-xs-12 col-md-4">
                                <h4 class="text-center">Hit Rate por Tipo de Telefone</h4>
                                <high-chart series="dashboard.hitratePorTel" axis-Categories="dashboard.tipos" plot-Options-Bar-Data-Label="true" type="bar" height="300"></high-chart>
                            </div>
                            <div class="col-xs-12 col-md-4">
                                <h4 class="text-center">Tx Loc por Tipo de Telefone</h4>
                                <high-chart series="dashboard.txlocPorTel" axis-Categories="dashboard.tipos" plot-Options-Column-Data-Label="true" type="column" height="300"></high-chart>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    
    angular.module('app').controller('ctrl-tim-btc', function ($scope, $http, $filter) {
        $scope.dashboard = {};
        $scope.mapa = {
            indicador: 'hitrate'
        }

        $scope.dashFiltros = {};

        // filtros iniciais
        let dtini = new Date();
        dtini.setDate(dtini.getDate() - 7);

        $scope.filtros = {
            dtini: $filter('date')(dtini, "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
            produtos: '',
            faixa: '',
            rota: '',
            tptelefone: '',
            tpchamada: '',
        };

        // carrega os filtros e colocar no scope
        $scope.carregarFiltros = function () {
            $http({
                method: 'GET',
                url: "/api/tim/dashboard/filtros",
            }).then(function success(r) {

                $scope.dashFiltros.status = r.status;
                $scope.dashFiltros.produtos = r.data.Table;
                $scope.dashFiltros.faixa = r.data.Table10;
                $scope.dashFiltros.rota = r.data.Table3;
                $scope.dashFiltros.telefone = r.data.Table6;
                $scope.dashFiltros.chamada = r.data.Table5;
            });
        }


        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/tim/dashboard/btc",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.r = r;
                $scope.dashboard.dados = r.data;

                $scope.dashboard.horas = r.data.Table.map(obj => obj.hora_nome);
                $scope.dashboard.rotas = r.data.Table2.map(obj => obj.rota);
                $scope.dashboard.tipos = r.data.Table3.map(obj => obj.tipo_telefone);

                $scope.dashboard.hitratePorHora = [{ name: 'HitRate', data: r.data.Table.map(obj => (obj.contato * 100 / obj.discado).toFixed(1) / 1) }];
                $scope.dashboard.txlocPorHora = [{ name: 'TxLoc', data: r.data.Table.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) / 1) }];
                $scope.dashboard.conversaoPorHora = [{ name: 'Conversão', data: r.data.Table.map(obj => (obj.promessa * 100 / obj.cpca).toFixed(1) / 1) }];

                $scope.dashboard.quantidadePorRota = [{ name: 'Qtd', data: r.data.Table2.map(obj => ({ name: obj.rota, y: obj.discado })) }];
                $scope.dashboard.hitratePorRota = [{ name: 'HitRate', data: r.data.Table2.map(obj => (obj.contato * 100 / obj.discado).toFixed(1) / 1) }];
                $scope.dashboard.txlocPorRota = [{ name: 'TxLoc', data: r.data.Table2.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) / 1) }];

                $scope.dashboard.quantidadePorTel = [{ name: 'Qtd', data: r.data.Table3.map(obj => ({ name: obj.tipo_telefone, y: obj.discado })) }];
                $scope.dashboard.hitratePorTel = [{ name: 'HitRate', data: r.data.Table3.map(obj => (obj.contato * 100 / obj.discado).toFixed(1) / 1) }];
                $scope.dashboard.txlocPorTel = [{ name: 'TxLoc', data: r.data.Table3.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) / 1) }];

                $scope.dashboard.dddhit = r.data.Table4;

                $scope.carregarMapa();

            });
        }

        // carrega o mapa de acordo com o indicador escolhido
        $scope.carregarMapa = function () {
            let dados = $scope.dashboard.r.data.Table1;
            switch ($scope.mapa.indicador) {
                case 'hitrate':
                    $scope.dashboard.mapa = dados.map(obj => ({ id: 'BR-' + obj.uf, value: (obj.contato * 100 / obj.discado).toFixed(1) }));
                    break;
                case 'txloc':
                    $scope.dashboard.mapa = dados.map(obj => ({ id: 'BR-' + obj.uf, value: (obj.cpc * 100 / obj.contato).toFixed(1) }));
                    break;
                case 'txapv':
                    $scope.dashboard.mapa = dados.map(obj => ({ id: 'BR-' + obj.uf, value: (obj.cpca * 100 / obj.cpc).toFixed(1) }));
                    break;
                case 'conversao':
                    $scope.dashboard.mapa = dados.map(obj => ({ id: 'BR-' + obj.uf, value: (obj.promessa * 100 / obj.cpca).toFixed(1) }));
                    break;
                default:
                    $scope.dashboard.mapa = dados.map(obj => ({ id: 'BR-' + obj.uf, value: obj[$scope.mapa.indicador] }));
            }
        }

        $scope.carregarFiltros();
        $scope.carregarDashboard();

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });

</script>