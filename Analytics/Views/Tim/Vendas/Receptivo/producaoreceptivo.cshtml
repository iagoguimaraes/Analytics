            <!--POR OPERADOR-->
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Operador</span>
                    </div>
                    <div class="card-body">
                        <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.operador" scroll-collapse="true" scroll-y="300px" order="[[1,'desc']]"></d-table>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>



<script>
    angular.module('app').controller('ctrl-tim-horahora-atom', function ($scope, $http, $filter) {

        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
        };

        $scope.dashboard = {};
        $scope.grafico = { indicador: 'hora' };
        $scope.tabela = { indicador: 'hora' };

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/tim/vendas/migracao/producaorec",
                data: $scope.filtros,
            }).then(function success(r) {
                // #1 RESUMO
                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.horahora = r.data.Table1;
                $scope.dashboard.diadia = r.data.Table4;

                $scope.dashboard.recusa = [{ name: 'Quantidade', innerSize: '60%', data: r.data.Table5.map(obj => ({ name: obj.recusa, y: obj.quantidade })) }];
                $scope.dashboard.discador = [{ name: 'Quantidade', innerSize: '10%', data: r.data.Table6.map(obj => ({ name: obj.tabulacao, y: obj.quantidade })) }];

                // #3 PLANO
                $scope.dashboard.plano = r.data.Table2;

                // #6 OPERADOR
                $scope.dashboard.operador = r.data.Table3;

                // STATUS DASHBOARD OK
                $scope.dashboard.status = r.status;
                $scope.carregarGrafico();
                $scope.carregarTabela()

            });
        }

        // carrega o grafico de acordo com o indicador escolhido
        $scope.carregarTabela = function () {

            switch ($scope.tabela.indicador) {
                case 'hora':
                    $scope.dashboard.tabela = $scope.dashboard.horahora;

                    break;
                case 'dia':
                    $scope.dashboard.tabela = $scope.dashboard.diadia;

                    break;
                default:
                    $scope.dashboard.tabela = $scope.dashboard.horahora;
            }

        }

        // carrega o grafico de acordo com o indicador escolhido
        $scope.carregarGrafico = function () {
            let dados;

            switch ($scope.grafico.indicador) {
                case 'hora':
                    dados = $scope.dashboard.horahora;
                    $scope.dashboard.valor = dados.map(obj => obj.hora);

                    $scope.dashboard.grafico = [
                        { name: 'CPC', type: 'column', color: 'rgba(124, 197, 230, 1)', data: dados.map(obj => obj.cpc) },
                        { name: 'Recusa', type: 'column', color: 'rgb(1, 70, 145)', data: dados.map(obj => obj.recusa) },
                        { name: '% Recusa', yAxis: 1, type: 'spline', color: 'rgba(232, 2, 39, 1)', data: dados.map(obj => (obj.recusa * 100 / obj.cpc).toFixed(1) * 1) }
                    ];
                    break;
                case 'dia':
                    dados = $scope.dashboard.diadia;
                    $scope.dashboard.valor = dados.map(obj => obj.data);

                    $scope.dashboard.grafico = [
                        { name: 'CPC', type: 'column', color: 'rgba(124, 197, 230, 1)', data: dados.map(obj => obj.cpc) },
                        { name: 'Recusa', type: 'column', color: 'rgb(1, 70, 145)', data: dados.map(obj => obj.recusa) },
                        { name: '% Recusa', yAxis: 1, type: 'spline', color: 'rgba(232, 2, 39, 1)', data: dados.map(obj => (obj.recusa * 100 / obj.cpc).toFixed(1) * 1) }
                    ];
                    break;
                default:
                    dados = $scope.dashboard.horahora;
                    $scope.dashboard.valor = dados.map(obj => obj.hora);

                    $scope.dashboard.grafico = [
                        { name: 'CPC', type: 'column', color: 'rgba(124, 197, 230, 1)', data: dados.map(obj => obj.cpc) },
                        { name: 'Recusa', type: 'column', color: 'rgb(1, 70, 145)', data: dados.map(obj => obj.recusa) },
                        { name: '% Recusa', yAxis: 1, type: 'spline', color: 'rgba(232, 2, 39, 1)', data: dados.map(obj => (obj.recusa * 100 / obj.cpc).toFixed(1) * 1) }
                    ];
            }

        }

        $scope.carregarDashboard();
    });

</script>