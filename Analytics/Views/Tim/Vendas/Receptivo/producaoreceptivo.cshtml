@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-tim-horahora-atom">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Produção Receptivo</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row  margin-bottom">
            <!--RESUMO-->
            <div class="col-xs-12 col-md-3 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Resumo do Período</span>
                    </div>
                    <div class="card-body">
                        <div class="small-box bg-blue">
                            <div class="inner">
                                <b>Atendentes:</b><span class="pull-right" ng-bind="dashboard.resumo.agentes | megaNumber"></span>
                            </div>
                        </div>
                        <div class="small-box bg-gray">
                            <div class="inner">
                                <b>Discado:</b><span class="pull-right" ng-bind="dashboard.resumo.discado | megaNumber"></span>
                            </div>
                        </div>
                        <div class="small-box bg-aqua">
                            <div class="inner">
                                <b>Contato:</b><span class="pull-right" ng-bind="dashboard.resumo.contato | megaNumber"></span>
                            </div>
                        </div>
                        <div class="small-box bg-red">
                            <div class="inner">
                                <b>CPC:</b><span class="pull-right" ng-bind="dashboard.resumo.cpc | megaNumber"></span>
                            </div>
                        </div>
                        <div class="small-box bg-yellow">
                            <div class="inner">
                                <b>Venda:</b><span class="pull-right" ng-bind="dashboard.resumo.venda | number"></span>
                            </div>
                        </div>
                        <div class="small-box bg-green">
                            <div class="inner">
                                <b>Recusa:</b><span class="pull-right" ng-bind="dashboard.resumo.recusa | megaNumber"></span>
                            </div>
                        </div>
                        <div class="small-box bg-gray-active">
                            <div class="inner">
                                <b>Hit Rate:</b><span class="pull-right" ng-bind="dashboard.resumo.contato/dashboard.resumo.discado | percentage:1"></span>
                            </div>
                        </div>
                        <div class="small-box bg-gray-active" ">
                            <div class="inner">
                                <b>% Venda:</b><span class="pull-right" ng-bind="dashboard.resumo.venda/dashboard.resumo.cpc | percentage:1"></span>
                            </div>
                        </div>
                        <div class="small-box bg-gray-active" ">
                            <div class="inner">
                                <b>% Recusa:</b><span class="pull-right" ng-bind="dashboard.resumo.recusa/dashboard.resumo.cpc | percentage:1"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-9 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Percentual de Recusa Visão: {{grafico.indicador}} </span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="grafico.indicador" ng-change="carregarGrafico()">
                                <option value="hora">Hora</option>
                                <option value="dia">Dia</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-chart class="margin-bottom" series="dashboard.grafico" axis-Categories="dashboard.valor" type="column"
                                    plot-Options-Column-Stacking="normal" plot-Options-spline-Data-Label="true" plot-Options-Line-Data-Label="true" height="520px"></high-chart>
                    </div>
                </div>
            </div>

            <!--INSUCESSO RECUSA-->
            <div class="col-xs-12 col-md-8 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Motivos da Recusa</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.recusa" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>

            <!--INSUCESSO CONTATO-->
            <div class="col-xs-12 col-md-4 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Insucesso no Contato</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.discador" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>


            <!--ANALISE POR HORA-->
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise Visão: {{tabela.indicador}}</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table5')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="tabela.indicador" ng-change="carregarTabela()">
                                <option value="hora">Hora</option>
                                <option value="dia">Dia</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.tabela">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Atendentes</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>Venda</th>
                                        <th>Recusa</th>
                                        <th>Hit Rate</th>
                                        <th>Tx Loc</th>
                                        <th>Conversão</th>
                                        <th>Rejeição</th>
                                        <th>TMA Rejeição</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="data in dashboard.tabela">
                                        <td>{{data.valor}}</td>
                                        <td>{{data.agentes}}</td>
                                        <td>{{data.discado | number}}</td>
                                        <td>{{data.contato | number}}</td>
                                        <td>{{data.cpc | number}}</td>
                                        <td>{{data.venda | number}}</td>
                                        <td>{{data.recusa | number}}</td>
                                        <td>{{data.contato / data.discado | percentage:1}}</td>
                                        <td>{{data.cpc / data.contato | percentage:1}}</td>
                                        <td>{{data.venda / data.cpc | percentage:1}}</td>
                                        <td>{{data.recusa / data.cpc | percentage:1}}</td>
                                        <td>{{data.tempo | formatTimer}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.agentes | number}}</th>
                                        <th>{{dashboard.resumo.discado | number}}</th>
                                        <th>{{dashboard.resumo.contato | number}}</th>
                                        <th>{{dashboard.resumo.cpc | number}}</th>
                                        <th>{{dashboard.resumo.venda | number}}</th>
                                        <th>{{dashboard.resumo.recusa | number}}</th>
                                        <th>{{dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.venda / dashboard.resumo.cpc | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.recusa / dashboard.resumo.cpc | percentage: 1}}</th>
                                        <td>{{dashboard.resumo.tempo | formatTimer}}</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

