@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-tim-producao">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Receptivo - Produção</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.qtd | megaNumber"></h3>
                        <p>Acionamento</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-phone-square"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-light-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.contato | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.contato / dashboard.resumo.qtd | percentage: 1"></h4>
                        <p>Contato</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-headphones"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.efetivo | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.efetivo / dashboard.resumo.contato | percentage: 1"></h4>
                        <p>Efetivo</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-bullseye"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.venda | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.venda / dashboard.resumo.efetivo | percentage: 1"></h4>
                        <p>Vendas</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-thumbs-o-up"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.chips | number"></h3>
                        <p>Chips</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-caret-square-o-up"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.ativacao | number"></h3>
                        <p>Ativações</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-check"></i>
                    </div>
                </div>
            </div>

        </div>

        <!--DIA A DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Dia</span>
                        <small style="margin-left: 10px;">
                            <span>Visualizar</span>
                            <select ng-model="mostrargrafico">
                                <option value="true">Gráfico</option>
                                <option value="false">Tabela</option>
                            </select>
                        </small>
                        <small class="pull-right" ng-show="mostrargrafico == 'true'">
                            <span>Indicadores:</span>
                            <select ng-model="dashboard.indicadorDia" ng-change="carregarGraficoDia()">
                                <option value="qtd">Acionamento</option>
                                <option value="contato">Contato</option>
                                <option value="efetivo">Efetivo</option>
                                <option value="venda">Venda</option>
                                <option value="recusa">Recusa</option>
                                <option value="chips">Chips</option>
                                <option value="ativacao">Ativações</option>
                                <option value="txvenda">% Venda</option>
                                <option value="txrecusa">% Recusa</option>
                            </select>
                            <select ng-model="dashboard.indicadorDia2" ng-change="carregarGraficoDia()">
                                <option value="qtd">Acionamento</option>
                                <option value="contato">Contato</option>
                                <option value="efetivo">Efetivo</option>
                                <option value="venda">Venda</option>
                                <option value="recusa">Recusa</option>
                                <option value="chips">Chips</option>
                                <option value="ativacao">Ativações</option>
                                <option value="txvenda">% Venda</option>
                                <option value="txrecusa">% Recusa</option>
                                <option value="">Ocultar</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <!--GRAFICO-->
                        <high-charts config="dashboard.dia" ng-show="mostrargrafico == 'true'" style="width: 100%; height: 350px"></high-charts>
                        <!--TABELA-->
                        <div class="table-responsive" ng-show="mostrargrafico == 'false'">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.diadia">
                                <thead>
                                    <tr>
                                        <th>Dia</th>
                                        <th>Acionamento</th>
                                        <th>Contato</th>
                                        <th>Efetivo</th>
                                        <th>Recusa</th>
                                        <th>Venda</th>
                                        <th>% Recusa</th>
                                        <th>% Venda</th>
                                        <th>Ativações</th>
                                        <th>Chips</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="c in dashboard.diadia">
                                        <td>{{c.data}}</td>
                                        <td>{{c.qtd | number}}</td>
                                        <td>{{c.contato | number}}</td>
                                        <td>{{c.efetivo | number}}</td>
                                        <td>{{c.recusa | number}}</td>
                                        <td>{{c.venda | number}}</td>
                                        <td>{{c.recusa / c.efetivo | percentage:1}}</td>
                                        <td>{{c.venda / c.efetivo | percentage:1}}</td>
                                        <td>{{c.ativacao | number}}</td>
                                        <td>{{c.chips | number}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--PRODUTO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Vendas por Produto</span>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.produto">
                            <thead>
                                <tr>
                                    <th>Produto</th>
                                    <th>Vendas</th>
                                    <th>Chips</th>
                                    <th>Ativações</th>
                                </tr>
                            </thead>
                            <tbody ng-repeat="c in dashboard.produto | groupBy: 'plano'">

                                <tr class="text-bold">
                                    <td class="text-bold">
                                        <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                        {{c[0].plano}}
                                    </td>
                                    <td>{{c | sumByColumn: 'venda' | number}}</td>
                                    <td>{{c | sumByColumn: 'chips'| number}}</td>
                                    <td>{{c | sumByColumn: 'ativacao'| number}}</td>
                                </tr>

                                <tr ng-repeat="p in c" ng-show="showTbody">
                                    <td>{{p.resultado}}</td>
                                    <td>{{p.venda | number}}</td>
                                    <td>{{p.chips | number}}</td>
                                    <td>{{p.ativacao | number}}</td>
                                </tr>

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!--SUPERVISOR/OPERADOR-->
        <div class="row">
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise da Operação</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.operacao">
                                <thead>
                                    <tr>
                                        <th>Operador</th>
                                        <th>#</th>
                                        <th>Acionamento</th>
                                        <th>Contato</th>
                                        <th>Efetivo</th>
                                        <th>Recusa</th>
                                        <th>Venda</th>
                                        <th>% Recusa</th>
                                        <th>% Venda</th>
                                        <th>Chips</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="c in dashboard.operacao | groupBy: 'supervisor'">

                                    <tr class="text-bold">
                                        <td class="text-bold">
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{c[0].supervisor}}
                                        </td>
                                        <td>{{c.length}}</td>
                                        <td>{{c | sumByColumn: 'qtd' | number}}</td>
                                        <td>{{c | sumByColumn: 'contato'| number}}</td>
                                        <td>{{c | sumByColumn: 'efetivo'| number}}</td>
                                        <td>{{c | sumByColumn: 'recusa'| number}}</td>
                                        <td>{{c | sumByColumn: 'venda'| number}}</td>
                                        <td>{{c | divideSumColumns: 'recusa':'efetivo' | percentage:1}}</td>
                                        <td>{{c | divideSumColumns: 'venda':'efetivo' | percentage:1}}</td>
                                        <td>{{c | sumByColumn: 'chips'| number}}</td>
                                    </tr>

                                    <tr ng-repeat="p in c" ng-show="showTbody">
                                        <td colspan="2">{{p.operador}}</td>
                                        <td>{{p.qtd | number}}</td>
                                        <td>{{p.contato | number}}</td>
                                        <td>{{p.efetivo | number}}</td>
                                        <td>{{p.recusa | number}}</td>
                                        <td>{{p.venda | number}}</td>
                                        <td>{{p.recusa / p.efetivo | percentage:1}}</td>
                                        <td>{{p.venda / p.efetivo | percentage:1}}</td>
                                        <td>{{p.chips | number}}</td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--RESULTADO E LOTE-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Tabulações</span>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.resultado" style="width: 100%; height: 300px"></high-charts>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Lote</span>
                        <small class="pull-right" ng-show="mostrargrafico == 'true'">
                            <span>Indicador:</span>
                            <select ng-model="dashboard.indicadorLote" ng-change="carregarGraficoLote()">
                                <option value="qtd">Acionamento</option>
                                <option value="contato">Contato</option>
                                <option value="efetivo">Efetivo</option>
                                <option value="venda">Venda</option>
                                <option value="recusa">Recusa</option>
                                <option value="chips">Chips</option>
                                <option value="ativacao">Ativações</option>
                                <option value="txvenda">% Venda</option>
                                <option value="txrecusa">% Recusa</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.lote" style="width: 100%; height: 300px"></high-charts>
                    </div>
                </div>
            </div>
        </div>

        <!--WORKFLOW-->
        <div class="row margin-bottom">
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Workflow</span>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.workflow" style="width: 100%; height: 300px"></high-charts>
                    </div>
                </div>
            </div>
        </div>

        <!--ORIGEM ATENDIMENTO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Origem Atendimento</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.origem">
                                <thead>
                                    <tr>
                                        <th>Origem</th>
                                        <th>Acionamento</th>
                                        <th>Contato</th>
                                        <th>Efetivo</th>
                                        <th>Recusa</th>
                                        <th>Venda</th>
                                        <th>% Recusa</th>
                                        <th>% Venda</th>
                                        <th>Chips</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="c in dashboard.origem">
                                        <td>{{c.origematendimento}}</td>
                                        <td>{{c.qtd | number}}</td>
                                        <td>{{c.contato | number}}</td>
                                        <td>{{c.efetivo | number}}</td>
                                        <td>{{c.recusa | number}}</td>
                                        <td>{{c.venda | number}}</td>
                                        <td>{{c.recusa / c.efetivo | percentage:1}}</td>
                                        <td>{{c.venda / c.efetivo | percentage:1}}</td>
                                        <td>{{c.chips | number}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-tim-producao', function ($scope, $http, $filter) {
       
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
        };

        $scope.dashboard = {
            indicadorDia: 'venda',
            indicadorDia2: 'ativacao',
            indicadorLote: 'venda'
        };

        $scope.mostrargrafico = 'true';

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/tim/vendas/receptivo/producao",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.diadia = r.data.Table1;
                $scope.dashboard.operacao = r.data.Table2;
                $scope.dashboard.origem = r.data.Table6;
                $scope.dashboard.produto = r.data.Table7;
               
                $scope.carregarGraficoDia();
                $scope.carregarGraficoResultado();
                $scope.carregarGraficoWorkflow();
                $scope.carregarGraficoLote();

                $scope.dashboard.status = r.status;
            });
        }

        $scope.carregarGraficoDia = function () {
            $scope.dashboard.dia = {
                title: {
                    text: ''
                },
                yAxis: {
                    title: {
                        text: ''
                    },
                },
                xAxis: {
                    categories: $scope.dashboard.dados.Table1.map(o => o.data)
                },
                series: [
                    {
                        type: 'line',
                        name: $scope.dashboard.indicadorDia,
                        color: 'rgba(0,51,153,0.6)',
                        data: $scope.dashboard.dados.Table1.map(o => o[$scope.dashboard.indicadorDia]),
                        dataLabels: {
                            enabled: true
                        }
                    },
                    {
                        type: 'column',
                        name: $scope.dashboard.indicadorDia2,
                        color: 'rgba(119,119,119,0.8)',
                        data: $scope.dashboard.dados.Table1.map(o => o[$scope.dashboard.indicadorDia2]),
                        dataLabels: {
                            enabled: true
                        }
                    },
                ],
                credits: {
                    enabled: false
                }
            };
        }
        $scope.carregarGraficoResultado = function () {
            let dados_status = alasql('select status, sum(quantidade) quantidade from ? group by status', [$scope.dashboard.dados.Table3]);
            dados_status = dados_status.map(o => ({ name: o.status, drilldown: o.status, y: o.quantidade }));
            let dados_substatus = [];
            for (s in dados_status) {
                let d = alasql('select substatus, quantidade from ?', [$scope.dashboard.dados.Table3.filter(d => d.status == dados_status[s]['name'])]);
                d = d.map(o => [o.substatus, o.quantidade]);
                let obj = {
                    name: dados_status[s]['name'],
                    id: dados_status[s]['name'],
                    data: d
                }
                dados_substatus.push(obj);
            }

            $scope.dashboard.resultado = {
                chart: {
                    type: 'pie'
                },
                title: {
                    text: ''
                },
                plotOptions: {
                    series: {
                        dataLabels: {
                            enabled: true,
                            format: '{point.name}: {point.y}'
                        }
                    }
                },
                tooltip: {
                    headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                    pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.percentage:.2f}%</b> do total<br/>'
                },
                series: [{
                    name: "Status",
                    colorByPoint: true,
                    data: dados_status
                }],
                drilldown: {
                    series: dados_substatus
                },
                credits: {
                    enabled: false
                },
            };
        }
        $scope.carregarGraficoWorkflow = function () {
            $scope.dashboard.workflow = {
                title: {
                    text: ''
                },
                yAxis: {
                    title: {
                        text: ''
                    },
                },
                xAxis: {
                    categories: $scope.dashboard.dados.Table4.map(o => o.substatus)
                },
                series: [
                    {
                        type: 'column',
                        name: 'Quantidade',
                        color: 'rgba(51,102,102,1)',
                        data: $scope.dashboard.dados.Table4.map(o => o.qtd),
                        dataLabels: {
                            enabled: true
                        }
                    },
                ],
                credits: {
                    enabled: false
                }
            };
        }
        $scope.carregarGraficoLote = function () {
            $scope.dashboard.lote = {
                title: {
                    text: ''
                },
                yAxis: {
                    title: {
                        text: ''
                    },
                },
                xAxis: {
                    categories: $scope.dashboard.dados.Table5.map(o => o.lote)
                },
                series: [
                    {
                        type: 'column',
                        name: 'Qtd x Lote',
                        color: 'rgba(51,102,102,1)',
                        data: $scope.dashboard.dados.Table5.map(o => o[$scope.dashboard.indicadorLote]),
                        dataLabels: {
                            enabled: true
                        }
                    },
                ],
                credits: {
                    enabled: false
                }
            };
        }

        $scope.carregarDashboard();
    });

</script>