@{
    Layout = "~/Views/master.cshtml";
}



<div ng-controller="ctrl-timvendas-retornoura">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Retorno Oferta</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--TABELA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Base Retorno</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="grafico.indicador" ng-change="mudarBase(grafico.indicador)">
                                <option value="">Todos</option>
                                <option value="retornou">Retornou</option>
                                <option value="aberto">Em aberto</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.promessa">
                                <thead>
                                    <tr>
                                        <th>ID Chamada</th>
                                        <th>Data</th>
                                        <th>Hora</th>
                                        <th>CPF</th>
                                        <th>Telefone</th>
                                        <th>Situação</th>
                                        <th>Marcação</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="p in dashboard.base">
                                        <td>{{p.id_chamada}}</td>
                                        <td>{{p.data | date : 'dd/MM/yyyy'}}</td>
                                        <td>{{p.hora}}</td>
                                        <td>{{p.cpf}}</td>
                                        <td>{{p.telefone}}</td>
                                        <td>{{p.situacao}}</td>
                                        <td><input type="checkbox" ng-checked="{{p.sms}}" ng-model="p.sms" ng-click="checkSMS(p)" /></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-timvendas-retornoura', function ($scope, $http, $filter) {
        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
        };

        $scope.dashboard = {};
        $scope.dashboard.base = {};

        $scope.grafico = { indicador: '' };



        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/tim/vendas/ura",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;
                $scope.dashboard.promessa = data.Table;

                $scope.mudarBase($scope.grafico.indicador);



            });

        }

        $scope.checkSMS = function (chamada) {
            $http({
                method: 'POST',
                url: "/api/tim/vendas/checkretorno",
                data: {
                    id_chamada: chamada.id_chamada,
                    sms: chamada.sms
                },
            });
        }

        $scope.mudarBase = function (id) {
            
            let dados;

            if (id=== "") {

                dados = alasql('select id_chamada, data, hora, cpf, telefone, situacao, sms from ?', [$scope.dashboard.promessa]);
                $scope.dashboard.base = dados;
                
                
            } else if (id === "aberto") {

                dados = alasql('select id_chamada, data, hora, cpf, telefone, situacao, sms from ? where situacao like ("%' + id + '%")', [$scope.dashboard.promessa]);
                $scope.dashboard.base = dados;
               

            } else if (id === "retornou") {

                dados = alasql('select id_chamada, data, hora, cpf, telefone, situacao, sms from ? where situacao like ("%' + id + '%")', [$scope.dashboard.promessa]);
                $scope.dashboard.base = dados;
             
            }

            
        }

        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>
