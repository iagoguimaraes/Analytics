@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-tim-horahora-atom">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Hora Hora - ATOM</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">

            <div class="col-xs-12 col-sm-6">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.venda | number:0"></h3>
                        <p>Vendas</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-shopping-cart"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-6">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.ativacao | number:0"></h3>
                        <p>Ativações Com Tráfego</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-thumbs-up"></i>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">


            <!--GRAFICO POR HORA/DIA-->
                <div class="col-xs-12 margin-bottom">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Gráfico por Hora</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <small class="pull-right">
                                <select ng-model="grafico.indicador" ng-change="carregarGrafico()">
                                    <option value="hora">Hora</option>
                                    <option value="dia">Dia</option>
                                </select>
                            </small>
                        </div>
                        <div class="card-body">
                            <high-chart series="dashboard.grafico" axis-Categories="dashboard.valor" type="column" plot-Options-Line-Data-Label="true"></high-chart>
                        </div>
                    </div>
                </div>


            <!--ANALISE POR PLANO-->
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Plano</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.plano">
                                <thead>
                                    <tr>
                                        <th>Plano</th>
                                        <th>Venda</th>
                                        <th>Ativação</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="plano in dashboard.plano">
                                        <td>{{plano.plano}}</td>
                                        <td>{{plano.venda | number}}</td>
                                        <td>{{plano.ativacao | number}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.venda | number}}</th>
                                        <th>{{dashboard.resumo.ativacao | number}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!--POR OPERADOR-->
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Operador</span>
                    </div>
                    <div class="card-body">
                        <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.operador" scroll-collapse="true" scroll-y="300px" order="[[1,'desc']]"></d-table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>


<script>
    angular.module('app').controller('ctrl-tim-horahora-atom', function ($scope, $http, $filter) {

        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
        };

        $scope.dashboard = {};
        $scope.grafico = { indicador: 'hora' };

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/tim/vendas/atom/horahora",
                data: $scope.filtros,
            }).then(function success(r) {
                // #1 RESUMO
                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.horahora = r.data.Table1;
                $scope.dashboard.diadia = r.data.Table4;

                // #3 PLANO
                $scope.dashboard.plano = r.data.Table2;

                // #6 OPERADOR
                $scope.dashboard.operador = r.data.Table3;

                // STATUS DASHBOARD OK
                $scope.dashboard.status = r.status;
                $scope.carregarGrafico();

            });
        }

        // carrega o grafico de acordo com o indicador escolhido
        $scope.carregarGrafico = function () {
            let dados;
            
            switch ($scope.grafico.indicador) {
                case 'hora':
                    dados = $scope.dashboard.horahora;
                    $scope.dashboard.valor = dados.map(obj => obj.hora);
                    $scope.dashboard.grafico = [{ name: 'Dia', data: dados.map(obj => (obj.venda)) }];
                    break;
                case 'dia':
                    dados = $scope.dashboard.diadia;
                    $scope.dashboard.valor = dados.map(obj => obj.data);
                    $scope.dashboard.grafico = [{ name: 'Hora', data: dados.map(obj => (obj.venda) )}];
                    break;      
                default:
                    dados = $scope.dashboard.diadia;
                    $scope.dashboard.valor = dados.map(obj => obj.hora);
                    $scope.dashboard.grafico = [{ name: 'Hora', data: dados.map(obj => (obj.venda)) }];
            }

        }

        $scope.carregarDashboard();
    });

</script>