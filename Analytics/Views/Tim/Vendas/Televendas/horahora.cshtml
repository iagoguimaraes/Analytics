@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-tim-horahora">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Televendas - Hora Hora</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.data"></date-picker>
                            </div>
                        </div>

                        <!--CAMPANHA-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Campanhas</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.campanhas" dados="dashFiltros.campanhas"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.qtd | megaNumber"></h3>
                        <p>Acionamento</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-phone-square"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-light-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.contato | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.contato / dashboard.resumo.qtd | percentage: 1"></h4>
                        <p>Contato</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-headphones"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.efetivo | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.efetivo / dashboard.resumo.contato | percentage: 1"></h4>
                        <p>Efetivo</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-bullseye"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.venda | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.venda / dashboard.resumo.efetivo | percentage: 1"></h4>
                        <p>Vendas</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-thumbs-o-up"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.chips | number"></h3>
                        <p>Chips</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-caret-square-o-up"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.ativacao | number"></h3>
                        <p>Ativações</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-check"></i>
                    </div>
                </div>
            </div>

        </div>

        <!--HORA HORA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Hora</span>
                        <small class="pull-right">
                            <span>Indicadores:</span>
                            <select ng-model="dashboard.indicador" ng-change="carregarGraficoHora()">
                                <option value="qtd">Acionamento</option>
                                <option value="contato">Contato</option>
                                <option value="efetivo">Efetivo</option>
                                <option value="venda">Venda</option>
                                <option value="recusa">Recusa</option>
                                <option value="chips">Chips</option>
                                <option value="ativacao">Ativações</option>
                                <option value="txvenda">% Venda</option>
                                <option value="txrecusa">% Recusa</option>
                            </select>
                            <select ng-model="dashboard.indicador2" ng-change="carregarGraficoHora()">
                                <option value="qtd">Acionamento</option>
                                <option value="contato">Contato</option>
                                <option value="efetivo">Efetivo</option>
                                <option value="venda">Venda</option>
                                <option value="recusa">Recusa</option>
                                <option value="chips">Chips</option>
                                <option value="ativacao">Ativações</option>
                                <option value="txvenda">% Venda</option>
                                <option value="txrecusa">% Recusa</option>
                                <option value="">Ocultar</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.hora" style="width: 100%; height: 350px"></high-charts>
                    </div>
                </div>
            </div>
        </div>

        <!--SUPERVISOR/OPERADOR-->
        <div class="row">
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise da Operação</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.operacao">
                                <thead>
                                    <tr>
                                        <th>Operador</th>
                                        <th>Acionamento</th>
                                        <th>Contato</th>
                                        <th>Efetivo</th>
                                        <th>Recusa</th>
                                        <th>Venda</th>
                                        <th>% Recusa</th>
                                        <th>% Venda</th>
                                        <th>Chips</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="c in dashboard.operacao | groupBy: 'supervisor'">

                                    <tr class="text-bold">
                                        <td class="text-bold">
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{c[0].supervisor}}
                                        </td>
                                        <td>{{c | sumByColumn: 'qtd' | number}}</td>
                                        <td>{{c | sumByColumn: 'contato'| number}}</td>
                                        <td>{{c | sumByColumn: 'efetivo'| number}}</td>
                                        <td>{{c | sumByColumn: 'recusa'| number}}</td>
                                        <td>{{c | sumByColumn: 'venda'| number}}</td>
                                        <td>{{c | divideSumColumns: 'recusa':'efetivo' | percentage:1}}</td>
                                        <td>{{c | divideSumColumns: 'venda':'efetivo' | percentage:1}}</td>
                                        <td>{{c | sumByColumn: 'chips'| number}}</td>
                                    </tr>

                                    <tr ng-repeat="p in c" ng-show="showTbody">
                                        <td>{{p.operador}}</td>
                                        <td>{{p.qtd | number}}</td>
                                        <td>{{p.contato | number}}</td>
                                        <td>{{p.efetivo | number}}</td>
                                        <td>{{p.recusa | number}}</td>
                                        <td>{{p.venda | number}}</td>
                                        <td>{{p.recusa / p.efetivo | percentage:1}}</td>
                                        <td>{{p.venda / p.efetivo | percentage:1}}</td>
                                        <td>{{p.chips | number}}</td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--RESULTADO E STATUS-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Tabulações</span>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.resultado" style="width: 100%; height: 300px"></high-charts>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Workflow</span>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.workflow" style="width: 100%; height: 300px"></high-charts>
                    </div>
                </div>
            </div>
        </div>

        <!--ORIGEM ATENDIMENTO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Origem Atendimento</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.origem">
                                <thead>
                                    <tr>
                                        <th>Origem</th>
                                        <th>Acionamento</th>
                                        <th>Contato</th>
                                        <th>Efetivo</th>
                                        <th>Recusa</th>
                                        <th>Venda</th>
                                        <th>% Recusa</th>
                                        <th>% Venda</th>
                                        <th>Chips</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="c in dashboard.origem">
                                        <td>{{c.origematendimento}}</td>
                                        <td>{{c.qtd | number}}</td>
                                        <td>{{c.contato | number}}</td>
                                        <td>{{c.efetivo | number}}</td>
                                        <td>{{c.recusa | number}}</td>
                                        <td>{{c.venda | number}}</td>
                                        <td>{{c.recusa / c.efetivo | percentage:1}}</td>
                                        <td>{{c.venda / c.efetivo | percentage:1}}</td>
                                        <td>{{c.chips | number}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-tim-horahora', function ($scope, $http, $filter) {

        $scope.filtros = {
            data: $filter('date')(new Date(), "yyyy-MM-dd"),
            campanhas: '',
        };

        $scope.dashFiltros = {};

        $scope.dashboard = {
            indicador: 'venda',
            indicador2: 'ativacao'
        };

        // carrega os filtros e colocar no scope
        $scope.carregarFiltros = function () {
            $http({
                method: 'GET',
                url: "/api/tim/vendas/filtros",
            }).then(function success(r) {
                $scope.dashFiltros.campanhas = r.data.Table1;
                $scope.dashFiltros.status = r.status;
            });
        }

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/tim/vendas/atom/horahora",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.operacao = r.data.Table2;
                $scope.dashboard.origem = r.data.Table5;

                $scope.carregarGraficoHora();
                $scope.carregarGraficoResultado();
                $scope.carregarGraficoWorkflow();

                $scope.dashboard.status = r.status;
            });
        }

        $scope.carregarGraficoHora = function () {
            $scope.dashboard.hora = {
                title: {
                    text: ''
                },
                yAxis: [
                    {
                        title: {
                            text: ''
                        },
                    },
                    {
                        title: {
                            text: ''
                        },
                        opposite: true,
                    }
                ],
                xAxis: {
                    categories: $scope.dashboard.dados.Table1.map(o => o.hora)
                },
                series: [
                    {
                        type: 'line',
                        name: $scope.dashboard.indicador,
                        color: '#00a65a',
                        data: $scope.dashboard.dados.Table1.map(o => o[$scope.dashboard.indicador]),
                        dataLabels: {
                            enabled: true
                        }
                    },
                    {
                        type: 'column',
                        yAxis: 1,
                        name: $scope.dashboard.indicador2,
                        color: 'rgba(0,115,183,0.4)',
                        data: $scope.dashboard.dados.Table1.map(o => o[$scope.dashboard.indicador2]),
                        dataLabels: {
                            enabled: true
                        }
                    },
                ],
                credits: {
                    enabled: false
                }
            };
        }
        $scope.carregarGraficoResultado = function () {
            let dados_status = alasql('select status, sum(quantidade) quantidade from ? group by status', [$scope.dashboard.dados.Table3]);
            dados_status = dados_status.map(o => ({ name: o.status, drilldown: o.status, y: o.quantidade }));
            let dados_substatus = [];
            for (s in dados_status) {
                let d = alasql('select substatus, quantidade from ?', [$scope.dashboard.dados.Table3.filter(d => d.status == dados_status[s]['name'])]);
                d = d.map(o => [o.substatus, o.quantidade]);
                let obj = {
                    name: dados_status[s]['name'],
                    id: dados_status[s]['name'],
                    data: d
                }
                dados_substatus.push(obj);
            }

            $scope.dashboard.resultado = {
                chart: {
                    type: 'pie'
                },
                title: {
                    text: ''
                },
                plotOptions: {
                    series: {
                        dataLabels: {
                            enabled: true,
                            format: '{point.name}: {point.y}'
                        }
                    }
                },
                tooltip: {
                    headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                    pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.percentage:.2f}%</b> do total<br/>'
                },
                series: [{
                    name: "Status",
                    colorByPoint: true,
                    data: dados_status
                }],
                drilldown: {
                    series: dados_substatus
                },
                credits: {
                    enabled: false
                },
            };
        }
        $scope.carregarGraficoWorkflow = function () {
            $scope.dashboard.workflow = {
                title: {
                    text: ''
                },
                yAxis: {
                    title: {
                        text: ''
                    },
                },
                xAxis: {
                    categories: $scope.dashboard.dados.Table4.map(o => o.substatus)
                },
                series: [
                    {
                        type: 'column',
                        name: 'Quantidade',
                        color: 'rgba(51,102,102,1)',
                        data: $scope.dashboard.dados.Table4.map(o => o.qtd),
                        dataLabels: {
                            enabled: true
                        }
                    },
                ],
                credits: {
                    enabled: false
                }
            };
        }

        $scope.carregarFiltros();
        $scope.carregarDashboard();
    });

</script>