@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-tim-horahora">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Migração - Hora Hora</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.data"></date-picker>
                            </div>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.contato | megaNumber"></h3>
                        <p>Atendimento</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-headphones"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.recusa | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.recusa / dashboard.resumo.contato | percentage: 1"></h4>
                        <p>Recusa</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-ban"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.venda | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.venda / dashboard.resumo.contato | percentage: 1"></h4>
                        <p>Vendas</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-thumbs-o-up"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.migracao | megaNumber"></h3>
                        <p>Migrações</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-exchange"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.crivo | megaNumber"></h3>
                        <p>Crivo</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-exclamation-triangle"></i>
                    </div>
                </div>
            </div>

        </div>

        <!--HORA HORA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Hora</span>
                        <small class="pull-right">
                            <span>Indicador:</span>
                            <select ng-model="dashboard.indicador" ng-change="carregarGraficoHora()">
                                <option value="venda">Venda</option>
                                <option value="recusa">Recusa</option>
                                <option value="crivo">Crivo</option>
                                <option value="contato">Atendimento</option>
                                <option value="migracao">Migrações</option>
                                <option value="txvenda">% Venda</option>
                                <option value="txrecusa">% Recusa</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.hora" style="width: 100%; height: 350px"></high-charts>
                    </div>
                </div>
            </div>
        </div>

        <!--SUPERVISOR/OPERADOR-->
        <div class="row">
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise da Operação</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.operacao">
                                <thead>
                                    <tr>
                                        <th>Operador</th>
                                        <th>Acionamento</th>
                                        <th>Recusa</th>
                                        <th>Venda</th>
                                        <th>% Recusa</th>
                                        <th>% Venda</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="c in dashboard.operacao | groupBy: 'supervisor'">

                                    <tr class="text-bold">
                                        <td class="text-bold">
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{c[0].supervisor}}
                                        </td>
                                        <td>{{c | sumByColumn: 'qtd' | number}}</td>
                                        <td>{{c | sumByColumn: 'recusa'| number}}</td>
                                        <td>{{c | sumByColumn: 'venda'| number}}</td>
                                        <td>{{c | divideSumColumns: 'recusa':'qtd' | percentage:1}}</td>
                                        <td>{{c | divideSumColumns: 'venda':'qtd' | percentage:1}}</td>
                                    </tr>

                                    <tr ng-repeat="p in c" ng-show="showTbody">
                                        <td>{{p.operador}}</td>
                                        <td>{{p.qtd | number}}</td>
                                        <td>{{p.recusa | number}}</td>
                                        <td>{{p.venda | number}}</td>
                                        <td>{{p.recusa / p.qtd | percentage:1}}</td>
                                        <td>{{p.venda / p.qtd | percentage:1}}</td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--RESULTADO E STATUS-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Tabulações</span>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.resultado" style="width: 100%; height: 300px"></high-charts>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Workflow</span>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.workflow" style="width: 100%; height: 300px"></high-charts>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-tim-horahora', function ($scope, $http, $filter) {

        $scope.filtros = {
            data: $filter('date')(new Date(), "yyyy-MM-dd"),
        };

        $scope.dashboard = {
            indicador: 'venda'
        };

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/tim/vendas/migracao/horahora",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.operacao = r.data.Table2;
               
                $scope.carregarGraficoHora();
                $scope.carregarGraficoResultado();
                $scope.carregarGraficoWorkflow();

                $scope.dashboard.status = r.status;
            });
        }

        $scope.carregarGraficoHora = function () {
            $scope.dashboard.hora = {
                title: {
                    text: ''
                },
                yAxis: {
                    title: {
                        text: ''
                    },
                },
                xAxis: {
                    categories: $scope.dashboard.dados.Table1.map(o => o.hora)
                },
                series: [
                    {
                        type: 'column',
                        name: 'Quantidade x Hora',
                        color: 'rgba(0,51,153,0.6)',
                        data: $scope.dashboard.dados.Table1.map(o => o[$scope.dashboard.indicador]),
                        dataLabels: {
                            enabled: true
                        }
                    },
                ],
                credits: {
                    enabled: false
                }
            };
        }
        $scope.carregarGraficoResultado = function () {
            let dados_status = alasql('select status, sum(quantidade) quantidade from ? group by status', [$scope.dashboard.dados.Table3]);
            dados_status = dados_status.map(o => ({ name: o.status, drilldown: o.status, y: o.quantidade }));
            let dados_substatus = [];
            for (s in dados_status) {
                let d = alasql('select substatus, quantidade from ?', [$scope.dashboard.dados.Table3.filter(d => d.status == dados_status[s]['name'])]);
                d = d.map(o => [o.substatus, o.quantidade]);
                let obj = {
                    name: dados_status[s]['name'],
                    id: dados_status[s]['name'],
                    data: d
                }
                dados_substatus.push(obj);
            }

            $scope.dashboard.resultado = {
                chart: {
                    type: 'pie'
                },
                title: {
                    text: ''
                },
                plotOptions: {
                    series: {
                        dataLabels: {
                            enabled: true,
                            format: '{point.name}: {point.y}'
                        }
                    }
                },
                tooltip: {
                    headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                    pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.percentage:.2f}%</b> do total<br/>'
                },
                series: [{
                    name: "Status",
                    colorByPoint: true,
                    data: dados_status
                }],
                drilldown: {
                    series: dados_substatus
                },
                credits: {
                    enabled: false
                },
            };
        }
        $scope.carregarGraficoWorkflow = function () {
            $scope.dashboard.workflow = {
                title: {
                    text: ''
                },
                yAxis: {
                    title: {
                        text: ''
                    },
                },
                xAxis: {
                    categories: $scope.dashboard.dados.Table4.map(o => o.substatus)
                },
                series: [
                    {
                        type: 'column',
                        name: 'Quantidade',
                        color: 'rgba(51,102,102,1)',
                        data: $scope.dashboard.dados.Table4.map(o => o.qtd),
                        dataLabels: {
                            enabled: true
                        }
                    },
                ],
                credits: {
                    enabled: false
                }
            };
        }

        $scope.carregarDashboard();
    });

</script>