@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-sms-custo">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Custos</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--CENTROCUSTO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Centro de Custo</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.centrocusto" dados="dashFiltros.centrocusto"></select2>
                        </div>

                        <!--CARTEIRAS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Carteiras</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.carteiras" dados="dashFiltros.carteiras"></select2>
                        </div>

                        <!--FORNECEDORES-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Fornecedores</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.fornecedores" dados="dashFiltros.fornecedores"></select2>
                        </div>                       

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-5 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise Geral</span>
                        <div class="card-header-button" ng-click="extrair('Table')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row margin-bottom">
                            <div class="col-xs-7 col-md-7">
                                <div class="info-box bg-green-active">
                                    <span class="info-box-icon">
                                        <i class="fa fa-usd"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <p>Custo Total</p>
                                        <h3 ng-bind="dashboard.resumo.custo | currency: 'R$ '"></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-5 col-md-5">
                                <div class="info-box bg-green">
                                    <div class="inner" style="padding:5px;text-align:center">
                                        <p>Ticket Médio</p>
                                        <h3 class="info-box-number" ng-bind="dashboard.resumo.ticket_med | number: 3"></h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row margin-bottom">
                            <div class="col-xs-7 col-md-7">
                                <div class="info-box bg-blue-active">
                                    <span class="info-box-icon">
                                        <i class="fa fa-files-o"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <p>Lotes</p>
                                        <h3 ng-bind="dashboard.resumo.qtd_lote | number: 0"></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-5 col-md-5">
                                <div class="info-box bg-blue">
                                    <div class="inner" style="padding:5px;text-align:center">
                                        <p>Registros</p>
                                        <h3 class="info-box-number" ng-bind="dashboard.resumo.qtd_registros | number: 0"></h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row margin-bottom">
                            <div class="col-xs-7 col-md-7">
                                <div class="info-box bg-yellow-active">
                                    <span class="info-box-icon">
                                        <i class="fa fa-check"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <p>Enviado</p>
                                        <h3 ng-bind="dashboard.resumo.qtd_enviado | number: 0"></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-5 col-md-5">
                                <div class="info-box bg-yellow">
                                    <div class="inner" style="padding:5px">
                                        <p style="text-align:center">Entregue</p>
                                        <h3 class="pull-right" ng-bind="dashboard.resumo.qtd_sucesso / dashboard.resumo.qtd_enviado | percentage: 1"></h3>
                                        <h4 style="text-align:center" ng-bind="dashboard.resumo.qtd_sucesso | number: 0"></h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

