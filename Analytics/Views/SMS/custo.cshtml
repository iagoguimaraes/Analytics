                                        <td>{{p.qtd_lote | number}}</td>
                                        <td>{{p.qtd_registros | number}}</td>
                                        <td>{{p.qtd_enviado | number}}</td>
                                        <td>{{p.qtd_sucesso | number}}</td>
                                        <td>{{p.qtd_sucesso / p.qtd_registros | percentage: 1}}</td>
                                        <td>{{p.custo / p.qtd_sucesso | number : 3}}</td>
                                    </tr>
                                </tbody>
                            </table>
