<script>
    angular.module('app').controller('ctrl-sms-custo', function ($scope, $http, $filter) {
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), (newdate.getMonth() - 1), 1);
        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            centrocusto: '',
            carteiras: '',
            fornecedores: '',
            estados: '',
        };
        $scope.graficoRegiao = { exibir: 'true' }
        $scope.idSelecionadoMapa = '';
        $scope.dashFiltros = {};
        $scope.dashboard = {};

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/sms/lote/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.centrocusto = r.data.Table;
            $scope.dashFiltros.carteiras = r.data.Table1;
            $scope.dashFiltros.fornecedores = r.data.Table2;
            $scope.dashFiltros.estados = r.data.Table4;

        });

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/sms/dashboard/custo",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                //console.log(r.data);

                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.fornecedor = r.data.Table1;
                $scope.dashboard.tabelaDia = r.data.Table2;
                $scope.dashboard.arquivo = r.data.Table3;
                //$scope.dashboard.estado = alasql('select "BR-" + uf id,  efetividade [percent], custo [value], regiao, uf, estado, custo, qtd_registros, qtd_sucesso, ticket_med, efetividade from ?', [r.data.Table4]);
                //$scope.dashboard.carteira = r.data.Table5;
                //$scope.dashboard.centroCusto = r.data.Table6;
                //$scope.mudarEstado('BR-SP');

                $scope.dashboard.carteiras = r.data.Table4.map(obj => obj.carteira);
                $scope.dashboard.carteira = [
                    { name: 'R$ Valor', color: '#08b967', data: r.data.Table4.map(obj => obj.custo) }
                    , { name: '% Entregue', yAxis: 1, type: 'spline', color: 'rgba(232, 2, 39, 1)', data: r.data.Table4.map(obj => (obj.qtd_sucesso * 100 / obj.qtd_enviado).toFixed(1) * 1) }];


                $scope.dashboard.datas = r.data.Table2.map(obj => obj.data);
                $scope.dashboard.dia = [
                    { name: 'R$ Valor', color: '#f9b344', data: r.data.Table2.map(obj => obj.custo) }
                    , { name: '% Entregue', yAxis: 1, type: 'spline', color: 'rgba(232, 2, 39, 1)', data: r.data.Table2.map(obj => (obj.qtd_sucesso * 100 / obj.qtd_enviado).toFixed(1) * 1) }];

                $scope.dashboard.centrosCustos = r.data.Table5.map(obj => obj.centrocusto);
                $scope.dashboard.centroCusto = [{ name: 'Valor', data: r.data.Table5.map(obj => obj.custo) }];

                $scope.dashboard.custoFornecedor = [{ name: 'Quantidade', innerSize: '10%', data: r.data.Table6.map(obj => ({ name: obj.fornecedor, y: obj.custo })) }];
                $scope.dashboard.efetFornecedor = [{ name: 'Quantidade', innerSize: '10%', data: r.data.Table7.map(obj => ({ name: obj.fornecedor, y: obj.efetividade, color: '#a01313' })) }];
            });
        }

        $scope.mudarEstado = function (id) {

            let dados = alasql('select id, [value], regiao, uf, estado, custo, qtd_registros, qtd_sucesso, qtd_enviado, ticket_med, efetividade from ? where id like ("%' + id + '%")', [$scope.dashboard.estado])[0];

            $scope.dashboard.mapa = dados;

        }

        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }
    });

</script>
