                                        </td>
                                        <td>{{c | sumByColumn: 'custo' | currency:'R$ ' }}</td>
                                        <td>{{c | sumByColumn: 'qtd_lote' | number : 0 }}</td>
                                        <td>{{c | sumByColumn: 'qtd_registros' | number : 0 }}</td>
