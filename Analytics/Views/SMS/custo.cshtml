<script>
    angular.module('app').controller('ctrl-sms-custo', function ($scope, $http, $filter) {

        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
            centrocusto: '',
            carteiras: '',
            fornecedores: '',
            estados: '',
        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/sms/lote/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.centrocusto = r.data.Table;
            $scope.dashFiltros.carteiras = r.data.Table1;
            $scope.dashFiltros.fornecedores = r.data.Table2;
            $scope.dashFiltros.estados = r.data.Table4;

        });

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/sms/dashboard/custo",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                //console.log(r.data);

                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.fornecedor = r.data.Table1;
                //$scope.dashboard.dia = r.data.Table2;
                $scope.dashboard.arquivo = r.data.Table3;
                $scope.dashboard.estado = r.data.Table4;
                //$scope.dashboard.carteira = r.data.Table5;
                $scope.dashboard.centroCusto = r.data.Table6;

                 $scope.dashboard.carteiras = r.data.Table5.map(obj => obj.carteira);
                $scope.dashboard.carteira = [
                    { name: 'R$ Valor', color: '#08b967', data: r.data.Table5.map(obj => obj.custo) }
                    , { name: '% Enviado', yAxis: 1, type: 'spline', color: 'rgba(232, 2, 39, 1)', data: r.data.Table5.map(obj => (obj.qtd_sucesso * 100 / obj.qtd_tentativa).toFixed(1) * 1) }];
            

                $scope.dashboard.datas = r.data.Table2.map(obj => obj.data);
                $scope.dashboard.dia = [
                    { name: 'R$ Valor', color: '#f9b344', data: r.data.Table2.map(obj => obj.custo) }
                    , { name: '% Enviado', yAxis: 1,  type: 'spline', color: 'rgba(232, 2, 39, 1)', data: r.data.Table2.map(obj => (obj.qtd_sucesso * 100 / obj.qtd_tentativa).toFixed(1) * 1) }];
            });
        }

        $scope.carregarDashboard();

    });

</script>
