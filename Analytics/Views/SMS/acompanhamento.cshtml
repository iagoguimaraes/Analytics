@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-sms-acompanhamento">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Acompanhamento</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--CENTROCUSTO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Centro de Custo</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.centrocusto" dados="dashFiltros.centrocusto"></select2>
                        </div>

                        <!--CARTEIRAS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Carteiras</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.carteiras" dados="dashFiltros.carteiras"></select2>
                        </div>

                        <!--FORNECEDORES-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Fornecedores</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.fornecedores" dados="dashFiltros.fornecedores"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-gray">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.lotes | number: 0"></h3>
                        <p>Lotes</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-clone"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-blue-active">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.registros | megaNumber"></h3>
                        <p>Registros</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-list"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-yellow-active">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.enviado | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.enviado / dashboard.resumo.registros | percentage: 1"></h4>
                        <p>Enviado</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-envelope-square"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.entregue | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.entregue / dashboard.resumo.enviado | percentage: 2"></h4>
                        <p>Entregue</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-check"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.enviado - dashboard.resumo.entregue | number"></h3>
                        <h4 class="pull-right" ng-bind="(dashboard.resumo.enviado - dashboard.resumo.entregue) / dashboard.resumo.enviado | percentage: 2"></h4>
                        <p>Não Enviado</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-times-circle"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-gray-active">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.erro | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.erro / dashboard.resumo.enviado | percentage: 2"></h4>
                        <p>Erro Envio</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-exclamation"></i>
                    </div>
                </div>
            </div>
        </div>

        <!--LOTE-->
        <div class="row  margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Lotes Importados</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.lote">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Hora</th>
                                        <th>Centro Custo</th>
                                        <th>Carteira</th>
                                        <th>Fornecedor</th>
                                        <th>Usuário</th>
                                        <th>Layout</th>
                                        <th>Registros</th>
                                        <th>Enviado</th>
                                        <th>Entregue</th>
                                        <th>Não Enviado</th>
                                        <th>% Enviado</th>
                                        <th>Tempo Retorno</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="r in dashboard.lote">
                                        <td>{{r.data}}</td>
                                        <td>{{r.hora}}</td>
                                        <td>{{r.centrocusto}}</td>
                                        <td>{{r.carteira}}</td>
                                        <td>{{r.fornecedor}}</td>
                                        <td>{{r.usuario}}</td>
                                        <td>{{r.layout}}</td>
                                        <td>{{r.registros | number}}</td>
                                        <td>{{r.enviado | number}}</td>
                                        <td>{{r.entregue | number}}</td>
                                        <td>{{r.enviado - r.entregue | number}}</td>
                                        <td>{{r.entregue / r.enviado | percentage:1}}</td>
                                        <td>{{r.tempo_callback | formatTimer}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="7">Total</th>
                                        <th>{{dashboard.resumo.registros | number}}</th>
                                        <th>{{dashboard.resumo.enviado | number}}</th>
                                        <th>{{dashboard.resumo.entregue | number}}</th>
                                        <th>{{dashboard.resumo.enviado - dashboard.resumo.entregue | number}}</th>
                                        <th>{{dashboard.resumo.entregue / dashboard.resumo.enviado | percentage: 1}}</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--GRAFICO DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Enviado por Dia</span>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.dia" axis-Categories="dashboard.datas" type="column" plot-Options-Column-Data-Label="true"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--CALLBACK-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Callbacks</span>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.callback" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-sms-acompanhamento', function ($scope, $http, $filter) {

        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
            centrocusto: '',
            carteiras: '',
            fornecedores: '',
        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/sms/lote/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.centrocusto = r.data.Table;
            $scope.dashFiltros.carteiras = r.data.Table1;
            $scope.dashFiltros.fornecedores = r.data.Table2;
            //$scope.dashFiltros.layout = r.data.Table3;
        });

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/sms/dashboard/acompanhamento",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.lote = r.data.Table1;

                $scope.dashboard.datas = r.data.Table2.map(obj => obj.data);
                $scope.dashboard.dia = [{ name: 'SMS', data: r.data.Table2.map(obj => obj.enviado) }];

                $scope.dashboard.callback = [{ name: 'Qtd', data: r.data.Table3.map(obj => ({ name: obj.retorno, y: obj.quantidade })) }];
            });
        }

        $scope.carregarDashboard();

    });

</script>
