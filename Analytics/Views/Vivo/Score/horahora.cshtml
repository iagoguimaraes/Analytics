@{
    Layout = "~/Views/master.cshtml";
}


<!-- DAHSBOARD -->
<div ng-controller="ctrl-vivo-score-horahora">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Produção</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.data"></date-picker>
                            </div>
                        </div>

                        <!--CAMPANHAS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Campanhas</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.campanhas" dados="dashFiltros.campanhas" style="width: 100%;"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE HORA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise Hora</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <label>
                                <input type="radio" name="graficoHoraExibir" ng-model="graficoHora.exibir" value="true" checked="checked" />
                                Tabela
                            </label>
                            <label>
                                <input type="radio" name="graficoHoraExibir" ng-model="graficoHora.exibir" value="false" />
                                Gráfico
                            </label>

                        </small>
                    </div>
                    <div class="card-body">
                        <!--TABELA-->
                        <div class="table-responsive" ng-show="graficoHora.exibir == 'true'">
                            <table class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Hora</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Promessa</th>
                                        <th>Hit Rate</th>
                                        <th>Tx Loc</th>
                                        <th>Tx Apv</th>
                                        <th>Conversão</th>
                                        <th>Ocupação</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="p in dashboard.horahora">
                                        <td>{{p.hora}}</td>
                                        <td>{{p.discado | number}}</td>
                                        <td>{{p.contato | number}}</td>
                                        <td>{{p.cpc | number}}</td>
                                        <td>{{p.cpca | number}}</td>
                                        <td>{{p.promessa | number}}</td>
                                        <td>{{p.contato / p.discado | percentage: 1}}</td>
                                        <td>{{p.cpc / p.contato | percentage: 1}}</td>
                                        <td>{{p.cpca / p.cpc | percentage: 1}}</td>
                                        <td>{{p.promessa / p.cpca | percentage: 1}}</td>
                                        <td>{{p.falado / p.logado | percentage: 1}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!--GRAFICO-->
                        <div ng-show="graficoHora.exibir == 'false'">
                            <span class="pull-right">
                                <select ng-model="graficoHora.indicador" ng-change="carregarGraficoHora()">
                                    <option value="discado">Discado</option>
                                    <option value="contato">Contato</option>
                                    <option value="cpc">CPC</option>
                                    <option value="cpca">CPCA</option>
                                    <option value="promessa">Promessa</option>
                                    <option value="hitrate">HitRate</option>
                                    <option value="txloc">TxLoc</option>
                                    <option value="txapv">TxApv</option>
                                    <option value="conversao">Conversao</option>
                                    <option value="ocupacao">Ocupação</option>
                                </select>
                            </span>
                            <high-chart series="dashboard.graficoHora" axis-Categories="dashboard.graficoHoraCategorias" plot-Options-Line-Data-Label="true"></high-chart>

                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE POR CAMPANHA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Campanha/Hora</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <!--TABELA-->
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Campanha/Hora</th>
                                        <th>AD</th>
                                        <th>Mailing</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Promessa</th>
                                        <th>Hit Rate</th>
                                        <th>Tx Loc</th>
                                        <th>Tx Apv</th>
                                        <th>Conversão</th>
                                        <th>Ocupação</th>
                                        <th>Mailing/AD</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="c in dashboard.campanha | groupBy: 'campanha'">

                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{c[0].campanha}}
                                        </td>
                                        <td>{{c | avgColumn: 'ad' | number : 0 }}</td>
                                        <td>{{dashboard.mailing | filter:{campanha:c[0].campanha} | sumByColumn:'mailing' | number : 0 }}</td>
                                        <td>{{c | sumByColumn: 'discado' | number : 0 }}</td>
                                        <td>{{c | sumByColumn: 'contato' | number : 0 }}</td>
                                        <td>{{c | sumByColumn: 'cpc' | number : 0 }}</td>
                                        <td>{{c | sumByColumn: 'cpca' | number : 0 }}</td>
                                        <td>{{c | sumByColumn: 'promessa' | number : 0 }}</td>
                                        <td>{{c | divideSumColumns: 'contato':'discado' | percentage: 1}}</td>
                                        <td>{{c | divideSumColumns: 'cpc':'contato' | percentage: 1}}</td>
                                        <td>{{c | divideSumColumns: 'cpca':'cpc' | percentage: 1}}</td>
                                        <td>{{c | divideSumColumns: 'promessa':'cpca' | percentage: 1}}</td>
                                        <td>{{c | divideSumColumns: 'falado':'logado' | percentage: 1}}</td>
                                        <td>{{dashboard.mailing | filter:{campanha:c[0].campanha} | divideSumColumns:'mailing':'ad' | number : 0 }}</td>
                                    </tr>

                                    <tr ng-repeat="p in c" ng-show="showTbody" ng-if="p.hora">
                                        <td>{{p.hora}}</td>
                                        <td>{{p.ad | number}}</td>
                                        <td></td>
                                        <td>{{p.discado | number}}</td>
                                        <td>{{p.contato | number}}</td>
                                        <td>{{p.cpc | number}}</td>
                                        <td>{{p.cpca | number}}</td>
                                        <td>{{p.promessa | number}}</td>
                                        <td>{{p.contato / p.discado | percentage: 1}}</td>
                                        <td>{{p.cpc / p.contato | percentage: 1}}</td>
                                        <td>{{p.cpca / p.cpc | percentage: 1}}</td>
                                        <td>{{p.promessa / p.cpca | percentage: 1}}</td>
                                        <td>{{p.falado / p.logado | percentage: 1}}</td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--TABLACAO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Finalizações</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.tabulacao" paging="false" order="[[2,'desc']]"></d-table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-vivo-score-horahora', function ($scope, $http, $filter) {

        // filtros iniciais
        let newdate = new Date();

        $scope.filtros = {
            data: $filter('date')(newdate, "yyyy-MM-dd"),
            campanhas: '',
        };
        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.graficoHora = { exibir: 'true', indicador: 'hitrate'}

        $http({
            method: 'POST',
            url: "/api/vivo/dashboard/score/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.campanhas = r.data.Table;
        });

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/vivo/dashboard/score/horahora",
                data: $scope.filtros,
            }).then(function success(r) {

                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.horahora = r.data.Table1;
                $scope.dashboard.campanha = r.data.Table2;
                $scope.dashboard.tabulacao = r.data.Table3;
                $scope.dashboard.mailing = r.data.Table4;

                $scope.carregarGraficoHora();

                $scope.dashboard.status = r.status;
            });
        }

        $scope.carregarGraficoHora = function () {
            let dados = $scope.dashboard.horahora;

            $scope.dashboard.graficoHoraCategorias = dados.map(obj => obj.hora);
            switch ($scope.graficoHora.indicador) {
                case 'hitrate':
                    $scope.dashboard.graficoHora = [{ name: 'hitrate', data: dados.map(obj => (obj.contato * 100 / obj.discado).toFixed(1) * 1) }];
                    break;
                case 'txloc':
                    $scope.dashboard.graficoHora = [{ name: 'txloc', data: dados.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) * 1) }];
                    break;
                case 'txapv':
                    $scope.dashboard.graficoHora = [{ name: 'txapv', data: dados.map(obj => (obj.cpca * 100 / obj.cpc).toFixed(1) * 1) }];
                    break;
                case 'conversao':
                    $scope.dashboard.graficoHora = [{ name: 'conversao', data: dados.map(obj => (obj.promessa * 100 / obj.cpca).toFixed(1) * 1) }];
                    break;
                case 'ocupacao':
                    $scope.dashboard.graficoHora = [{ name: 'ocupacao', data: dados.map(obj => (obj.falado / obj.logado * 100).toFixed(1) * 1) }];
                    break;
                default:
                    $scope.dashboard.graficoHora = [{ name: $scope.graficoHora.indicador, data: dados.map(obj => obj[$scope.graficoHora.indicador].toFixed(0) / 1) }];
            }

        }

        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });

</script>