@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-vivo-producaodaily">

    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Produção Daily</div>

            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" ng-click="extrair('base')" title="Extrair relatórios consolidados">
                <i class="fa fa-file-excel-o"></i>
                
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">

                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>

                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <!--RESUMO-->
        <div class="col-xs-12 margin-bottom">
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-maroon-active">
                    <div class="inner">
                        <h3>{{dashboard.resumo.carteira | megaNumber}}</h3>
                        <p>Estoque</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-briefcase"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-gray-active">
                    <div class="inner">
                        <h3>{{dashboard.resumo.discado | megaNumber}}</h3>
                        <p>Discado</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-phone"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-aqua-active">
                    <div class="inner">
                        <h3>{{dashboard.resumo.contato | number}}</h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1"></h4>
                        <p>Contato</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-headphones"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-red-active">
                    <div class="inner">
                        <h3>{{dashboard.resumo.cpc | number}}</h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1"></h4>
                        <p>CPC</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-male"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>{{dashboard.resumo.cpca | number}}</h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1"></h4>
                        <p>CPCA</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-street-view"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-2">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>{{dashboard.resumo.promessa | number}}</h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1"></h4>
                        <p>Promessa</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-thumbs-o-up"></i>
                    </div>
                </div>
            </div>
        </div>

        <!--FILTROS 2-->
        <div class="row margin-bottom">
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-3" ng-if="dashboard.dimensao.billing">
                                <label class="control-sidebar-subheading">Billing</label>
                                <select22 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="dashboard.filtros.billing" dados="dashboard.dimensao.billing" ng-change="aplicarFiltros()"></select22>
                            </div>

                            <div class="col-xs-12 col-sm-6 col-md-3" ng-if="dashboard.dimensao.aging">
                                <label class="control-sidebar-subheading">Aging</label>
                                <select22 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="dashboard.filtros.aging" dados="dashboard.dimensao.aging" ng-change="aplicarFiltros()"></select22>
                            </div>

                            <div class="col-xs-12 col-sm-6 col-md-3" ng-if="dashboard.dimensao.fila">
                                <label class="control-sidebar-subheading">Fila</label>
                                <select22 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="dashboard.filtros.fila" dados="dashboard.dimensao.fila" ng-change="aplicarFiltros()"></select22>
                            </div>

                            <div class="col-xs-12 col-sm-6 col-md-3" ng-if="dashboard.dimensao.filacallflex">
                                <label class="control-sidebar-subheading">Fila Callflex</label>
                                <select22 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="dashboard.filtros.filacallflex" dados="dashboard.dimensao.filacallflex" ng-change="aplicarFiltros()"></select22>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row margin-bottom">
            <div class="text-center margin-bottom">
                <label class="control-sidebar-subheading">Indicador:</label>
                <select ng-model="dashboard.indicador" ng-change="aplicarFiltros()">
                    <option value="contato">Contato</option>
                    <option value="cpc">CPC</option>
                    <option value="cpca">CPCA</option>
                    <option value="promessa">Promessa</option>
                </select>
            </div>


            <!--FILA-->
            <div class="col-xs-12 col-md-12 margin-bottom">
                <div class="card-header-button" ng-click="extrair('ExportFila')">
                    <i class="fa fa-file-excel-o"></i>
                </div>
                <div class="card">
                    <div class="card-body">
                        <high-charts config="dashboard.fila" style="width: 100%; height: 400px"></high-charts>
                    </div>
                </div>
            </div>

            <!--BILLING-->
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header-button" ng-click="extrair('ExportBilling')">
                        <i class="fa fa-file-excel-o"></i>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.billing" style="width: 100%; height: 300px"></high-charts>
                    </div>
                </div>
            </div>
            <!--AGING-->
            <div class="col-xs-12 col-md-6 margin-bottom">
                <div class="card">
                    <div class="card-header-button" ng-click="extrair('ExportAging')">
                        <i class="fa fa-file-excel-o"></i>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.aging" style="width: 100%; height: 300px"></high-charts>
                    </div>
                </div>
            </div>

            <!--FILA CALLFLEX-->
            @*<div class="col-xs-12 col-md-6 margin-bottom">
                    <div class="card">
                        <div class="card-body">
                            <high-charts config="dashboard.filacallflex" style="width: 100%; height: 300px"></high-charts>
                        </div>
                    </div>
                </div>*@

            <!-- ANÁLISE POR DIA -->
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('producaoDia')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.producaoDia">
                                <thead>
                                    <tr>
                                        <th>Dia</th>
                                        <th>Estoque</th>
                                        <th>PA</th>
                                        <th>PA Real</th>
                                        <th>Logado Pa</th>
                                        <th>Falado Pa</th>
                                        <th>Ocupação</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Promessa</th>
                                        <th>HitRate</th>
                                        <th>TxLoc</th>
                                        <th>TxApv</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="dia in dashboard.producaoDia">
                                        <td>{{dia.data | date : 'dd/MM/yyyy'}}</td>
                                        <td>{{dia.carteira | number}}</td>
                                        <td>{{dia.pa | number}}</td>
                                        <td>{{dia.pa_real | number}}</td>
                                        <td>{{dia.logado / dia.pa | formatTimer}}</td>
                                        <td>{{dia.falado / dia.pa | formatTimer}}</td>
                                        <td>{{dia.falado / dia.logado | percentage:1}}</td>
                                        <td>{{dia.discado | number}}</td>
                                        <td>{{dia.contato | number}}</td>
                                        <td>{{dia.cpc | number}}</td>
                                        <td>{{dia.cpca | number}}</td>
                                        <td>{{dia.promessa | number}}</td>
                                        <td>{{dia.contato / dia.discado | percentage:1}}</td>
                                        <td>{{dia.cpc / dia.contato | percentage:1}}</td>
                                        <td>{{dia.cpca / dia.cpc | percentage:1}}</td>
                                        <td>{{dia.promessa / dia.cpca | percentage:1}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.carteira | megaNumber}}</th>
                                        <th>{{dashboard.resumo.med_pa | number :0}}</th>
                                        <th>{{dashboard.resumo.med_pareal | number :0}}</th>
                                        <th>{{dashboard.resumo.logado / dashboard.resumo.pa | formatTimer}}</th>
                                        <th>{{dashboard.resumo.falado / dashboard.resumo.pa | formatTimer}}</th>
                                        <th>{{dashboard.resumo.falado / dashboard.resumo.logado | percentage:1}}</th>
                                        <th>{{dashboard.resumo.discado | megaNumber }}</th>
                                        <th>{{dashboard.resumo.contato | number }}</th>
                                        <th>{{dashboard.resumo.cpc | number}}</th>
                                        <th>{{dashboard.resumo.cpca | number}}</th>
                                        <th>{{dashboard.resumo.promessa | number}}</th>
                                        <th>{{dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>



            <!--DIA-->
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Por Dia</span>
                        <div class="card-header-button" ng-click="extrair('ExportDia')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-charts config="dashboard.dia" style="width: 100%; height: 300px"></high-charts>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


<script>
    angular.module('app').controller('ctrl-vivo-producaodaily', function ($scope, $http, $filter, cubo) {

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
        };

        $scope.dashboard = { dimensao: {}, filtros: {}, indicador: 'promessa' };
        $scope.dimensao = {};

        $scope.popularFiltros = function () {
            $scope.dashboard.dimensao.billing = cubo.obterDimensao('billing');
            $scope.dashboard.dimensao.aging = cubo.obterDimensao('aging');
            $scope.dashboard.dimensao.fila = cubo.obterDimensao('fila');
            $scope.dashboard.dimensao.filacallflex = cubo.obterDimensao('filacallflex');
        }

        $scope.popularDashboard = function () {

            // OBTER DIMENSOES (JA FILTRADO)
            $scope.dimensao.billing = cubo.obterDimensao('billing');
            $scope.dimensao.aging = cubo.obterDimensao('aging');
            $scope.dimensao.fila = cubo.obterDimensao('fila');
            $scope.dimensao.filacallflex = cubo.obterDimensao('filacallflex');

            // CARREGAR AS VISUALIZAÇÕES
            let dados = cubo.obter();

            let indicador = $scope.dashboard.indicador;

            let dia = alasql('select data, sum(' + indicador + ') qtd from ? group by data order by 1', [dados]);
            $scope.dashboard.diaTabela = dia;
            let billing = alasql('select billing, sum(' + indicador + ') qtd from ? group by billing order by 2 desc', [dados]);
            let aging = alasql('select aging, sum(' + indicador + ') qtd from ? group by aging order by 2 desc', [dados]);
            let fila = alasql('select fila, sum(' + indicador + ') qtd from ? group by fila order by 2 desc', [dados]);
            let filacallflex = alasql('select filacallflex, sum(' + indicador + ') qtd from ? group by filacallflex order by 2 desc', [dados]);

            $scope.dashboard.resumo = alasql('select sum(pa)/count(distinct data) med_pa, sum(pa_real)/count(distinct data) med_pareal, sum(pa) pa, sum(pa_real) pa_real, sum(logado) logado, sum(falado) falado, sum(carteira) carteira, sum(discado) discado, sum(contato) contato, sum(cpc) cpc, sum(cpca) cpca, sum(promessa) promessa from ?', [dados])[0];
            $scope.dashboard.producaoDia =
                alasql('select data, sum(pa) pa, sum(pa_real) pa_real, sum(logado) logado, sum(falado) falado, sum(carteira) carteira, sum(discado) discado, sum(contato) contato, sum(cpc) cpc, sum(cpca) cpca, sum(promessa) promessa from ? group by data order by 1', [dados]);;

            $scope.dashboard.dia = {
                chart: {
                    type: 'spline'
                },
                title: {
                    text: ''
                },
                yAxis: {
                    visible: false,
                },
                xAxis: {
                    categories: dia.map(obj => obj['data'])
                },
                legend: {
                    enabled: false,
                },
                plotOptions: {
                    spline: {
                        dataLabels: {
                            enabled: true,
                        }
                    }
                },
                credits: {
                    enabled: false
                },
                series: [{ name: indicador, data: dia.map(obj => obj.qtd), color: '#333' }]
            };
            $scope.dashboard.filacallflex = {
                chart: {
                    type: 'column'
                },
                title: {
                    text: 'Fila Callflex'
                },
                yAxis: {
                    visible: false,
                },
                xAxis: {
                    categories: filacallflex.map(obj => obj['filacallflex'])
                },
                legend: {
                    enabled: false,
                },
                plotOptions: {
                    column: {
                        dataLabels: {
                            enabled: true,
                        }
                    }
                },
                credits: {
                    enabled: false
                },
                series: [{ name: indicador, data: filacallflex.map(obj => obj.qtd) }]
            };
            $scope.dashboard.aging = {
                chart: {
                    type: 'column'
                },
                title: {
                    text: 'Aging'
                },
                yAxis: {
                    visible: false,
                },
                xAxis: {
                    categories: aging.map(obj => obj['aging'])
                },
                legend: {
                    enabled: false,
                },
                plotOptions: {
                    column: {
                        dataLabels: {
                            enabled: true,
                        }
                    }
                },
                credits: {
                    enabled: false
                },
                series: [{ name: indicador, data: aging.map(obj => obj.qtd) }]
            };
            $scope.dashboard.fila = {
                chart: {
                    type: 'column'
                },
                title: {
                    text: 'Filas'
                },
                yAxis: {
                    visible: false,
                },
                xAxis: {
                    categories: fila.map(obj => obj['fila'])
                },
                legend: {
                    enabled: false,
                },
                plotOptions: {
                    column: {
                        dataLabels: {
                            enabled: true,
                        }
                    }
                },
                credits: {
                    enabled: false
                },
                series: [{ name: indicador, data: fila.map(obj => obj.qtd) }]
            };
            $scope.dashboard.billing = {
                chart: {
                    type: 'pie'
                },
                title: {
                    text: 'Billing'
                },
                plotOptions: {
                    pie: {
                        innerSize: '30%'
                    }
                },
                legend: {
                    enabled: false,
                },
                credits: {
                    enabled: false
                },
                series: [{ name: indicador, data: billing.map(obj => ({ name: obj.billing, y: obj.qtd })) }]
            };

            $scope.dashboard.base = dados;

            $scope.dashboard.ExportDia = alasql('select data, sum(' + indicador + ') ' + indicador + ' from ? group by data order by 1', [dados]);
            $scope.dashboard.ExportBilling = alasql('select billing, sum(' + indicador + ') ' + indicador + ' from ? group by billing order by 2 desc', [dados]);
            $scope.dashboard.ExportAging = alasql('select aging, sum(' + indicador + ') ' + indicador + ' from ? group by aging order by 2 desc', [dados]);
            $scope.dashboard.ExportFila = alasql('select fila, sum(' + indicador + ') ' + indicador + ' from ? group by fila order by 2 desc', [dados]);
            $scope.dashboard.ExportFilacallflex = alasql('select filacallflex, sum(' + indicador + ') ' + indicador + ' from ? group by filacallflex order by 2 desc', [dados]);
        }

        $scope.aplicarFiltros = function () {

            cubo.limparFiltros();

            cubo.filtrar('aging', $scope.dashboard.filtros.aging);
            cubo.filtrar('billing', $scope.dashboard.filtros.billing);
            cubo.filtrar('fila', $scope.dashboard.filtros.fila);
            cubo.filtrar('filacallflex', $scope.dashboard.filtros.filacallflex);

            cubo.aplicarFiltros();

            $scope.popularDashboard();
        }

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/vivo/new/humano/dashboard/producaodaily",
                data: $scope.filtros,
            }).then(function success(r) {

                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.status;
             

                cubo.carregar(r.data.Table);
                $scope.popularDashboard();
                $scope.popularFiltros();
            });
        }

        $scope.carregarDashboard();

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard[tabela]]);
        }

    });
</script>