@{
    Layout = "~/Views/master.cshtml";
}

<script>
    angular.module('app').controller('ctrl-vivo-lote', function ($scope, $http, $filter) {
        // variaveis
        $scope.filtros = {
            dtini: $filter('date')(new Date(new Date().getFullYear(), new Date().getMonth(), 1), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
            produtos: '',
            situacao: '-1',
        };
        $scope.dashboard = {};
        $scope.dashFiltros = {};
        $scope.lotes = [];
        $scope.visao = 'atual';
        $scope.configuracao = {indicador: '%estoque'};
        $scope.atual = {}
        $scope.permanencia = {
            de: 0,
            ate: 10
        };

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/vivo/new/humano/dashboard/filtros",
        }).then(function success(r) {
            let data = r.data;
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.produtos = data.Table5;
        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/vivo/dashboard/lote",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                $scope.lotes = [...new Set(r.data.Table.map(o => o.data_lote))];

                $scope.atual.tabela = r.data.Table;
                $scope.atual.media = r.data.Table1[0];
                $scope.permanencia.dados = r.data.Table2;

                $scope.atualizarGraficos();
            });
        }

        $scope.atualizarGraficos = function () {

            // grafico atual
            $scope.atual.grafico = [
        { name: 'Contrato', data: $scope.atual.tabela.map(o => (o.contrato)) },
        { name: $scope.configuracao.indicador, type: 'spline', yAxis: 1, data: $scope.atual.tabela.map(o => obterIndicador(o, $scope.configuracao.indicador)) },
            ];

            // montar colunas
            $scope.permanencia.coluna = [];
            for (var i = $scope.permanencia.de; i <= $scope.permanencia.ate; i++) { $scope.permanencia.coluna.push(i) }

            // montar dados (pivotar)
            $scope.permanencia.tabela = [];
            $scope.permanencia.grafico = [];
            for (n in $scope.lotes) {
                let registros_lote = $scope.permanencia.dados.filter(o => o.data_lote == $scope.lotes[n]);
                let obj_tb = { data_lote: $scope.lotes[n], contrato: registros_lote[0].contrato };
                let obj_gf = { name: $scope.lotes[n], data: [], lineWidth: 1, marker: { enabled: false } }
                for (var i = $scope.permanencia.de; i <= $scope.permanencia.ate; i++) {
                    let d = registros_lote.filter(o => o.dia == i);
                    if (d.length > 0) {
                        let indicador = obterIndicador(d[0], $scope.configuracao.indicador);
                        obj_tb[i] = indicador;
                        obj_gf.data.push(indicador)
                    }

                }
                $scope.permanencia.tabela.push(obj_tb);
                $scope.permanencia.grafico.push(obj_gf);
            }

            // obter media (pro grafico)
            $scope.permanencia.media = [];
            for (var i = $scope.permanencia.de; i <= $scope.permanencia.ate; i++) {
                let d = $scope.permanencia.dados.filter(o => o.dia == i);
                let soma = 0;
                for (var j = 0; j < d.length; j++) {
                    soma += obterIndicador(d[j], $scope.configuracao.indicador);
                }
                $scope.permanencia.media.push((soma / d.length).toFixed(1) * 1);
            }
            $scope.permanencia.grafico.unshift({ name: 'Média', data: $scope.permanencia.media, color: 'black', zIndex: 999 });

        }

        function obterIndicador(registro, indicador) {
            if (indicador == '%estoque') { return (registro['estoque'] * 100 / registro['contrato']).toFixed(1) * 1 }
            else if (indicador == '%discado') { return (registro['discado'] * 100 / registro['contrato']).toFixed(1) * 1 }
            else if (indicador == '%contato') { return (registro['contato'] * 100 / registro['contrato']).toFixed(1) * 1 }
            else if (indicador == '%cpc') { return (registro['cpc'] * 100 / registro['contrato']).toFixed(1) * 1 }
            else if (indicador == '%cpca') { return (registro['cpca'] * 100 / registro['contrato']).toFixed(1) * 1 }
            else if (indicador == '%promessa') { return (registro['promessa'] * 100 / registro['contrato']).toFixed(1) * 1 }
            else if (indicador == '%pagamento') { return (registro['pagamento'] * 100 / registro['contrato']).toFixed(1) * 1 }
            else if (indicador == 'spin') { return (registro['discado_tt'] / registro['contrato']).toFixed(1) * 1 }
            else { return registro[indicador] }
        }

        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>

<!-- HTML -->
<div ng-controller="ctrl-vivo-lote">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Lote</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--PRODUTOS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Produtos</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.produtos" dados="dashFiltros.produtos"></select2>
                        </div>

                        <!--SITUACAO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Situação</label>
                            <select class="form-control" data-placeholder="Selecione" ng-model="filtros.situacao">
                                <option value="-1">Tudo</option>
                                <option value="0">Aberto</option>
                                <option value="1">Fechado</option>
                            </select>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--CONFIGURAÇÕES-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Configurações</span>
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <label><input type="radio" name="visao" ng-model="visao" value="atual" /> Atual </label>
                            <label><input type="radio" name="visao" ng-model="visao" value="permanencia" /> Permanencia </label>
                        </div>

                        <div class="form-group">
                            <label>Indicador:</label>
                            <select ng-model="configuracao.indicador" ng-change="atualizarGraficos();">
                                <option value="%estoque">% Estoque</option>
                                <option value="%discado">% Discado</option>
                                <option value="%contato">% Contato</option>
                                <option value="%cpc">% CPC</option>
                                <option value="%cpca">% CPCA</option>
                                <option value="%promessa">% Promessa</option>
                                <option value="%pagamento">% Pagamento</option>
                            </select>
                        </div>

                        <div class="form-group" ng-if="visao == 'permanencia'">
                            <label>Permanencia: de </label>
                            <input type="number" min="0" max="180" ng-model="permanencia.de" ng-change="atualizarGraficos()" />
                            <label> até </label>
                            <input type="number" min="0" max="180" ng-model="permanencia.ate" ng-change="atualizarGraficos()" />
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--GRAFICO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">GRAFICO</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <!--ATUAL-->
                        <high-chart ng-if="visao == 'atual'" series="atual.grafico" axis-Categories="lotes" type="column"
                                    plot-Options-Spline-Data-Label="true" plot-Options-Column-Stacking="normal"
                                    y-Axis1-Min="0" y-Axis1-Max="100"></high-chart>
                        <!--PERMANENCIA-->
                        <high-chart ng-if="visao == 'permanencia'" series="permanencia.grafico" axis-Categories="permanencia.coluna" tooltip-Shared="false"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--TABELA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">TABELA</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-if="visao == 'atual'" ng-click="extrair('Table')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <div class="card-header-button" ng-if="visao == 'permanencia'" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--ATUAL-->
                        <div class="table-responsive" ng-if="visao == 'atual'">
                            <table class="table table-striped table-bordered" style="width:100%;" ng-if="atual.tabela">
                                <thead>
                                    <tr>
                                        <th>Lote</th>
                                        <th>Contrato</th>
                                        <th>%Estoque</th>
                                        <th>%Discado</th>
                                        <th>%Contato</th>
                                        <th>%CPC</th>
                                        <th>%CPCA</th>
                                        <th>%Promessa</th>
                                        <th>%Pagamento</th>
                                        <th>Spin</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="d in atual.tabela" data-compare-group="group1">
                                        <td>{{d.data_lote}}</td>
                                        <td>{{d.contrato | number}}</td>
                                        <td>{{d.estoque / d.contrato | percentage:1}}</td>
                                        <td>{{d.discado / d.contrato | percentage:1}}</td>
                                        <td>{{d.contato / d.contrato | percentage:1}}</td>
                                        <td>{{d.cpc / d.contrato | percentage:1}}</td>
                                        <td>{{d.cpca / d.contrato | percentage:1}}</td>
                                        <td>{{d.promessa / d.contrato | percentage:1}}</td>
                                        <td>{{d.pagamento / d.contrato | percentage:1}}</td>
                                        <td>{{d.discado_tt / d.contrato | number:1}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Média</th>
                                        <th>{{atual.media.contrato | number}}</th>
                                        <th>{{atual.media.estoque / atual.media.contrato | percentage:1}}</th>
                                        <th>{{atual.media.discado / atual.media.contrato | percentage:1}}</th>
                                        <th>{{atual.media.contato / atual.media.contrato | percentage:1}}</th>
                                        <th>{{atual.media.cpc / atual.media.contrato | percentage:1}}</th>
                                        <th>{{atual.media.cpca / atual.media.contrato | percentage:1}}</th>
                                        <th>{{atual.media.promessa / atual.media.contrato | percentage:1}}</th>
                                        <th>{{atual.media.pagamento / atual.media.contrato | percentage:1}}</th>
                                        <th>{{atual.media.discado_tt / atual.media.contrato | number:1}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <!--PERMANENCIA-->
                        <div class="table-responsive" ng-if="visao == 'permanencia'">
                            <table class="table table-striped table-bordered" style="width:100%;" ng-if="permanencia.tabela">
                                <thead>
                                    <tr>
                                        <th>Lote</th>
                                        <th>Contrato</th>
                                        <th ng-repeat="c in permanencia.coluna">{{c}}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="d in permanencia.tabela">
                                        <td>{{d.data_lote}}</td>
                                        <td>{{d.contrato | number}}</td>
                                        <td ng-repeat="c in permanencia.coluna">{{d[c]}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Média</th>
                                        <th>{{atual.media.contrato | number}}</th>
                                        <th ng-repeat="m in permanencia.media track by $index">{{m | number}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>