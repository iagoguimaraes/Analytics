@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-vivo-acordo">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Acompanhamento de Acordos - Escob</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--SEGMENTACOES-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Segmentações</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.segmentacoes" dados="dashFiltros.segmentacoes" style="width: 100%;"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- RESUMO -->
        <div class="row clearfix">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="info-box bg-purple-active">
                    <span class="info-box-icon">
                        <i class="fa fa-handshake-o"></i>
                    </span>
                    <div class="info-box-content">
                        <div class="inner">
                            <h4>{{dashboard.resumo.acordos}}</h4>
                            <p>Total Acordos</p>
                        </div>
                        @*<div class="text">Total Acordos</div>
                        <div class="info-box-number" ng-bind="dashboard.resumo.acordos | number"></div>*@
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="info-box bg-green-active">
                    <span class="info-box-icon">
                        <i class="fa fa-barcode"></i>
                    </span>
                    <div class="info-box-content">
                        <div class="text">Acordos Marcados</div>
                        <div class="info-box-number" ng-bind="dashboard.resumo.marcado | number"></div>
                        <div class="progress">
                            <div class="progress-bar" style="width: {{dashboard.resumo.pct_marcado}}%"></div>
                        </div>
                        <span class="progress-description">
                            <b>{{dashboard.resumo.pct_marcado}}%</b> Marcados
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="info-box bg-aqua-active">
                    <span class="info-box-icon">
                        <i class="fa fa-spinner "></i>
                    </span>
                    <div class="info-box-content">
                        <div class="text">Acordos não marcados</div>
                        <div class="info-box-number" ng-bind="dashboard.resumo.desmarcado | number"></div>
                        <div class="progress">
                            <div class="progress-bar" style="width: {{dashboard.resumo.pct_desmarcado}}%"></div>
                        </div>
                        <span class="progress-description">
                            <b>{{dashboard.resumo.pct_desmarcado}}%</b> Não Marcados
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!--TABELA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Acordos</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.promessa">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Hora</th>
                                        <th>Segmentação</th>
                                        <th>CPF</th>
                                        <th>Contrato</th>
                                        <th>Telefone</th>
                                        <th>Data Vencimento</th>
                                        <th>Marcado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="p in dashboard.promessa">
                                        <td>{{p.data | date : 'dd/MM/yyyy'}}</td>
                                        <td>{{p.hora}}</td>
                                        <td>{{p.segmentacao}}</td>
                                        <td>{{p.cpf}}</td>
                                        <td>{{p.contrato}}</td>
                                        <td>{{p.telefone}}</td>
                                        <td>{{p.dt_vencimento}}</td>
                                        <td><input type="checkbox" ng-checked="{{p.marcado}}" ng-model="p.marcado" ng-click="checkPromessa(p)" /></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-vivo-acordo', function ($scope, $http, $filter) {
        // filtros iniciais
        let newdate = new Date();
        
        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
            segmentacoes: ''
        };
        $scope.dashFiltros = {};
        $scope.dashboard = {};

        //carregar os filtros
        $http({
            method: 'GET',
            url: "/api/vivo/dashboard/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.campanhas = r.data.Table;
            $scope.dashFiltros.segmentacoes = r.data.Table1;
        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/vivo/dashboard/acordo",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;
                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.promessa = data.Table1;
            });
        }

        $scope.checkPromessa = function (chamada) {
            $http({
                method: 'POST',
                url: "/api/vivo/dashboard/checkacordo",
                data: {
                    id_chamada: chamada.id_chamada,
                    marcado: chamada.marcado,
                    id_segmentacao: chamada.id_segmentacao
                },
            });
        }

        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }
    });
</script>