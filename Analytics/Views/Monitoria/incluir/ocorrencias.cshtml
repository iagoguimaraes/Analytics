@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-monitoria-ocorrencia">

    <!-- HEADER-->
    <header class="page-header">
        <div class="page-name">Ocorrências</div>
    </header>

    <!--LISTA DE CAMPANHAS-->
    <div class="row margin-bottom">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <span class="card-header-title">
                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modal-default">
                            Inserir Nova Ocorrência
                        </button>
                    </span>
                    <div class="card-header-button card-header-expand">
                        <i class="fa fa-expand"></i>
                    </div>
                </div>
                <div class="card-body">


                    <div class="row margin-bottom" ng-if="ocorrenciasLista">
                        <div class="col-xs-12">
                            <d-table class="table table-striped table-bordered" style="width:100%" dados="ocorrenciasLista"></d-table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- MODAL INSERIR-->
    <div class="modal fade" id="modal-default" style="display: none;" ng-if="empresasLista">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Inserir Ocorrência</h4>
                </div>
                <div class="modal-body">

                    <form role="form">

                        <div class="form-group">
                            <label>Empresa</label>
                            <select class="form-control" ng-model="ocorrencia.id_empresa" ng-options="g.id_empresa as g.empresa for g in empresasLista"></select>
                        </div>

                        <div class="form-group">
                            <label>Ocorrência</label>
                            <input type="text" class="form-control" placeholder="Nome Ocorrência" ng-model="ocorrencia.ocorrencia" />
                        </div>

                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="inserirOcorrencia($event)">Inserir</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <!-- MODAL EDITAR-->
    <div class="modal fade" id="modal-edit" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" ng-click="refresh()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Editar Ocorrência</h4>
                </div>
                <div class="modal-body">

                    <form role="form" id="teste">

                        <input type="hidden" ng-model="editdiario.id_ocorrencia" />

                        <div class="form-group">
                            <label>Empresa</label>
                            <select class="form-control" ng-model="editocorrencia.id_empresa" ng-options="g.id_empresa as g.empresa for g in empresasLista">
                                <option value="">Selecione</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Ocorrência</label>
                            <input type="text" class="form-control" placeholder="Nome Ocorrência" ng-model="editocorrencia.ocorrencia" />
                        </div>

                        <div class="form-group">
                            <label>Ativo: </label>
                            <input type="checkbox" ng-model="editocorrencia.ativo" />
                        </div>

                    </form>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="editarOcorrencia()">Salvar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>

<script>
    angular.module('app').controller('ctrl-monitoria-ocorrencia', function ($scope, $http, $filter, $window, dadosPagina) {
        dadosPagina.titulo = 'Ocorrencia';
        dadosPagina.descricao = ''

        // carregar ocorrencia
        $scope.carregarOcorrencias = function () {
            $http({
                method: 'GET',
                url: "/api/monitoria/ocorrencia/obter",
            }).then(function success(r) {

                $scope.ocorrenciasLista = r.data.Table;
                $scope.empresasLista = r.data.Table1;

            });

        }

        $scope.carregarOcorrencias();

        $scope.refresh = function () {
            location.reload();
        }

        // INSERIR OCORRENCIA
        $scope.ocorrencia = {
            ocorrencia: '',
            id_empresa: ''

        }; // objeto para inserir campanha

        $scope.inserirOcorrencia = function ($event) {

            if (!$scope.ocorrencia.ocorrencia) {
                $event.stopPropagation();
                $window.alert("Insira um nome para ocorrencia.");
                return false;
            }

            if (!$scope.ocorrencia.id_empresa) {
                $event.stopPropagation();
                $window.alert("Insira a empresaa da ocorrencia.");
                return false;
            }

            $http({
                method: 'POST',
                url: "/api/monitoria/ocorrencia/inserir",
                data: $scope.ocorrencia,
            }).then(function success(r) {
                $scope.empresa = {
                    nome: '',
                };

                location.reload(); //eliminar o cache dos grupos
                $scope.carregarOcorrencias();


            });
        }

        // EDITAR CAMPANHA
        $scope.editocorrencia = {}; // objeto para editar campanha
        $scope.editarOcorrencia = function () {
            $http({
                method: 'POST',
                url: "/api/monitoria/ocorrencia/alterar",
                data: $scope.editocorrencia,
            }).then(function success(r) {
                $scope.carregarOcorrencias();                
            });
        }

        // ao clicar em uma campanha, carregar modal
        $(document).on('click', '.table tbody tr', function () {
            // obtem o id da campanha para buscar
            let id = $(this).find('td:nth-child(1)').html();


            // consultar dados da campanha
            $http({
                method: 'POST',
                url: "/api/monitoria/ocorrencia/consultar",
                data: { id_ocorrencia: id }
            }).then(function success(r) {

                $scope.editocorrencia.id_ocorrencia = r.data.Table[0].id_ocorrencia;
                $scope.editocorrencia.ocorrencia = r.data.Table[0].ocorrencia;
                $scope.editocorrencia.id_empresa = r.data.Table[0].id_empresa;
                $scope.editocorrencia.empresa = r.data.Table[0].empresa;
                $scope.editocorrencia.ativo = r.data.Table[0].ativo;

                $('#modal-edit').modal('show');


            });

        });

    });

</script>

<style>
    .table tbody tr {
        cursor: pointer;
    }

        .table tbody tr:hover {
            font-weight: bold;
        }
</style>