@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-bradesco-producao">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Produção - P1</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>


        <!-- FILTROS -->
        <div class="row margin-bottom">

            <div class="col-xs-12" ng-if="dashFiltros.status === 200">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- Filtros -->
                        <div class="tab-pane active" id="control-sidebar-filters-tab">
                            <!--DATA INCIAL-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Inicial</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                                </div>
                            </div>

                            <!--DATA FINAL-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Final</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                                </div>
                            </div>

                            <!--SEGMENTOS-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Segmentos</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.segmento" dados="dashFiltros.segmento" style="width:100%"></select2>
                            </div>

                            <!--CARTEIRAS-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Carteiras</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.carteira" dados="dashFiltros.carteira" style="width:100%"></select2>
                            </div>

                            <!--SUPERVISOR-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Supervisor</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.supervisor" dados="dashFiltros.supervisor" style="width:100%"></select2>
                            </div>

                            <!--EQUIPE-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Equipe</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.equipe" dados="dashFiltros.equipe" style="width:100%"></select2>
                            </div>

                            <!--BOTÃO-->
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-purple">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.discado | megaNumber"></h3>
                        <p>Discado</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-phone"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.contato | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1"></h4>
                        <p>Contato</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-headphones"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.cpc | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1"></h4>
                        <p>CPC</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-male"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-2">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.cpca | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1"></h4>
                        <p>CPCA</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-street-view"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-6 col-lg-2">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.promessa | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1"></h4>
                        <p>Promessa</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-thumbs-o-up"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-2">
                <div class="small-box bg-green-active">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.vlr_promessa | megaNumber"></h3>                        
                        <p>Valor de Promessa</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-usd"></i>
                    </div>
                </div>
            </div>
           
            <!--ANALISE POR DIA-->
            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Análise por Dia</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table1')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table4')">
                                <i class="fa fa-table"></i>
                            </div>
                            <small class="pull-right">
                                <label>
                                    <input type="radio" name="graficoHoraExibir" ng-model="graficoDia.exibir" value="false" checked="checked" />
                                    Tabela
                                </label>
                                <label>
                                    <input type="radio" name="graficoHoraExibir" ng-model="graficoDia.exibir" value="true" />
                                    Gráfico
                                </label>

                            </small>
                        </div>
                        <div class="card-body">
                            <!--TABELA-->
                            <div class="table-responsive" ng-show="graficoDia.exibir == 'false'">
                                <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.dia">
                                    <thead>
                                        <tr>
                                            <th>Data</th>
                                            <th>Discado</th>
                                            <th>Contato</th>
                                            <th>CPC</th>
                                            <th>CPCA</th>
                                            <th>Promessa</th>
                                            <th>Valor Promessa</th>
                                            <th>Negociação</th>
                                            <th>Valor Negociação</th>
                                            <th>Hit Rate</th>
                                            <th>Tx Loc</th>
                                            <th>Tx Apv</th>
                                            <th>Conversão</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="d in dashboard.dia">
                                            <td>{{d.data}}</td>
                                            <td>{{d.discado | number}}</td>
                                            <td>{{d.contato | number}}</td>
                                            <td>{{d.cpc | number}}</td>
                                            <td>{{d.cpca | number}}</td>
                                            <td>{{d.promessa | number}}</td>
                                            <td>{{d.vlr_promessa | currency: 'R$ '}}</td>
                                            <td>{{d.negociacao | number}}</td>
                                            <td>{{d.vlr_negociacao | currency: 'R$ '}}</td>
                                            <td>{{d.contato / d.discado | percentage:1}}</td>
                                            <td>{{d.cpc / d.contato | percentage:1}}</td>
                                            <td>{{d.cpca / d.cpc | percentage:1}}</td>
                                            <td>{{d.promessa / d.cpca | percentage:1}}</td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Total</th>
                                            <th>{{dashboard.resumo.discado | number}}</th>
                                            <th>{{dashboard.resumo.contato | number}}</th>
                                            <th>{{dashboard.resumo.cpc | number}}</th>
                                            <th>{{dashboard.resumo.cpca | number}}</th>
                                            <th>{{dashboard.resumo.promessa | number}}</th>
                                            <th>{{dashboard.resumo.vlr_promessa | currency: 'R$ '}}</th>
                                            <th>{{dashboard.resumo.negociacao | number}}</th>
                                            <th>{{dashboard.resumo.vlr_negociacao | currency: 'R$ '}}</th>
                                            <th>{{dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1}}</th>
                                            <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</th>
                                            <th>{{dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1}}</th>
                                            <th>{{dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1}}</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>

                            <!--GRAFICO-->
                            <div ng-show="graficoDia.exibir == 'true'">
                                <span class="pull-right">
                                    <select ng-model="graficoDia.indicador" ng-change="carregarGraficoDia()">
                                        <option value="hitrate">Hit Rate</option>
                                        <option value="txloc">Tx Loc</option>
                                        <option value="txapv">Tx Apv</option>
                                        <option value="conversao">Conversão</option>
                                        <option value="discado">Discado</option>
                                        <option value="contato">Contato</option>
                                        <option value="cpc">CPC</option>
                                        <option value="cpca">CPCA</option>
                                        <option value="promessa">Promessa</option>
                                        <option value="vlr_promessa">Valor Promessa</option>
                                        <option value="negociacao">Negociação</option>
                                        <option value="vlr_negociacao">Valor Negociação</option>
                                    </select>
                                </span>
                                <high-chart series="graficoDia.dados" axis-Categories="dashboard.dias" plot-Options-Line-Data-Label="true"></high-chart>

                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!--ANALISE POR SEGMENTACAO-->
            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Análise por Carteira</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table2')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.carteira">
                                    <thead>
                                        <tr>
                                            <th>Carteira</th>
                                            <th>Discado</th>
                                            <th>Contato</th>
                                            <th>CPC</th>
                                            <th>CPCA</th>
                                            <th>Promessa</th>
                                            <th>$ Promessa</th>
                                            <th>Negociação</th>
                                            <th>$ Negociação</th>
                                            <th>HitRate</th>
                                            <th>Txa Loc</th>
                                            <th>Txa Apv</th>
                                            <th>Conversão</th>
                                        </tr>
                                    </thead>
                                    <tbody ng-repeat="c in dashboard.carteira | groupBy: 'segmento'">

                                        <tr class="text-bold">
                                            <td>
                                                <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                                {{c[0].segmento}}
                                            </td>
                                            <td>{{c | sumByColumn: 'discado'| number}}</td>
                                            <td>{{c | sumByColumn: 'contato'| number}}</td>
                                            <td>{{c | sumByColumn: 'cpc'| number}}</td>
                                            <td>{{c | sumByColumn: 'cpca'| number}}</td>
                                            <td>{{c | sumByColumn: 'promessa'| number}}</td>
                                            <td>{{c | sumByColumn: 'vlr_promessa'| currency: 'R$ '}}</td>
                                            <td>{{c | sumByColumn: 'negociacao'| number}}</td>
                                            <td>{{c | sumByColumn: 'vlr_negociacao'| currency: 'R$ '}}</td>
                                            <td>{{c | divideSumColumns: 'contato':'discado' | percentage:1}}</td>
                                            <td>{{c | divideSumColumns: 'cpc':'contato' | percentage:1}}</td>
                                            <td>{{c | divideSumColumns: 'cpca':'cpc' | percentage:1}}</td>
                                            <td>{{c | divideSumColumns: 'promessa':'cpca' | percentage:1}}</td>
                                        </tr>

                                        <tr ng-repeat="f in c" ng-show="showTbody">
                                            <td>{{f.carteira}}</td>
                                            <td>{{f.discado | number}}</td>
                                            <td>{{f.contato | number}}</td>
                                            <td>{{f.cpc | number}}</td>
                                            <td>{{f.cpca | number}}</td>
                                            <td>{{f.promessa| number}}</td>
                                            <td>{{f.vlr_promessa| currency: 'R$ '}}</td>
                                            <td>{{f.negociacao| number}}</td>
                                            <td>{{f.vlr_negociacao| currency: 'R$ '}}</td>
                                            <td>{{f.contato / f.discado | percentage:1}}</td>
                                            <td>{{f.cpc / f.contato | percentage:1}}</td>
                                            <td>{{f.cpca / f.cpc | percentage:1}}</td>
                                            <td>{{f.promessa / f.cpca | percentage:1}}</td>
                                        </tr>

                                    </tbody>

                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!--ANALISE POR SUPERVISOR \ EQUIPE-->
            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Análise por Supervisor\Equipe</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table4')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.supervisor">
                                    <thead>
                                        <tr>
                                            <th>Credor</th>
                                            <th>Contato</th>
                                            <th>CPC</th>
                                            <th>CPCA</th>
                                            <th>Promessa</th>
                                            <th>Valor Promessa</th>
                                            <th>Negociação</th>
                                            <th>Valor Negociação</th>
                                            <th>TxLoc</th>
                                            <th>Conversão</th>
                                        </tr>
                                    </thead>
                                    <tbody ng-repeat="c in dashboard.supervisor | groupBy: 'supervisor'">

                                        <tr class="text-bold">
                                            <td>
                                                <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                                {{c[0].supervisor}}
                                            </td>
                                            <td>{{c | sumByColumn: 'contato'| number}}</td>
                                            <td>{{c | sumByColumn: 'cpc'| number}}</td>
                                            <td>{{c | sumByColumn: 'cpca'| number}}</td>
                                            <td>{{c | sumByColumn: 'promessa'| number}}</td>
                                            <td>{{c | sumByColumn: 'vlr_promessa' | currency: 'R$ '}}</td>
                                            <td>{{c | sumByColumn: 'negociacao' | number}}</td>
                                            <td>{{c | sumByColumn: 'vlr_negociacao'| currency: 'R$ '}}</td>
                                            <td>{{c | divideSumColumns: 'cpc':'contato' | percentage:1}}</td>
                                            <td>{{c | divideSumColumns: 'promessa':'cpca' | percentage:1}}</td>
                                        </tr>

                                        <tr ng-repeat="f in c" ng-show="showTbody">
                                            <td>{{f.equipe}}</td>
                                            <td>{{f.contato | number}}</td>
                                            <td>{{f.cpc | number}}</td>
                                            <td>{{f.cpca | number}}</td>
                                            <td>{{f.promessa | number}}</td>
                                            <td>{{f.vlr_promessa | currency: 'R$ '}}</td>
                                            <td>{{f.negociacao | number}}</td>
                                            <td>{{f.vlr_negociacao | currency: 'R$ '}}</td>
                                            <td>{{f.cpc / f.contato | percentage:1}}</td>
                                            <td>{{f.promessa / f.cpca | percentage:1}}</td>
                                        </tr>

                                    </tbody>

                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!--OCORRENCIA-->
            <div class="row margin-bottom">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Ocorrências</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table4')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.ocorrencia" order="[[1,'desc']]"></d-table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Análise por Operador</span>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                            <div class="card-header-button" ng-click="extrair('Table4')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                        </div>
                        <div class="card-body">
                            <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.operador" order="[[4,'desc']]"></d-table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

<script>

    angular.module('app').controller('ctrl-bradesco-producao', function ($scope, $http, $filter, dadosPagina) {
        dadosPagina.titulo = 'Produção';
        dadosPagina.descricao = 'Bradesco'

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            segmento: '',
            carteira: '',
            supervisor: '',
            equipe:''
        };
        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.graficoDia = { indicador: 'promessa', dados: [], exibir: 'false' };

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/bradesco/dashboard/filtros",
        }).then(function success(r) {
            let data = r.data;
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.segmento = data.Table;
            $scope.dashFiltros.carteira = data.Table1;
            $scope.dashFiltros.supervisor = data.Table2;
            $scope.dashFiltros.equipe = data.Table3;
        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/bradesco/dashboard/producao",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.status = r.status;

                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.dia = data.Table1;
                $scope.dashboard.carteira = data.Table2;
                $scope.dashboard.operador = data.Table3;
                $scope.dashboard.ocorrencia = data.Table4;
                $scope.dashboard.supervisor = data.Table5;
                $scope.dashboard.dados = r.data;

               
                $scope.carregarGraficoDia();

            });
        }

        // carrega o mapa de acordo com o indicador escolhido
        $scope.carregarGraficoDia = function () {
            let dados = $scope.dashboard.dia;
            $scope.dashboard.dias = dados.map(obj => obj.data);
            switch ($scope.graficoDia.indicador) {
                case 'hitrate':
                    $scope.graficoDia.dados = [{ name: 'hitrate', data: dados.map(obj => (obj.contato * 100 / obj.discado).toFixed(1) * 1) }];
                    break;
                case 'txloc':
                    $scope.graficoDia.dados = [{ name: 'txloc', data: dados.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) * 1) }];
                    break;
                case 'txapv':
                    $scope.graficoDia.dados = [{ name: 'txapv', data: dados.map(obj => (obj.cpca * 100 / obj.cpc).toFixed(1) * 1) }];
                    break;
                case 'conversao':
                    $scope.graficoDia.dados = [{ name: 'conversao', data: dados.map(obj => (obj.promessa * 100 / obj.cpca).toFixed(1) * 1) }];
                    break;
                case 'efetividade':
                    $scope.graficoDia.dados = [{ name: 'efetividade', data: dados.map(obj => (obj.acordo * 100 / obj.promessa).toFixed(1) * 1) }];
                    break;
                default:
                    $scope.graficoDia.dados = [{ name: $scope.graficoDia.indicador, data: dados.map(obj => obj[$scope.graficoDia.indicador]) }];
            }
        }

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

        $scope.carregarDashboard();

    });

</script>
