@{
    Layout = "~/Views/master.cshtml";
}



<div ng-controller="ctrl-bradesco-efetividade">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Efetividade</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!--DATA INCIAL-->
                            <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Periodo Inicial</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                                </div>
                            </div>
                        </div>

                            <!--DATA FINAL-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-sidebar-subheading">Periodo Final</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                                    </div>
                                </div>
                            </div>

                            <!--DATA INCIAL IMPORTACAO-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-sidebar-subheading">Data Inicial Inclusão</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini_inc"></date-picker>
                                    </div>
                                </div>
                            </div>

                            <!--DATA FINAL IMPORTACAO-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-sidebar-subheading">Data Final Inclusão</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim_inc"></date-picker>
                                    </div>
                                </div>
                            </div>
                        </div>

                            <!--SEGMENTO-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Fases</label>
                                <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.segmentos" dados="dashFiltros.segmentos"></select2>
                            </div>


                            <!--CARTEIRAS-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Carteiras</label>
                                <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.carteiras" dados="dashFiltros.carteiras"></select2>
                            </div>

                            <!--VISÃO-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Visão</label>
                                <select class="form-control" ng-model="filtros.visao">
                                    <option value="vencimento">Vencimento</option>
                                    <option value="andamento" selected="selected">Andamento</option>
                                </select>
                            </div>

                            <!--BOTÃO-->
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                            </div>

                        </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">

            <!--RESUMO-->
            <div class="col-xs-12 col-md-4 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Resumo</span>
                    </div>
                    <div class="card-body">
                        <div class="small-box bg-red">
                            <div class="inner">
                                <b>Acordos:</b><span class="pull-right" ng-bind="dashboard.resumo.qtd_acordo | number"></span>
                            </div>
                        </div>
                        <div class="small-box bg-red">
                            <div class="inner">
                                <b>Acordos R$:</b><span class="pull-right" ng-bind="dashboard.resumo.saldo_acordo |  currency:'R$'"></span>
                            </div>
                        </div>
                        <div class="small-box bg-green">
                            <div class="inner">
                                <b>Pagamentos:</b><span class="pull-right" ng-bind="dashboard.resumo.qtd_pagamentos | number"></span>
                            </div>
                        </div>
                        <div class="small-box bg-green">
                            <div class="inner">
                                <b>Pagamento R$:</b><span class="pull-right" ng-bind="dashboard.resumo.saldo_pago |  currency:'R$'"></span>
                            </div>
                        </div>
                        <div class="small-box bg-green">
                            <div class="inner">
                                <b>Demais Parcelas R$:</b><span class="pull-right" ng-bind="dashboard.resumo.saldo_demais |  currency:'R$'"></span>
                            </div>
                        </div>
                        <div class="small-box bg-blue">
                            <div class="inner">
                                <b>Efetividade R$:</b><span class="pull-right" ng-bind="dashboard.resumo.saldo_demais /  dashboard.resumo.saldo_acordo |  percentage:1 "></span>
                            </div>
                        </div>
                        <div class="small-box bg-blue">
                            <div class="inner">
                                <b>Efetividade:</b><span class="pull-right" ng-bind="dashboard.resumo.qtd_pagamentos /  dashboard.resumo.qtd_acordo |  percentage:1 "></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!--SALDO RISCO-->
            <div class="col-xs-12 col-md-8 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Demais Parcelas - Dia a Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.saldoRisco" height="418" axis-Categories="dashboard.diasPag" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE POR SEGMENTACAO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Segmentação</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table5')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.grupo">
                                <thead>
                                    <tr>
                                        <th>Carteira/Fase</th>
                                        <th>Quantidade Acordo</th>
                                        <th>Valor Acordo</th>
                                        <th>Quantidade Pagamento</th>
                                        <th>Demais Parcelas</th>
                                        <th>Efetividade Qtd</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="g in dashboard.grupo | groupBy: 'ds_carteira'">

                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{g[0].ds_carteira}}
                                        </td>
                                        <td>{{g | sumByColumn: 'qtd_acordos'| number}}</td>
                                        <td>{{g | sumByColumn: 'saldo_acordo'| currency:'R$'}}</td>
                                        <td>{{g | sumByColumn: 'qtd_pagamentos'| number}}</td>
                                        <td>{{g | sumByColumn: 'saldo_demais'| currency:'R$'}}</td>
                                        <td>{{g | divideSumColumns: 'qtd_pagamentos':'qtd_acordos' | percentage:1}}</td>
                                    </tr>

                                    <tr ng-repeat="c in g" ng-show="showTbody">
                                        <td>{{c.ds_fase}}</td>
                                        <td>{{c.qtd_acordos | number}}</td>
                                        <td>{{c.saldo_acordo | number }}</td>
                                        <td>{{c.qtd_pagamentos | number}}</td>
                                        <td>{{c.saldo_demais | currency:'R$ '}}</td>
                                        <td>{{c.qtd_pagamentos / c.qtd_acordos | percentage:1}}</td>

                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--SALDO RISCO-->
        @*<div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Saldo Risco - Pagamentos</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.saldoRisco" axis-Categories="dashboard.diasPag" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                    </div>
                </div>
            </div>
        </div>*@

        <!--EFETIVIDADE-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Efetividade por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.diaProm" axis-Categories="dashboard.diasEfetividadeNew" type="column"
                                    plot-Options-Column-Data-Label="true" y-Axis1-Min="0"
                                    y-Axis1-Max="100"></high-chart>
                    </div>
                    </div>
                </div>
            </div>
        </div>

        <!--OPERADOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Operador</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.operador" scroll-collapse="true" scroll-y="324px" order="[[3,'desc']]"></d-table>
                    </div>
                </div>
            </div>
        </div>

    </div>



<script>

    angular.module('app').controller('ctrl-bradesco-efetividade', function ($scope, $http, $filter) {
        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);
        let dataInc = new Date(newdate.getFullYear(), newdate.getMonth(), -60);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            dtini_inc: $filter('date')(dataInc, "yyyy-MM-dd"),
            dtfim_inc: $filter('date')(newdate, "yyyy-MM-dd"),
            visao: 'andamento',
            segmentos: '',
            carteiras: '',

        };
        $scope.dashFiltros = {};
        $scope.dashboard = {};

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/bradesco/dashboard/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.segmentos = r.data.Table;
            $scope.dashFiltros.carteiras = r.data.Table1;
        });


        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/bradesco/dashboard/efetividade",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                //let data = r.data;

                $scope.dashboard.diasPag = r.data.Table1.map(obj => obj.data);
                //$scope.dashboard.diasAcordo = r.data.Table4.map(obj => obj.data);
                //$scope.dashboard.diasEfetividade = r.data.Table4.map(obj => obj.data);
                $scope.dashboard.diasEfetividadeNew = r.data.Table2.map(obj => obj.data);

                $scope.dashboard.grupo = r.data.Table4;


                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.saldoRisco = [{ name: 'Demais Parcelas', data: r.data.Table1.map(obj => (obj.valor_risco)) }];
                $scope.dashboard.operador = r.data.Table3;
                $scope.dashboard.diaProm = [
                        { name: 'acordo', type: 'column', data: r.data.Table2.map(obj => obj.qtd_acordo) },
                        { name: 'pagamento', type: 'column', data: r.data.Table2.map(obj => obj.qtd_pagto) },
                        { name: 'efetividade', type: 'spline', yAxis: 1, data: r.data.Table2.map(obj => (obj.qtd_pagto * 100.0 / obj.qtd_acordo).toFixed(2)/1 ) },
                        
                ];
            });
        }

        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });

</script>

