@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-localiza-producao">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Produção Digital</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>                      

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">
            @*<div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box" style="background-color: #004592">
                    <img class="img-responsive center-block" src="/Content/Images/Tim/logo.jpg" height="100" width="100" />
                </div>
            </div>*@
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-gray">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.discado | megaNumber"></h3>
                        <p>Discado</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-phone"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.contato | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1"></h4>
                        <p>Contato</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-headphones"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.cpc | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1"></h4>
                        <p>CPC</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-male"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.cpca | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1"></h4>
                        <p>CPCA</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-street-view"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.promessa | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1"></h4>
                        <p>Promessa</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-thumbs-o-up"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-blue">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.valor_promessa | megaNumber "></h3>
                        <p>R$ Promessa</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-thumbs-o-up"></i>
                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE POR DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="margin-bottom">
                            <small>
                                <input type="button" class="btn btn-primary" value="{{opcoes.edit? 'Cancelar':'Editar'}}" ng-click="editar()" />
                            </small>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.dia">
                                <thead>
                                    <tr>
                                        <th>Dia</th>
                                        <th>AD</th>
                                        <th>Mailing</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>Alega</th>
                                        <th>CPCA</th>
                                        <th>Promessa</th>
                                        <th>R$ Promessa</th>
                                        <th>Tempo Falado</th>
                                        <th>Hit Rate</th>
                                        <th>Tx Loc</th>
                                        <th>Tx Alega</th>
                                        <th>Tx Apv</th>
                                        <th>Conversão</th>
                                        <th>Spin</th>
                                    </tr>
                                </thead>
                                <tbody id="idtbody" >
                                    <tr ng-repeat="dia in dashboard.dia">
                                        <td>{{dia.data | date : 'yyyy-MM-dd'}}</td>
                                        <td>{{dia.ad}}</td>
                                        <td ng-if="opcoes.edit">
                                            <input type="number" id="idinput" min="0" max="9999999" placeholder="9.999.999" class="form-control" onkeyup="if (this.value > 9999999) { this.value = '9999999';} else if (this.value < 0) {this.value = '0';}" value="{{dia.mailing}}" ng-disabled="!opcoes.edit" />
                                        </td>
                                        <td ng-if="!opcoes.edit">{{dia.mailing | number}}</td>
                                        <td>{{dia.discado | number}}</td>
                                        <td>{{dia.contato | number}}</td>
                                        <td>{{dia.cpc | number}}</td>
                                        <td>{{dia.alega_pagamento | number}}</td>
                                        <td>{{dia.cpca | number}}</td>
                                        <td>{{dia.promessa | number}}</td>
                                        <td>{{dia.valor_promessa | currency: 'R$ '}}</td>
                                        <td>{{dia.falado | formatTimer }}</td>
                                        <td>{{dia.contato / dia.discado | percentage:1}}</td>
                                        <td>{{dia.cpc / dia.contato | percentage:1}}</td>
                                        <td>{{dia.alega_pagamento / dia.cpc | percentage:1}}</td>
                                        <td>{{dia.cpca / dia.cpc | percentage:1}}</td>
                                        <td>{{dia.promessa / dia.cpca | percentage:1}}</td>
                                        <td>{{dia.discado / dia.mailing | number: 1 }}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.qtd_ad | number}}</th>
                                        <th>{{dashboard.resumo.mailing | number}}</th>
                                        <th>{{dashboard.resumo.discado | number}}</th>
                                        <th>{{dashboard.resumo.contato | number}}</th>
                                        <th>{{dashboard.resumo.cpc | number}}</th>
                                        <th>{{dashboard.resumo.alega_pagamento | number}}</th>
                                        <th>{{dashboard.resumo.cpca | number}}</th>
                                        <th>{{dashboard.resumo.promessa | number}}</th>
                                        <th>{{dashboard.resumo.valor_promessa | currency: 'R$ '}}</th>
                                        <th>{{dashboard.resumo.med_tmp_falado | formatTimer }}</th>
                                        <th>{{dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.alega_pagamento / dashboard.resumo.cpc | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1}}</th>
                                        <td>{{dashboard.resumo.discado / dashboard.resumo.mailing | number: 1 }}</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <small>
                            <input type="button" class="btn btn-success" value="Salvar" ng-if="opcoes.edit" ng-click="salvar()" />
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!--GRAFICO POR DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Gráfico por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="grafico.indicador" ng-change="carregarGrafico()">
                                <option value="hitrate">Hit Rate</option>
                                <option value="txloc">Tx Loc</option>
                                <option value="txapv">Tx Apv</option>
                                <option value="conversao">Conversão</option>
                                <option value="discado">Discado</option>
                                <option value="contato">Contato</option>
                                <option value="cpc">CPC</option>
                                <option value="cpca">CPCA</option>
                                <option value="promessa">Promessa</option>
                                <option value="alega_pagamento">Alega Pagamento</option>
                                <option value="valor_promessa">R$ Promessa</option>
                                <option value="falado">Tempo Falado</option>
                                <option value="mailing">Mailing</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.grafico" axis-Categories="dashboard.datas" plot-Options-Line-Data-Label="true"></high-chart>
                    </div>
                </div>
            </div>
        </div>    
        
        <!--ANALISE POR PRODUTO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Produto</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.produto">
                                <thead>
                                    <tr>
                                        <th>Produto</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>Alega Pagamento</th>
                                        <th>CPCA</th>
                                        <th>Promessa</th>
                                        <th>R$ Promessa</th>
                                        <th>Hit Rate</th>
                                        <th>Tx Loc</th>
                                        <th>Tx Alega</th>
                                        <th>Tx Apv</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="produto in dashboard.produto">
                                        <td>{{produto.produto}}</td>                                        
                                        <td>{{produto.discado | number}}</td>
                                        <td>{{produto.contato | number}}</td>
                                        <td>{{produto.cpc | number}}</td>
                                        <td>{{produto.alega_pagamento | number}}</td>
                                        <td>{{produto.cpca | number}}</td>
                                        <td>{{produto.promessa | number}}</td>
                                        <td>{{produto.valor_promessa | currency: 'R$ '}}</td>
                                        <td>{{produto.contato / produto.discado | percentage:1}}</td>
                                        <td>{{produto.cpc / produto.contato | percentage:1}}</td>
                                        <td>{{produto.alega_pagamento / produto.cpc | percentage:1}}</td>
                                        <td>{{produto.cpca / produto.cpc | percentage:1}}</td>
                                        <td>{{produto.promessa / produto.cpca | percentage:1}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumoproduto.discado | number}}</th>
                                        <th>{{dashboard.resumoproduto.contato | number}}</th>
                                        <th>{{dashboard.resumoproduto.cpc | number}}</th>
                                        <th>{{dashboard.resumoproduto.alega_pagamento | number}}</th>
                                        <th>{{dashboard.resumoproduto.cpca | number}}</th>
                                        <th>{{dashboard.resumoproduto.promessa | number}}</th>
                                        <th>{{dashboard.resumoproduto.valor_promessa | currency: 'R$ '}}</th>
                                        <th>{{dashboard.resumoproduto.contato / dashboard.resumoproduto.discado | percentage: 1}}</th>
                                        <th>{{dashboard.resumoproduto.cpc / dashboard.resumoproduto.contato | percentage: 1}}</th>
                                        <th>{{dashboard.resumoproduto.alega_pagamento / dashboard.resumoproduto.cpc | percentage: 1}}</th>
                                        <th>{{dashboard.resumoproduto.cpca / dashboard.resumoproduto.cpc | percentage: 1}}</th>
                                        <th>{{dashboard.resumoproduto.promessa / dashboard.resumoproduto.cpca | percentage: 1}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--TABULACOES-->
        <div class="row">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Tabulações</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.tabulacao" paging="false" order="[[1,'desc']]"></d-table>
                    </div>
                </div>
            </div>
        </div>  


    </div>
</div>

<script>

    angular.module('app').controller('ctrl-localiza-producao', function ($scope, $http, $filter) {
        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            //produtos: ''
        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.grafico = { indicador: 'hitrate' };

        $scope.opcoes = {
            edit: false
        };

        // Objeto Mailing
        $scope.mailing = [{
            data: '',
            qtd_mailing: ''
        }];

        $scope.cadastrarMailing = function () {
            $http({
                method: 'POST',
                url: "/api/localiza/dashboard/cadmailing",
                data: JSON.stringify($scope.mailing),
            }).then(function success(r) {

                $scope.mailing = [{
                    data: '',
                    qtd_mailing: ''
                }];

                location.reload();
                $scope.carregarDashboard();

            });
        }

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/localiza/dashboard/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            let data = r.data;
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.produtos = data.Table;
        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/localiza/dashboard/producao",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.dia = data.Table1;
                $scope.dashboard.tabulacao = data.Table2;
                $scope.dashboard.resumoproduto = data.Table3[0];
                $scope.dashboard.produto = data.Table4;

                $scope.carregarGrafico();

            });
        }


        $scope.editar = function () {
            $scope.opcoes.edit = !$scope.opcoes.edit;
        }

        $scope.salvar = function () {

            $scope.opcoes.edit = !$scope.opcoes.edit;

            let tabela = document.getElementById('idtbody')

            
            for (let i = 0; i < tabela.rows.length; i++) {

                let dt = tabela.children[i].children[0].innerHTML
                let txt = tabela.children[i].children[2].getElementsByTagName('input').item(0).value;

                $scope.mailing.push({ data: dt, qtd_mailing: txt });
            }

            //console.log($scope.mailing);
            $scope.cadastrarMailing();
        }

        // carrega o mapa de acordo com o indicador escolhido
        $scope.carregarGrafico = function () {
            let dados = $scope.dashboard.dia;
            $scope.dashboard.datas = dados.map(obj => $filter('date')(obj.data, "yyyy-MM-dd"));
            switch ($scope.grafico.indicador) {
                case 'hitrate':
                    $scope.dashboard.grafico = [{ name: 'hitrate', data: dados.map(obj => (obj.contato * 100 / obj.discado).toFixed(1) * 1) }];
                    break;
                case 'txloc':
                    $scope.dashboard.grafico = [{ name: 'txloc', data: dados.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) * 1) }];
                    break;
                case 'txapv':
                    $scope.dashboard.grafico = [{ name: 'txapv', data: dados.map(obj => (obj.cpca * 100 / obj.cpc).toFixed(1) * 1) }];
                    break;
                case 'conversao':
                    $scope.dashboard.grafico = [{ name: 'conversao', data: dados.map(obj => (obj.promessa * 100 / obj.cpca).toFixed(1) * 1) }];
                    break;
                case 'ocupacao':
                    $scope.dashboard.grafico = [{ name: 'ocupacao', data: dados.map(obj => (obj.falado * 100 / obj.logado).toFixed(1) * 1) }];
                    break;
                default:
                    $scope.dashboard.grafico = [{ name: $scope.grafico.indicador, data: dados.map(obj => obj[$scope.grafico.indicador]) }];
            }
        }


        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });

</script>
