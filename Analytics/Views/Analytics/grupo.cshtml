@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-grupo">

    <!-- HEADER-->
    <header class="page-header">
        <div class="page-name">Grupos</div>
    </header>

    <!--LISTA DE USUARIO-->
    <div class="row margin-bottom">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <span class="card-header-title">
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-default">
                            Inserir Novo Grupo
                        </button>
                    </span>
                    <div class="card-header-button card-header-expand">
                        <i class="fa fa-expand"></i>
                    </div>
                </div>
                <div class="card-body">


                    <div class="row margin-bottom" ng-if="grupos">
                        <div class="col-xs-12">
                            <d-table class="table table-striped table-bordered" style="width:100%" dados="grupos"></d-table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- MODAL INSERIR-->
    <div class="modal fade" id="modal-default" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Inserir Grupo</h4>
                </div>
                <div class="modal-body">

                    <form role="form">

                        <div class="form-group">
                            <label>Nome</label>
                            <input type="text" class="form-control" placeholder="Nome Grupo" ng-model="grupo.nome" />
                        </div>

                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="inserirUsuario()">Inserir</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <!-- MODAL EDITAR-->
    <div class="modal fade" id="modal-edit" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" ng-click="refresh()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Editar Grupo</h4>
                </div>
                <div class="modal-body">

                    <form role="form" id="teste">

                        <input type="hidden" ng-model="editdiario.id_grupo" />

                        <div class="form-group">
                            <label>Nome</label>
                            <input type="text" class="form-control" placeholder="Nome Grupo" ng-model="editgrupo.nome" />
                        </div>

                        <div class="form-group">
                            <label>Ativo: </label>
                            <input type="checkbox" ng-model="editgrupo.ativo" />
                        </div>

                    </form>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="editarGrupo()">Salvar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</div>

<script>
    angular.module('app').controller('ctrl-grupo', function ($scope, $http, $filter, dadosPagina) {
        dadosPagina.titulo = 'Grupos';
        dadosPagina.descricao = ''

        // carregar os usuários
        $scope.carregarGrupos = function () {
            $http({
                method: 'GET',
                url: "/api/grupo/obter",
            }).then(function success(r) {

                $scope.grupos = r.data.Table;

            });


        }
        $scope.carregarGrupos();

        $scope.refresh = function () {
            location.reload();
        }


        // INSERIR GRUPO
        $scope.usuario = {
            nome: '',
        }; // objeto para inserir grupo

        $scope.inserirUsuario = function () {
            $http({
                method: 'POST',
                url: "/api/grupo/inserir",
                data: $scope.grupo,
            }).then(function success(r) {
                $scope.grupo = {
                    nome: '',
                };

                location.reload();//eliminar o cache dos grupos
                $scope.carregarUsuarios();


            });
        }

        // EDITAR GRUPO
        $scope.editgrupo = {}; // objeto para editar grupo
        $scope.editarGrupo = function () {
            $http({
                method: 'POST',
                url: "/api/grupo/alterar",
                data: $scope.editgrupo,
            }).then(function success(r) {
                $scope.carregarGrupos();
            });
        }


        // ao clicar em um grupo, carregar modal
        $(document).on('click', '.table tbody tr', function () {
            // obtem o id da usuário para buscar
            let id = $(this).find('td:nth-child(1)').html();


            // consultar dados do grupo
            $http({
                method: 'POST',
                url: "/api/grupo/consultar",
                data: { id_grupo: id }
            }).then(function success(r) {

                $scope.editgrupo.id_grupo = r.data.Table[0].id_grupo;
                $scope.editgrupo.nome = r.data.Table[0].descricao;
                $scope.editgrupo.ativo = r.data.Table[0].ativo;

                 $('#modal-edit').modal('show');



            });

        });

    });


</script>

<style>
    .table tbody tr {
        cursor: pointer;
    }

        .table tbody tr:hover {
            font-weight: bold;
        }
</style>
