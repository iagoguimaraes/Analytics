@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-recurso">

    <!-- HEADER-->
    <header class="page-header">
        <div class="page-name">Recursos</div>
    </header>

    <!--LISTA DE USUARIO-->
    <div class="row margin-bottom">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <span class="card-header-title">
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-default">
                            Inserir Novo Recurso
                        </button>
                    </span>
                    <div class="card-header-button card-header-expand">
                        <i class="fa fa-expand"></i>
                    </div>
                </div>
                <div class="card-body">


                    <div class="row margin-bottom" ng-if="recursos">
                        <div class="col-xs-12">
                            <d-table class="table table-striped table-bordered" style="width:100%" dados="recursos"></d-table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- MODAL INSERIR-->
    <div class="modal fade" id="modal-default" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Inserir Recurso</h4>
                </div>
                <div class="modal-body">

                    <form role="form">

                        <div class="form-group">
                            <label>Rota</label>
                            <input type="text" class="form-control" placeholder="Caminho Rota" ng-model="recurso.path" />
                        </div>

                        <div class="form-group">
                            <label>Dashboard</label>
                            <input type="text" class="form-control" placeholder="Referencia do Dashboard" ng-model="recurso.dashboard" />
                        </div>

                        <div class="form-group">
                            <label>Pagina</label>
                            <input type="text" class="form-control" placeholder="Referencia da Dashboard" ng-model="recurso.pagina" />
                        </div>

                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="inserirRecurso($event)">Inserir</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <!-- MODAL EDITAR-->
    <div class="modal fade" id="modal-edit" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" ng-click="refresh()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Editar Recurso</h4>
                </div>
                <div class="modal-body">

                    <form role="form" id="teste">

                        <input type="hidden" ng-model="editdiario.id_recurso" />

                        <div class="form-group">
                            <label>Rota</label>
                            <input type="text" class="form-control" placeholder="Nome Grupo" ng-model="editrecurso.path" />
                        </div>

                        <div class="form-group">
                            <label>Dashboard</label>
                            <input type="text" class="form-control" placeholder="Nome Grupo" ng-model="editrecurso.dashboard" />
                        </div>

                        <div class="form-group">
                            <label>Pagina</label>
                            <input type="text" class="form-control" placeholder="Nome Grupo" ng-model="editrecurso.pagina" />
                        </div>

                    </form>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="editarRecurso()">Salvar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</div>

<script>
    angular.module('app').controller('ctrl-recurso', function ($scope, $http, $filter, $window, dadosPagina) {
        dadosPagina.titulo = 'Recursos';
        dadosPagina.descricao = ''

        // carregar os usuários
        $scope.carregarRecursos = function () {
            $http({
                method: 'GET',
                url: "/api/recurso/obter",
            }).then(function success(r) {

                $scope.recursos = r.data.Table;

            });


        }
        $scope.carregarRecursos();

        $scope.refresh = function () {
            location.reload();
        }

        // INSERIR RECURSO
        $scope.recurso = {
            path: '',
        }; // objeto para inserir grupo

        $scope.inserirRecurso = function ($event) {

            if (!$scope.recurso.path) {
                $event.stopPropagation();
                $window.alert("Insira um path ao recurso.");
                return false;
            }

            $http({
                method: 'POST',
                url: "/api/recurso/inserir",
                data: $scope.recurso,
            }).then(function success(r) {
                $scope.recurso = {
                    nome: '',
                };

                location.reload();//eliminar o cache dos grupos
                $scope.carregarRecursos();


            });
        }

        // EDITAR RECURSO
        $scope.editrecurso = {}; // objeto para editar grupo
        $scope.editarRecurso= function () {
            $http({
                method: 'POST',
                url: "/api/recurso/alterar",
                data: $scope.editrecurso,
            }).then(function success(r) {
                $scope.carregarRecursos();
            });
        }


        // ao clicar em um grupo, carregar modal
        $(document).on('click', '.table tbody tr', function () {
            // obtem o id da usuário para buscar
            let id = $(this).find('td:nth-child(1)').html();


            // consultar dados do grupo
            $http({
                method: 'POST',
                url: "/api/recurso/consultar",
                data: { id_recurso: id }
            }).then(function success(r) {

                $scope.editrecurso.id_recurso = r.data.Table[0].id_recurso;
                $scope.editrecurso.path = r.data.Table[0].path;
                $scope.editrecurso.dashboard = r.data.Table[0].dashboard;
                $scope.editrecurso.pagina = r.data.Table[0].pagina;

                 $('#modal-edit').modal('show');



            });

        });

    });


</script>

<style>
    .table tbody tr {
        cursor: pointer;
    }

        .table tbody tr:hover {
            font-weight: bold;
        }
</style>
