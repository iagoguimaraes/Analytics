@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-pagina">

    <!-- HEADER-->
    <header class="page-header">
        <div class="page-name">Pagina</div>
    </header>

    <!--LISTA DE CREDORES-->
    <div class="row margin-bottom">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <span class="card-header-title">
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-default">
                            Inserir Nova Pagina
                        </button>
                    </span>
                    <div class="card-header-button card-header-expand">
                        <i class="fa fa-expand"></i>
                    </div>
                </div>
                <div class="card-body">


                    <div class="row margin-bottom" ng-if="paginasLista">
                        <div class="col-xs-12">
                            <d-table class="table table-striped table-bordered" style="width:100%" dados="paginasLista"></d-table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- MODAL INSERIR-->
    <div class="modal fade" id="modal-default" style="display: none;"  ng-if="credoresLista">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Inserir Pagina</h4>
                </div>
                <div class="modal-body">

                    <form role="form">

                        <div class="form-group">
                            <label>Credor</label>
                            <select class="form-control" ng-model="pagina.indicador" ng-change="carregarOrdem()" ng-options="g.id_credor as g.nome for g in credoresLista" >

                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label>Path</label>
                            <input type="text" class="form-control" placeholder="Path Pagina" ng-model="pagina.path" />
                        </div>

                        <div class="form-group">
                            <label>Nome</label>
                            <input type="text" class="form-control" placeholder="Nome Pagina" ng-model="pagina.nome" />
                        </div>

                        <div class="form-group">
                            <label>Url</label>
                            <input type="text" class="form-control" placeholder="Url Pagina" ng-model="pagina.url" />
                        </div>

                        <div class="form-group">
                            <label>Icone</label>
                            <input type="text" class="form-control" placeholder="Escolha o Icone" ng-model="pagina.icone" />
                        </div>


                        <div class="form-group">
                            <label>Ordem (Sugestão de Posição)</label>
                            <input type="text" class="form-control" placeholder="Posição da Pagina" ng-model="pagina.posicao"/>
                        </div>

                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="inserirPagina($event)">Inserir</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <!-- MODAL EDITAR-->
    <div class="modal fade" id="modal-edit" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" ng-click="refresh()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Editar Pagina</h4>
                </div>
                <div class="modal-body">

                    <form role="form" id="teste">

                        <input type="hidden" ng-model="editdiario.id_pagina" />

                        <div class="form-group">
                            <label>Credor</label>
                            <select class="form-control" ng-model="editpagina.id_credor" ng-options="g.id_credor as g.nome for g in credoresLista">
                                <option value="">Selecione</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Path</label>
                            <input type="text" class="form-control" placeholder="Path Pagina" ng-model="editpagina.path" />
                        </div>

                        <div class="form-group">
                            <label>Nome</label>
                            <input type="text" class="form-control" placeholder="Nome Pagina" ng-model="editpagina.nome" />
                        </div>

                        <div class="form-group">
                            <label>Url</label>
                            <input type="text" class="form-control" placeholder="Url Pagina" ng-model="editpagina.url" />
                        </div>

                        <div class="form-group">
                            <label>Icone</label>
                            <input type="text" class="form-control" placeholder="Escolha o Icone" ng-model="editpagina.icone" />
                        </div>


                        <div class="form-group">
                            <label>Ordem</label>
                            <input type="text" class="form-control" placeholder="Posição da Pagina" ng-model="editpagina.ordem" />
                        </div>

                        <div class="form-group">
                            <label>Ativo: </label>
                            <input type="checkbox" ng-model="editpagina.ativo" />
                        </div>

                    </form>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="editarPagina()">Salvar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</div>

<script>
    angular.module('app').controller('ctrl-pagina', function ($scope, $http, $filter, $window, dadosPagina) {
        dadosPagina.titulo = 'Pagina';
        dadosPagina.descricao = ''

         //$scope.ordem = { indicador: '', posicao:'' }

        // carregar os usuários
        $scope.carregarPaginas = function () {
            $http({
                method: 'GET',
                url: "/api/pagina/obter",
            }).then(function success(r) {

                $scope.paginasLista = r.data.Table;
                $scope.credoresLista = r.data.Table1;
                $scope.credoresOrdem = r.data.Table2;
               

            });

        }

        $scope.carregarPaginas();

        $scope.refresh = function () {
            location.reload();
        }

        // carrega o grafico (barrra) de acordo com o indicador escolhido
        $scope.carregarOrdem = function () {

            let dados = alasql('select ordem from ? where id_credor =  ? ', [$scope.credoresOrdem, $scope.pagina.indicador]);

            $scope.pagina.posicao = dados[0].ordem;
            console.log($scope.pagina.posicao);

        }


        // INSERIR PAGINA
        $scope.pagina = {
            nome: '',
            posicao: '',
            indicador: ''

        }; // objeto para inserir pagina

        $scope.inserirPagina = function ($event) {

            if (!$scope.pagina.path) {
                $event.stopPropagation();
                $window.alert("Insira um path para pagina.");
                return false;
            }

            if (!$scope.pagina.nome) {
                $event.stopPropagation();
                $window.alert("Insira um nome a pagina.");
                return false;
            }

            if (!$scope.pagina.url) {
                $event.stopPropagation();
                $window.alert("Insira uma Url a pagina.");
                return false;
            }


            if (!$scope.pagina.icone) {
                $event.stopPropagation();
                $window.alert("Insira um icone a pagina");
                return false;
            }

            if (!$scope.pagina.posicao) {
                $event.stopPropagation();
                $window.alert("Insira uma valor de posição da pagina.");
                return false;
            }

            if (!$scope.pagina.indicador) {
                $event.stopPropagation();
                $window.alert("Escolha um credor.");
                return false;
            }

      
            $http({
                method: 'POST',
                url: "/api/pagina/inserir",
                data: $scope.pagina,
            }).then(function success(r) {
                $scope.credor = {
                    nome: '',
                };

                location.reload();//eliminar o cache dos grupos
                $scope.carregarPaginas();


            });
        }

        // EDITAR GRUPO
        $scope.editpagina = {}; // objeto para editar grupo
        $scope.editarPagina = function () {
            $http({
                method: 'POST',
                url: "/api/pagina/alterar",
                data: $scope.editpagina,
            }).then(function success(r) {
                $scope.carregarPaginas();
            });
        }


        // ao clicar em um grupo, carregar modal
        $(document).on('click', '.table tbody tr', function () {
            // obtem o id da pagina para buscar
            let id = $(this).find('td:nth-child(1)').html();


            // consultar dados do grupo
            $http({
                method: 'POST',
                url: "/api/pagina/consultar",
                data: { id_pagina: id }
            }).then(function success(r) {

                $scope.editpagina.id_pagina = r.data.Table[0].id_pagina;
                $scope.editpagina.path = r.data.Table[0].path;
                $scope.editpagina.nome = r.data.Table[0].nome;
                $scope.editpagina.url = r.data.Table[0].url;
                $scope.editpagina.icone = r.data.Table[0].icone;
                $scope.editpagina.ordem = r.data.Table[0].ordem;
                $scope.editpagina.credor = r.data.Table[0].credor;
                $scope.editpagina.id_credor = r.data.Table[0].id_credor;
                $scope.editpagina.ativo = r.data.Table[0].ativo;

                 $('#modal-edit').modal('show');



            });

        });

    });


</script>

<style>
    .table tbody tr {
        cursor: pointer;
    }

        .table tbody tr:hover {
            font-weight: bold;
        }
</style>
