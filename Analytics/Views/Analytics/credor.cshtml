@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-credor">

    <!-- HEADER-->
    <header class="page-header">
        <div class="page-name">Credor</div>
    </header>

    <!--LISTA DE CREDORES-->
    <div class="row margin-bottom">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <span class="card-header-title">
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-default">
                            Inserir Novo Credor
                        </button>
                    </span>
                    <div class="card-header-button card-header-expand">
                        <i class="fa fa-expand"></i>
                    </div>
                </div>
                <div class="card-body">


                    <div class="row margin-bottom" ng-if="credoresLista">
                        <div class="col-xs-12">
                            <d-table class="table table-striped table-bordered" style="width:100%" dados="credoresLista"></d-table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- MODAL INSERIR-->
    <div class="modal fade" id="modal-default" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Inserir Credor</h4>
                </div>
                <div class="modal-body">

                    <form role="form">

                        <div class="form-group">
                            <label>Nome</label>
                            <input type="text" class="form-control" placeholder="Nome Credor" ng-model="credor.nome" />
                        </div>

                        <div class="form-group">
                            <label>Logo</label>
                            <input type="text" class="form-control" placeholder="Caminho do Logo" ng-model="credor.logo" />
                        </div>

                        <div class="form-group">
                            <label>Cor Primaria</label>
                            <input type="color" class="form-control" placeholder="Escolha a Cor" ng-model="credor.cor_primaria" />
                        </div>

                        <div class="form-group">
                            <label>Cor Secundaria</label>
                            <input type="color" class="form-control" placeholder="Escolha a Cor" ng-model="credor.cor_secundaria" />
                        </div>


                        <div class="form-group">
                            <label>Cor Fonte Primaria</label>
                            <input type="color" class="form-control" placeholder="Escolha a Cor" ng-model="credor.cor_fonte_primaria" />
                        </div>


                        <div class="form-group">
                            <label>Cor Fonte Secundaria</label>
                            <input type="color" class="form-control" placeholder="Escolha a Cor" ng-model="credor.cor_fonte_secundaria" />
                        </div>

                        <div class="form-group">
                            <label>BackGround</label>
                            <input type="color" class="form-control" placeholder="Nome Grupo" ng-model="credor.background" />
                        </div>

                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="inserirCredor($event)">Inserir</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <!-- MODAL EDITAR-->
    <div class="modal fade" id="modal-edit" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" ng-click="refresh()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Editar Credor</h4>
                </div>
                <div class="modal-body">

                    <form role="form" id="teste">

                        <input type="hidden" ng-model="editdiario.id_credor" />

                        <div class="form-group">
                            <label>Nome</label>
                            <input type="text" class="form-control" placeholder="Nome Grupo" ng-model="editcredor.nome" />
                        </div>

                        <div class="form-group">
                            <label>Ativo: </label>
                            <input type="checkbox" ng-model="editcredor.ativo" />
                        </div>

                        <div class="form-group">
                            <label>Logo</label>
                            <input type="text" class="form-control" placeholder="Nome Grupo" ng-model="editcredor.logo" />
                        </div>

                        <div class="form-group">
                            <label>Cor Primaria</label>
                            <input type="color" class="form-control" placeholder="Nome Grupo" ng-model="editcredor.cor_primaria" />
                        </div>

                        <div class="form-group">
                            <label>Cor Secundaria</label>
                            <input type="color" class="form-control" placeholder="Nome Grupo" ng-model="editcredor.cor_secundaria" />
                        </div>


                        <div class="form-group">
                            <label>Cor Fonte Primaria</label>
                            <input type="color" class="form-control" placeholder="Nome Grupo" ng-model="editcredor.cor_fonte_primaria" />
                        </div>


                        <div class="form-group">
                            <label>Cor Fonte Secundaria</label>
                            <input type="color" class="form-control" placeholder="Nome Grupo" ng-model="editcredor.cor_fonte_secundaria" />
                        </div>

                        <div class="form-group">
                            <label>BackGround</label>
                            <input type="color" class="form-control" placeholder="Nome Grupo" ng-model="editcredor.background" />
                        </div>

                    </form>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="editarCredor()">Salvar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</div>

<script>
    angular.module('app').controller('ctrl-credor', function ($scope, $http, $filter, $window, dadosPagina) {
        dadosPagina.titulo = 'Credor';
        dadosPagina.descricao = ''

        // carregar os usuários
        $scope.carregarCredores = function () {
            $http({
                method: 'GET',
                url: "/api/credor/obter",
            }).then(function success(r) {

                $scope.credoresLista = r.data.Table;


            });

        }

        $scope.carregarCredores();

        $scope.refresh = function () {
            location.reload();
        }


        // INSERIR GRUPO
        $scope.credor = {
            nome: '',
        }; // objeto para inserir grupo

        $scope.inserirCredor = function ($event) {

            if (!$scope.credor.nome) {
                $event.stopPropagation();
                $window.alert("Insira um nome.");
                return false;
            }

            if (!$scope.credor.logo) {
                $event.stopPropagation();
                $window.alert("Insira o caminho do logo.");
                return false;
            }

            if (!$scope.credor.cor_primaria) {
                $event.stopPropagation();
                $window.alert("Define uma cor primaria.");
                return false;
            }


            if (!$scope.credor.cor_secundaria) {
                $event.stopPropagation();
                $window.alert("Defina uma cor secundaria.");
                return false;
            }

            if (!$scope.credor.cor_fonte_primaria) {
                $event.stopPropagation();
                $window.alert("Defina uma cor de fonte primaria.");
                return false;
            }

            if (!$scope.credor.cor_fonte_secundaria) {
                $event.stopPropagation();
                $window.alert("Defina uma cor de fonte secundaria.");
                return false;
            }

            if (!$scope.credor.background) {
                $event.stopPropagation();
                $window.alert("Defina uma cor de background.");
                return false;
            }


            $http({
                method: 'POST',
                url: "/api/credor/inserir",
                data: $scope.credor,
            }).then(function success(r) {
                $scope.credor = {
                    nome: '',
                };

                location.reload();//eliminar o cache dos grupos
                $scope.carregarCredores();


            });
        }

        // EDITAR GRUPO
        $scope.editcredor = {}; // objeto para editar grupo
        $scope.editarCredor = function () {
            $http({
                method: 'POST',
                url: "/api/credor/alterar",
                data: $scope.editcredor,
            }).then(function success(r) {
                $scope.carregarCredores();
            });
        }


        // ao clicar em um grupo, carregar modal
        $(document).on('click', '.table tbody tr', function () {
            // obtem o id da usuário para buscar
            let id = $(this).find('td:nth-child(1)').html();


            // consultar dados do grupo
            $http({
                method: 'POST',
                url: "/api/credor/consultar",
                data: { id_credor: id }
            }).then(function success(r) {

                $scope.editcredor.id_credor = r.data.Table[0].id_credor;
                $scope.editcredor.nome = r.data.Table[0].nome;
                $scope.editcredor.logo = r.data.Table[0].logo;
                $scope.editcredor.cor_primaria = r.data.Table[0].cor_primaria;
                $scope.editcredor.cor_secundaria = r.data.Table[0].cor_secundaria;
                $scope.editcredor.cor_fonte_primaria = r.data.Table[0].cor_fonte_primaria;
                $scope.editcredor.cor_fonte_secundaria = r.data.Table[0].cor_fonte_secundaria;
                $scope.editcredor.background = r.data.Table[0].background;

                 $('#modal-edit').modal('show');



            });

        });

    });


</script>

<style>
    .table tbody tr {
        cursor: pointer;
    }

        .table tbody tr:hover {
            font-weight: bold;
        }
</style>
