@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-carrefour-producao">
    <div ng-if="dashboard.status == 200">


        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Produção Digital</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--SEGMENTO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Segmento</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.segmento" dados="dashFiltros.segmento"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-gray">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.discado | megaNumber"></h3>
                        <p>Discado</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-phone"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.contato | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1"></h4>
                        <p>Contato</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-headphones"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.cpc | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1"></h4>
                        <p>CPC</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-male"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.cpca | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1"></h4>
                        <p>Alega Pagamento</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-street-view"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.promessa| number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1"></h4>
                        <p>Promessa</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-thumbs-o-up"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-purple">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.preventivo | number"></h3>
                        <p>Preventivo</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-check-square-o"></i>
                    </div>
                </div>
            </div>

        </div>



        <!--ANALISE POR DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <label>
                                <input type="radio" name="graficoHoraExibir" ng-model="graficoDia.exibir" value="false" checked="checked" />
                                Tabela
                            </label>
                            <label>
                                <input type="radio" name="graficoHoraExibir" ng-model="graficoDia.exibir" value="true" />
                                Gráfico
                            </label>
                        </small>
                    </div>
                    <div class="card-body">
                        <!--TABELA-->
                        <div class="table-responsive" ng-show="graficoDia.exibir == 'false'">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.dia">
                                <thead>
                                    <tr>
                                        <th>Hora</th>
                                        <th>Discado</th>
                                        <th>Atendido</th>
                                        <th>TMA</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>Alega</th>
                                        <th>Promessa</th>
                                        <th>Preventivo</th>
                                        <th>R$ Promessa</th>
                                        <th>R$ Preventivo</th>
                                        <th>R$ Alega</th>
                                        <th>Hit Rate</th>
                                        <th>Tx Loc</th>
                                        <th>Tx Alega</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="d in dashboard.dia">
                                        <td>{{d.data}}</td>
                                        <td>{{d.discado | number}}</td>
                                        <td>{{d.atendido | number}}</td>
                                        <td>{{d.tma}}</td>
                                        <td>{{d.contato | number}}</td>
                                        <td>{{d.cpc | number}}</td>
                                        <td>{{d.alega | number}}</td>
                                        <td>{{d.promessa | number}}</td>
                                        <td>{{d.preventivo | number}}</td>
                                        <td>{{d.vlr_promessa | currency:'R$ '}}</td>
                                        <td>{{d.vlr_preventivo | currency:'R$ '}}</td>
                                        <td>{{d.vlr_alega | currency:'R$ '}}</td>
                                        <td>{{d.contato / d.discado | percentage:1}}</td>
                                        <td>{{d.cpc / d.contato | percentage:1}}</td>
                                        <td>{{d.alega / d.cpc | percentage:1}}</td>
                                        <td>{{d.promessa / d.cpca | percentage:1}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.discado | number}}</th>
                                        <th>{{dashboard.resumo.atendido | number}}</th>
                                        <th>{{dashboard.resumo.tma}}</th>
                                        <th>{{dashboard.resumo.contato | number}}</th>
                                        <th>{{dashboard.resumo.cpc | number}}</th>
                                        <th>{{dashboard.resumo.alega | number}}</th>
                                        <th>{{dashboard.resumo.promessa | number}}</th>
                                        <th>{{dashboard.resumo.preventivo | number}}</th>
                                        <th>{{dashboard.resumo.vlr_promessa | currency:'R$ '}}</th>
                                        <th>{{dashboard.resumo.vlr_preventivo | currency:'R$ '}}</th>
                                        <th>{{dashboard.resumo.vlr_alega | currency:'R$ '}}</th>
                                        <th>{{dashboard.resumo.contato / dashboard.resumo.discado | percentage:1}}</th>
                                        <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage:1}}</th>
                                        <th>{{dashboard.resumo.alega / dashboard.resumo.cpc | percentage:1}}</th>
                                        <th>{{dashboard.resumo.promessa / dashboard.resumo.cpca | percentage:1}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <!--GRAFICO-->
                        <div ng-show="graficoDia.exibir == 'true'">
                            <span class="pull-right">
                                <select ng-model="graficoDia.indicador" ng-change="carregarGraficoDia()">
                                    <option value="hitrate">Hit Rate</option>
                                    <option value="txloc">Tx Loc</option>
                                    <option value="txalega">Tx Alega Pagamento</option>
                                    <option value="conversao">Conversão</option>
                                    <option value="discado">Discado</option>
                                    <option value="contato">Contato</option>
                                    <option value="cpc">CPC</option>
                                    <option value="alega">Alega Pagamento</option>
                                    <option value="promessa">Promessa</option>
                                    <option value="preventivo">Preventivo</option>
                                    <option value="vlr_promessa">Valor Promessa</option>
                                    <option value="vlr_preventivo">Valor Preventivo</option>
                                    <option value="vlr_alega">Valor Alega</option>
                                </select>
                            </span>
                            <high-chart series="graficoDia.dados" axis-Categories="dashboard.dias" plot-Options-Line-Data-Label="true"></high-chart>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE POR SEGMENTACAO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Segmentação</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.grupo">
                                <thead>
                                    <tr>
                                        <th>Credor</th>
                                        <th>Discado</th>
                                        <th>Atendido</th>
                                        <th>TMA</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>Alega</th>
                                        <th>Promessa</th>
                                        <th>Preventivo</th>
                                        <th>R$ Promessa</th>
                                        <th>R$ Preventivo</th>
                                        <th>R$ Alega</th>
                                        <th>Hit Rate</th>
                                        <th>Tx Loc</th>
                                        <th>Tx Alega</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="g in dashboard.grupo | groupBy: 'grupo'">

                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{g[0].grupo}}
                                        </td>
                                        <td>{{ g | sumByColumn: 'discado' | number}}</td>
                                        <td>{{ g | sumByColumn: 'atendido' | number}}</td>
                                        <td>{{ g | sumByColumn: 'tma' | formatTimer}}</td>
                                        <td>{{ g | sumByColumn: 'contato' | number}}</td>
                                        <td>{{ g | sumByColumn: 'cpc' | number}}</td>
                                        <td>{{ g | sumByColumn: 'alega' | number}}</td>
                                        <td>{{ g | sumByColumn: 'promessa' | number}}</td>
                                        <td>{{ g | sumByColumn: 'preventivo' | number}}</td>
                                        <td>{{ g | sumByColumn: 'vlr_promessa' | currency:'R$ '}}</td>
                                        <td>{{ g | sumByColumn: 'vlr_preventivo' | currency:'R$ '}}</td>
                                        <td>{{ g | sumByColumn: 'vlr_alega' | currency:'R$ '}}</td>
                                        <td>{{ g | divideSumColumns : 'contato':'discado' | corrigePercent | percentage:1}}</td>
                                        <td>{{ g | divideSumColumns : 'cpc':'contato' | percentage:1}}</td>
                                        <td>{{ g | divideSumColumns : 'alega':'cpc' | percentage:1}}</td>
                                        <td>{{ g | divideSumColumns : 'promessa':'cpca' | percentage:1}}</td>
                                    </tr>

                                    <tr ng-repeat="c in g" ng-show="showTbody">
                                        <td>{{c.credor}}</td>
                                        <td>{{c.discado | number}}</td>
                                        <td>{{c.atendido | number}}</td>
                                        <td>{{c.tma | formatTimer }}</td>
                                        <td>{{c.contato | number}}</td>
                                        <td>{{c.cpc | number}}</td>
                                        <td>{{c.alega | number}}</td>
                                        <td>{{c.promessa | number}}</td>
                                        <td>{{c.preventivo | number}}</td>
                                        <td>{{c.vlr_promessa | currency:'R$ '}}</td>
                                        <td>{{c.vlr_preventivo | currency:'R$ '}}</td>
                                        <td>{{c.vlr_alega | currency:'R$ '}}</td>
                                        <td>{{c.contato / c.discado | corrigePercent | percentage:1}}</td>
                                        <td>{{c.cpc / c.contato | percentage:1}}</td>
                                        <td>{{c.alega / c.cpc | percentage:1}}</td>
                                        <td>{{c.promessa / c.cpca | percentage:1}}</td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--DIAGRAMA FINALIZACOES-->
        <div class="row margin-bottom">
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Diagrama de Finalizações</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <sankey-chart dados="dashboard.diagrama" series-name="Qt Tabulação"></sankey-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--TABULACAO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Ocorrências</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xs-12 col-lg-12">
                                <high-chart series="dashboard.tabulacaoGraf" axis-Categories="dashboard.ocorrencias" plot-Options-Column-Data-Label="true" type="column" height="500px"></high-chart>
                            </div>
                        </div>                                               
                    </div>
                </div>
            </div>
        </div>

        <!--TABULACAO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Ocorrências</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xs-12 col-lg-12">
                                <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.ocorrencia" scroll-collapse="true" scroll-y="324px" order="[[1,'desc']]"></d-table>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

<script>
    angular.module('app').controller('ctrl-carrefour-producao', function ($scope, $http, $filter) {
        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            segmento: '',
            supervisores: '',
            equipes: '',
        };

        $scope.dashboard = {};
        $scope.dashFiltros = {};
        $scope.graficoDia = { indicador: 'promessa', dados: [], exibir: 'false' };

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/carrefour/dashboard/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.segmento = r.data.Table;
        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/carrefour/dashboard/sinergy/producao",
                data: $scope.filtros,
            }).then(function success(r) {               
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                let data = r.data;
                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.dia = data.Table1;
                $scope.dashboard.grupo = data.Table2;
                $scope.dashboard.diagrama = data.Table3;
                $scope.dashboard.ocorrencia = data.Table4;

                $scope.dashboard.ocorrencias = r.data.Table4.map(obj => obj.ocorrencia);
                $scope.dashboard.tabulacaoGraf = [{ name: 'Quantidade', data: r.data.Table4.map(obj => obj.quantidade) }];

                $scope.carregarGraficoDia();

            });
        }

        // carrega o mapa de acordo com o indicador escolhido
        $scope.carregarGraficoDia = function () {
            let dados = $scope.dashboard.dia;
            $scope.dashboard.dias = dados.map(obj => obj.data);
            switch ($scope.graficoDia.indicador) {
                case 'hitrate':
                    $scope.graficoDia.dados = [{ name: 'hitrate', data: dados.map(obj => (obj.contato * 100 / obj.discado).toFixed(1) * 1) }];
                    break;
                case 'txloc':
                    $scope.graficoDia.dados = [{ name: 'txloc', data: dados.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) * 1) }];
                    break;
                case 'txalega':
                    $scope.graficoDia.dados = [{ name: 'txalega', data: dados.map(obj => (obj.alega * 100 / obj.cpc).toFixed(1) * 1) }];
                    break;
                case 'conversao':
                    $scope.graficoDia.dados = [{ name: 'conversao', data: dados.map(obj => (obj.acordo * 100 / obj.cpca).toFixed(1) * 1) }];
                    break;
                default:
                    $scope.graficoDia.dados = [{ name: $scope.graficoDia.indicador, data: dados.map(obj => obj[$scope.graficoDia.indicador]) }];
            }
        }

        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>