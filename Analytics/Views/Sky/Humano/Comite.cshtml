                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <h4 style="text-align:center;color:#8c5e06;font:bold">{{dashboard.TitleTwo}}</h4>
                        <high-chart series="dashboard.graficoUniqueTwo" axis-Categories="dashboard.legendaTwo" plot-Options-Column-Data-Label="true"
                                    plot-Options-Spline-Data-Label="true" type="column" plot-Options-Column-Stacking="normal" y-Axis1-Min="0"
                                    y-Axis1-Max="100"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--GRÁFICO INDICADORES CONTATO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">NÃO CPC</span>

                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <h4 style="text-align:center;color:#185ba5;font:bold">{{dashboard.TitleCtt1}}</h4>
                        <high-chart series="dashboard.graficoCtt1" axis-Categories="dashboard.legendaCtt1" plot-Options-Column-Data-Label="true"
                                    plot-Options-Spline-Data-Label="true" type="column" plot-Options-Column-Stacking="normal" y-Axis1-Min="0"
                                    y-Axis1-Max="100"></high-chart>
                        <div class="card-header-button" ng-click="extrair('Table6')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <h4 style="text-align:center;color:#0a3361;font:bold">{{dashboard.TitleCtt2}}</h4>
                        <high-chart series="dashboard.graficoCtt2" axis-Categories="dashboard.legendaCtt2" plot-Options-Column-Data-Label="true"
                                    plot-Options-Spline-Data-Label="true" type="column" plot-Options-Column-Stacking="normal" y-Axis1-Min="0"
