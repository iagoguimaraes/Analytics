@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-sky-comite">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Comitê</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>


        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12" ng-if="dashFiltros.status === 200">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- Filtros -->
                        <div class="tab-pane active" id="control-sidebar-filters-tab">
                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <!--PERIODO-->
                                    <div class="form-group">
                                        <label class="control-sidebar-subheading">Periodo</label>
                                        <select2 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="filtros.periodo" dados="dashFiltros.periodo"></select2>
                                    </div>

                                    <!--CARTEIRA-->
                                    <div class="form-group">
                                        <label class="control-sidebar-subheading">Carteira</label>
                                        <select2 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="filtros.carteira" dados="dashFiltros.carteira"></select2>
                                    </div>

                                    <!--TENURE-->
                                    <div class="form-group">
                                        <label class="control-sidebar-subheading">Tenure</label>
                                        <select2 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="filtros.tenure" dados="dashFiltros.tenure"></select2>
                                    </div>



                                    <!--BOTÃO-->
                                    <div class="form-group">
                                        <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()">Carregar Dados</button>
                                    </div>
                                </div>


                                <div class="col-xs-12 col-md-6">
                                    <!--DIAS UTEIS-->
                                    <div class="form-group">
                                        <label class="control-sidebar-subheading">Dia Útil</label>
                                        <small>
                                            <select class="form-control" ng-model="filtros.diautil">
                                                <option value="">Todos</option>
                                                <option value="1">Somente dia útil</option>
                                                <option value="0">Somente fim de semana</option>
                                            </select>
                                        </small>
                                    </div>

                                    <!--SEGMENTACAO-->
                                    <div class="form-group">
                                        <label class="control-sidebar-subheading">Segmentação</label>
                                        <select2 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="filtros.segmentacao" dados="dashFiltros.segmentacao"></select2>
                                    </div>

                                    <!--SUPERVISOR-->
                                    <div class="form-group">
                                        <label class="control-sidebar-subheading">Supervisor</label>
                                        <select2 style="width: 100%" class="form-control" data-placeholder="Selecione" ng-model="filtros.supervisor" dados="dashFiltros.supervisor"></select2>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--PRODUÇÃO POR MES-->
        <div ng-if="dashboard.status == 200">
            <div class="row margin-bottom">
                <div class="col-xs-12 col-md-6 margin-bottom">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Contato por dia</span>
                            <div class="card-header-button" ng-click="extrair('Table')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body" style="height:440px">
                                <div class="row margin-bottom">
                                    <high-chart series="dashboard.contato" plot-Options-Spline-Data-Label="true" axis-Categories="dashboard.meses" plot-Options-Column-Data-Label="true" type="column" height="350"></high-chart>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-md-6 margin-bottom">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">CPC por dia</span>
                            <div class="card-header-button" ng-click="extrair('Table')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body" style="height:440px">
                                <div class="row margin-bottom">
                                    <high-chart series="dashboard.cpc" plot-Options-Spline-Data-Label="true" axis-Categories="dashboard.meses" plot-Options-Column-Data-Label="true" type="column" height="350"></high-chart>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row margin-bottom">
                <div class="col-xs-12 col-md-6 margin-bottom">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">CPCA por dia</span>
                            <div class="card-header-button" ng-click="extrair('Table')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body" style="height:440px">
                                <div class="row margin-bottom">
                                    <high-chart series="dashboard.cpca" plot-Options-Spline-Data-Label="true" axis-Categories="dashboard.meses" plot-Options-Column-Data-Label="true" type="column" height="350"></high-chart>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 col-md-6 margin-bottom">
                    <div class="card">
                        <div class="card-header">
                            <span class="card-header-title">Promessa por dia</span>
                            <div class="card-header-button" ng-click="extrair('Table')">
                                <i class="fa fa-file-excel-o"></i>
                            </div>
                            <div class="card-header-button card-header-expand">
                                <i class="fa fa-expand"></i>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body" style="height:440px">
                                <div class="row margin-bottom">
                                    <high-chart series="dashboard.promessas" plot-Options-Spline-Data-Label="true" axis-Categories="dashboard.meses" plot-Options-Column-Data-Label="true" type="column" height="350"></high-chart>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--GRÁFICO UNIQUE-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Produção Unique Mês</span>

                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <h4 style="text-align:center;color:#8c0624;font:bold">{{dashboard.TitleOne}}</h4>
                        <high-chart series="dashboard.graficoUniqueOne" axis-Categories="dashboard.legendaOne" plot-Options-Column-Data-Label="true"
                                    plot-Options-Spline-Data-Label="true" type="column" plot-Options-Column-Stacking="normal" y-Axis1-Min="0"
