@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-sky-robo">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Robo Consulta Adimplente</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>


        <!-- FILTROS -->
        <div class="row margin-bottom">

            <div class="col-xs-12" ng-if="dashFiltros.status === 200">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- Filtros -->
                        <div class="tab-pane active" id="control-sidebar-filters-tab">
                            <!--DATA-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                                </div>
                            </div>

                            <!--DATA FINAL-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Data Final</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                                </div>
                            </div>

                            <!--CARTEIRA-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Carteira</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.carteira" dados="dashFiltros.carteira" style="width:100%"></select2>
                            </div>

                            <!--SEGMENTACAO-->
                            <div class="form-group">
                                <label class="control-sidebar-subheading">Segmentação</label>
                                <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.segmentacao" dados="dashFiltros.segmentacao" style="width:100%"></select2>
                            </div>

                            <!--BOTÃO-->
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()">Carregar Dados</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-6 col-lg-3">
                <img class="img-responsive center-block" src="~/Content/Images/CreditCash/robo_200x200.png" height="100" width="100" />
            </div>
            <div class="col-xs-12 col-md-6 col-lg-3">
                <div class="small-box" style="background-color: #cccccc">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.consulta | megaNumber"></h3>
                        <p>Consulta</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-keyboard-o"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-3">
                <div class="small-box" style="background-color: #47d147">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.sucesso | megaNumber"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.sucesso / dashboard.resumo.consulta | percentage: 1"></h4>
                        <p>Sucesso</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-check-circle-o"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-3">
                <div class="small-box" style="background-color: #47d147">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.adimplente | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.adimplente / dashboard.resumo.sucesso | percentage: 1"></h4>
                        <p>Adimplente</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-cc"></i>
                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE POR CARTEIRA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Carteira</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.carteira">
                                <thead>
                                    <tr>
                                        <th>Carteira</th>
                                        <th>Consulta</th>
                                        <th>Sucesso</th>
                                        <th>Adimplente</th>
                                        <th>% Sucesso</th>
                                        <th>% Adimplente</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="c in dashboard.carteira | groupBy: 'carteira'">

                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{c[0].carteira}}
                                        </td>
                                        <td>{{c | sumByColumn: 'consulta'| number}}</td>
                                        <td>{{c | sumByColumn: 'sucesso'| number}}</td>
                                        <td>{{c | sumByColumn: 'adimplente'| number}}</td>
                                        <td>{{c | divideSumColumns: 'sucesso':'consulta' | percentage:1}}</td>
                                        <td>{{c | divideSumColumns: 'adimplente':'sucesso' | percentage:1}}</td>
                                    </tr>

                                    <tr ng-repeat="p in c" ng-show="showTbody">
                                        <td>{{p.segmentacao}}</td>
                                        <td>{{p.consulta | number}}</td>
                                        <td>{{p.sucesso | number}}</td>
                                        <td>{{p.adimplente | number}}</td>
                                        <td>{{p.sucesso / p.consulta | percentage:1}}</td>
                                        <td>{{p.adimplente / p.sucesso | percentage:1}}</td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE POR DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.diadia">
                                <thead>
                                    <tr>
                                        <th>Dia</th>
                                        <th>Consulta</th>
                                        <th>Sucesso</th>
                                        <th>Adimplente</th>
                                        <th>% Sucesso</th>
                                        <th>% Adimplente</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="dia in dashboard.diadia">
                                        <td>{{dia.data}}</td>
                                        <td>{{dia.consulta | number}}</td>
                                        <td>{{dia.sucesso | number}}</td>
                                        <td>{{dia.adimplente | number}}</td>
                                        <td>{{dia.sucesso / dia.consulta | percentage:1}}</td>
                                        <td>{{dia.adimplente / dia.sucesso | percentage:1}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-sky-robo', function ($scope, $http, $filter, $interval, dadosPagina) {

        dadosPagina.titulo = 'Robô';
        dadosPagina.descricao = 'Sky'

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            carteira: '',
            segmentacao: '',
        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};

        //carregar os filtros
        $http({
            method: 'GET',
            url: "/api/sky/dashboard/humano/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            let data = r.data;
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.carteira = data.Table;
            $scope.dashFiltros.segmentacao = data.Table1;
        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/sky/dashboard/humano/robo",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.dados = r.data;
                $scope.dashboard.status = r.status;
                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.carteira = data.Table1;
                $scope.dashboard.diadia = data.Table2;
            });
        }

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

        $scope.carregarDashboard();

    });
</script>
