@{
    Layout = "~/Views/master.cshtml";
}

<!-- DAHSBOARD -->
<div ng-controller="ctrl-atacadao-horahora">
    <div ng-if="dashboard.status === 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Hora Hora</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--SEGMENTO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Segmento</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.segmento" dados="dashFiltros.segmento"></select2>
                        </div>

                        <!--SUPERVISOR-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Supervisor</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.supervisores" dados="dashFiltros.supervisores"></select2>
                        </div>

                        <!--EQUIPE-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Equipe</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.equipes" dados="dashFiltros.equipes"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--CABEÇALHO-->
        <div class="box box-widget widget-user">
            <div class="widget-user-header" style="background: url('/Content/Images/Atacadao/banner.jpg') no-repeat center; background-color:white">
            </div>
            <div class="box-footer">
                <div class="row" style="background-color:rgba(255, 255, 255, 0.00); color:black; opacity: 0.8">
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.discado | megaNumber"></h5>
                            <span class="description-text">Discado</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.contato | megaNumber"></h5>
                            <span class="description-text">Contato</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpc | megaNumber"></h5>
                            <span class="description-text">CPC</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpca | number"></h5>
                            <span class="description-text">CPCA</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.acordo | number"></h5>
                            <span class="description-text">Acordo</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.acordo_ex | number"></h5>
                            <span class="description-text">Acordo Exceção</span>
                        </div>
                    </div>
                </div>

                <div class="row" style="background-color: #f96204; color: white;">
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1"></h5>
                            <span class="description-text">Hit Rate</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1"></h5>
                            <span class="description-text">Tx Loc</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.acordo_total / dashboard.resumo.cpca | percentage: 1"></h5>
                            <span class="description-text">Conversao</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.valor_acordo | currency: 'R$ '"></h5>
                            <span class="description-text">Valor Acordo</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.valor_risco | currency: 'R$ '"></h5>
                            <span class="description-text">Valor Risco</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.valor_riscoex | currency: 'R$ '"></h5>
                            <span class="description-text">Valor Exceção Risco</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!--ANALISE POR HORA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Hora</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.horahora">
                                <thead>
                                    <tr>
                                        <th>Hora</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Acordo</th>
                                        <th>Vlr Acordo</th>
                                        <th>Vlr Risco</th>
                                        <th>Acordo Exceção</th>
                                        <th>Vlr Risco Exceção</th>
                                        <th>Vlr Risco Total</th>
                                        <th>Hit Rate</th>
                                        <th>Tx Loc</th>
                                        <th>Tx Apv</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="hora in dashboard.horahora">
                                        <td>{{hora.hora}}</td>
                                        <td>{{hora.discado | number}}</td>
                                        <td>{{hora.contato | number}}</td>
                                        <td>{{hora.cpc | number}}</td>
                                        <td>{{hora.cpca | number}}</td>
                                        <td>{{hora.acordo | number}}</td>
                                        <td>{{hora.valor_acordo |  currency: 'R$ '}}</td>
                                        <td>{{hora.valor_risco |  currency: 'R$ '}}</td>
                                        <td>{{hora.acordo_ex | number}}</td>
                                        <td>{{hora.valor_riscoex |  currency: 'R$ '}}</td>
                                        <td>{{hora.valor_riscoex + hora.valor_risco |  currency: 'R$ '}}</td>
                                        <td>{{hora.contato / hora.discado | percentage:1}}</td>
                                        <td>{{hora.cpc / hora.contato | percentage:1}}</td>
                                        <td>{{hora.cpca / hora.cpc | percentage:1}}</td>
                                        <td>{{hora.acordo_total  / hora.cpca | percentage:1}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.discado | number}}</th>
                                        <th>{{dashboard.resumo.contato | number}}</th>
                                        <th>{{dashboard.resumo.cpc | number}}</th>
                                        <th>{{dashboard.resumo.cpca | number}}</th>
                                        <th>{{dashboard.resumo.acordo | number}}</th>
                                        <th>{{dashboard.resumo.valor_acordo |  currency: 'R$ '}}</th>
                                        <th>{{dashboard.resumo.valor_risco |  currency: 'R$ '}}</th>
                                        <th>{{dashboard.resumo.acordo_ex | number}}</th>
                                        <th>{{dashboard.resumo.valor_riscoex |  currency: 'R$ '}}</th>
                                        <th>{{dashboard.resumo.valor_riscoex + dashboard.resumo.valor_risco |  currency: 'R$ '}}</th>
                                        <th>{{dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.acordo_total / dashboard.resumo.cpca | percentage: 1}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE POR SEGMENTACAO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Segmentação</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.grupo">
                                <thead>
                                    <tr>
                                        <th>Credor</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Acordo</th>
                                        <th>Vlr Acordo</th>
                                        <th>Vlr Risco</th>
                                        <th>Acordo Exceção</th>
                                        <th>Vlr Risco Exceção</th>
                                        <th>Vlr Risco Total</th>
                                        <th>HitRate</th>
                                        <th>TxLoc</th>
                                        <th>TxApv</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="g in dashboard.grupo | groupBy: 'grupo'">

                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{g[0].grupo}}
                                        </td>
                                        <td>{{g | sumByColumn: 'discado'| number}}</td>
                                        <td>{{g | sumByColumn: 'contato'| number}}</td>
                                        <td>{{g | sumByColumn: 'cpc'| number}}</td>
                                        <td>{{g | sumByColumn: 'cpca'| number}}</td>
                                        <td>{{g | sumByColumn: 'acordo'| number}}</td>
                                        <td>{{g | sumByColumn: 'valor_acordo'|  currency: 'R$ '}}</td>
                                        <td>{{g | sumByColumn: 'valor_risco'|  currency: 'R$ '}}</td>
                                        <td>{{g | sumByColumn: 'acordo_ex'| number}}</td>
                                        <td>{{g | sumByColumn: 'valor_riscoex'|  currency: 'R$ '}}</td>
                                        <td>{{g | sumByColumn: 'valor_total_risco' |  currency: 'R$ '}}</td>
                                        <td>{{g | divideSumColumns: 'contato':'discado' | percentage:1}}</td>
                                        <td>{{g | divideSumColumns: 'cpc':'contato' | percentage:1}}</td>
                                        <td>{{g | divideSumColumns: 'cpca':'cpc' | percentage:1}}</td>
                                        <td>{{g | divideSumColumns: 'acordo_total':'cpca' | percentage:1}}</td>
                                    </tr>

                                    <tr ng-repeat="c in g" ng-show="showTbody">
                                        <td>{{c.credor}}</td>
                                        <td>{{c.discado | number}}</td>
                                        <td>{{c.contato | number}}</td>
                                        <td>{{c.cpc | number}}</td>
                                        <td>{{c.cpca | number}}</td>
                                        <td>{{c.acordo | number}}</td>
                                        <td>{{c.valor_acordo |  currency: 'R$ '}}</td>
                                        <td>{{c.valor_risco |  currency: 'R$ '}}</td>
                                        <td>{{c.acordo_ex | number}}</td>
                                        <td>{{c.valor_riscoex |  currency: 'R$ '}}</td>
                                        <td>{{c.valor_riscoex + c.valor_risco |  currency: 'R$ '}}</td>
                                        <td>{{c.contato / c.discado | percentage:1}}</td>
                                        <td>{{c.cpc / c.contato | percentage:1}}</td>
                                        <td>{{c.cpca / c.cpc | percentage:1}}</td>
                                        <td>{{c.acordo_total / c.cpca | percentage:1}}</td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE POR SUPERVISOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Supervisor</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.supervisor">
                                <thead>
                                    <tr>
                                        <th>Supervisor</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Acordo</th>
                                        <th>Vlr Acordo</th>
                                        <th>Vlr Risco</th>
                                        <th>Acordo Exceção</th>
                                        <th>Vlr Risco Exceção</th>
                                        <th>Vlr Risco Total</th>
                                        <th>TxLoc</th>
                                        <th>TxApv</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="g in dashboard.supervisor | groupBy: 'ds_supervisor'">

                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{g[0].ds_supervisor}}
                                        </td>
                                        <td>{{g | sumByColumn: 'contato'| number}}</td>
                                        <td>{{g | sumByColumn: 'cpc'| number}}</td>
                                        <td>{{g | sumByColumn: 'cpca'| number}}</td>
                                        <td>{{g | sumByColumn: 'acordo'| number}}</td>
                                        <td>{{g | sumByColumn: 'valor_acordo'|  currency: 'R$ '}}</td>
                                        <td>{{g | sumByColumn: 'valor_risco'|  currency: 'R$ '}}</td>
                                        <td>{{g | sumByColumn: 'acordo_ex'| number}}</td>
                                        <td>{{g | sumByColumn: 'valor_riscoex'|  currency: 'R$ '}}</td>
                                        <td>{{g | sumByColumn: 'valor_total_risco' |  currency: 'R$ '}}</td>
                                        <td>{{g | divideSumColumns: 'cpc':'contato' | percentage:1}}</td>
                                        <td>{{g | divideSumColumns: 'cpca':'cpc' | percentage:1}}</td>
                                        <td>{{g | divideSumColumns: 'acordo_total':'cpca' | percentage:1}}</td>
                                    </tr>

                                    <tr ng-repeat="c in g" ng-show="showTbody">
                                        <td>{{c.ds_equipe}}</td>
                                        <td>{{c.contato | number}}</td>
                                        <td>{{c.cpc | number}}</td>
                                        <td>{{c.cpca | number}}</td>
                                        <td>{{c.acordo | number}}</td>
                                        <td>{{c.valor_acordo |  currency: 'R$ '}}</td>
                                        <td>{{c.valor_risco |  currency: 'R$ '}}</td>
                                        <td>{{c.acordo_ex | number}}</td>
                                        <td>{{c.valor_riscoex |  currency: 'R$ '}}</td>
                                        <td>{{c.valor_riscoex + c.valor_risco |  currency: 'R$ '}}</td>
                                        <td>{{c.cpc / c.contato | percentage:1}}</td>
                                        <td>{{c.cpca / c.cpc | percentage:1}}</td>
                                        <td>{{c.acordo_total / c.cpca | percentage:1}}</td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--GRAFICO POR HORA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Gráfico por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="grafico.indicador" ng-change="carregarGrafico()">
                                <option value="hitrate">Hit Rate</option>
                                <option value="txloc">Tx Loc</option>
                                <option value="txapv">Tx Apv</option>
                                <option value="conversao">Conversão</option>
                                <option value="discado">Discado</option>
                                <option value="contato">Contato</option>
                                <option value="cpc">CPC</option>
                                <option value="cpca">CPCA</option>
                                <option value="acordo">Acordo</option>
                                <option value="valor_acordo">Valor Acordo</option>
                                <option value="valor_risco">Valor Risco</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.grafico" axis-Categories="dashboard.horas" plot-Options-Line-Data-Label="true"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--PRODUÇÃO POR OPERADOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Operador</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.operador" scroll-collapse="true" scroll-y="324px" order="[[4,'desc']]"></d-table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



<script>
    angular.module('app').controller('ctrl-atacadao-horahora', function ($scope, $http, $filter) {
        $scope.showTbody = false;

        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
            segmento: '',
            supervisores: '',
            equipes: '',
        };

        $scope.dashboard = {};
        $scope.dashFiltros = {};
        $scope.grafico = { indicador: 'acordo' };

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/atacadao/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            let data = r.data;
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.segmento = data.Table;
            $scope.dashFiltros.equipes = r.data.Table1;
            $scope.dashFiltros.supervisores = r.data.Table2;
        });

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/atacadao/horahora",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                let data = r.data;
                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.horahora = data.Table1;
                $scope.dashboard.grupo = data.Table2;
                $scope.dashboard.operador = data.Table3;
                $scope.dashboard.supervisor = data.Table4;
                $scope.carregarGrafico();
            });
        }

        // carrega o grafico de acordo com o indicador escolhido
        $scope.carregarGrafico = function () {
            let dados = $scope.dashboard.horahora;
            $scope.dashboard.horas = dados.map(obj => obj.hora);
            switch ($scope.grafico.indicador) {
                case 'hitrate':
                    $scope.dashboard.grafico = [{ name: 'hitrate', data: dados.map(obj => (obj.contato * 100 / obj.discado).toFixed(1) * 1) }];
                    break;
                case 'txloc':
                    $scope.dashboard.grafico = [{ name: 'txloc', data: dados.map(obj => (obj.cpc * 100 / obj.contato).toFixed(1) * 1) }];
                    break;
                case 'txapv':
                    $scope.dashboard.grafico = [{ name: 'txapv', data: dados.map(obj => (obj.cpca * 100 / obj.cpc).toFixed(1) * 1) }];
                    break;
                case 'conversao':
                    $scope.dashboard.grafico = [{ name: 'conversao', data: dados.map(obj => (obj.acordo_total * 100 / obj.cpca).toFixed(1) * 1) }];
                    break;
                default:
                    $scope.dashboard.grafico = [{ name: $scope.grafico.indicador, data: dados.map(obj => obj[$scope.grafico.indicador]) }];
            }

        }

        $scope.carregarDashboard();

        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>

