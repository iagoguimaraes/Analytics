                    <div class="card-body">
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <canvasjs config="dashboard.funil" style="width: 100%; height: 480px"></canvasjs>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <h4 class="text-center">Discagens Improdutivas</h4>
                                <h2 class="text-center">{{dashboard.resumo.improdutivo | number}}</h2>
                                <div class="card-body">
                                    <high-chart series="dashboard.discador" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
