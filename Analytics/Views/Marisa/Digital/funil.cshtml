<script>
    angular.module('app').controller('ctrl-marisa-basecontrole', function ($scope, $http, $filter, $interval, dadosPagina) {

        // filtros iniciais

        $scope.filtros = {
            data: $filter('date')(new Date(), "yyyy-MM-dd"),
        };

        $scope.dashboard = {};

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/marisa/dashboard/digital/funil",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                let data = r.data;
                $scope.dashboard.dados = r.data;
                $scope.dashboard.resumo = data.Table3[0];
                $scope.dashboard.carteira = data.Table[0];
                $scope.dashboard.ds_follow = data.Table1.map(obj => obj.ds_follow);
                $scope.dashboard.ds_sms = data.Table2.map(obj => obj.ds_sms);
                $scope.dashboard.qtd_sms = data.Table6[0];
                $scope.dashboard.ds_segmentacao = data.Table7.map(obj => obj.ds_segmentacao);


                $scope.dashboard.follow = [{ name: 'Quantidade', data: data.Table1.map(obj => (obj.quantidade)), color: '#b94d4b' }];
                $scope.dashboard.sms = [{ name: 'Quantidade', data: data.Table2.map(obj => (obj.quantidade)), color: '#b94d4b' }];
                $scope.dashboard.segmentacao = [{ name: 'Quantidade', data: data.Table7.map(obj => (obj.quantidade)), color: '#b94d4b' }];
                $scope.dashboard.discador = [{ name: 'Quantidade', innerSize: '50%', data: data.Table4.map(obj => ({ name: obj.ocorrencia, y: obj.quantidade })) }];

                // FUNIL
                let resumo = data.Table3[0];
                let carteira = data.Table5[0];
                $scope.dashboard.funil = {
                    animationEnabled: true,
                    data: [{
                        type: "funnel",
                        toolTipContent: "<b>{label}</b>: {value} <b>({percentage}%)</b>",
                        indexLabel: "{label} ({percentage}%)",
                        dataPoints: [
                            { y: 45, value: carteira.carteira, label: "Carteira", percentage: 100 },
                            { y: 30, value: carteira.mailing, label: "Mailing", percentage: (carteira.mailing * 100 / carteira.carteira).toFixed(1) / 1 },
                            { y: 25, value: resumo.discado, label: "Discado", percentage: (resumo.discado * 100 / carteira.mailing).toFixed(1) / 1 },
                            { y: 20, value: resumo.contato, label: "Contato", percentage: (resumo.contato * 100 / resumo.discado).toFixed(1) / 1 },
                            { y: 15, value: resumo.cpc, label: "CPC", percentage: (resumo.cpc * 100 / resumo.contato).toFixed(1) / 1 },
                            { y: 10, value: resumo.cpca, label: "CPCA", percentage: (resumo.cpca * 100 / resumo.cpc).toFixed(1) / 1 },
                            { y: 10, value: resumo.promessa, label: "Promessa", percentage: (resumo.promessa * 100 / resumo.cpca).toFixed(1) / 1 },
                        ]
                    }]
                };

            });
        }



        $scope.carregarDashboard();

    });

</script>
