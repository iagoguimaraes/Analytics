                            @*<div class="col-xs-12 col-md-12">
                                <div class="info-box-new bg-new-grey hover-zoom-effect">
                                    <div class="icon">
                                        <i class="fa fa-university"></i>
                                    </div>
                                    <div class="content" style="text-align: center;">
                                        <div class="text">Carteira Ativa</div>
                                        <div class="number">{{dashboard.carteira.ativo | number}}</div>
                                    </div>
                                </div>
                            </div>*@
                            <!--ENTRADA-->
                            @*<div class="col-xs-12 col-md-4">
                                <div class="info-box-new bg-new-green hover-expand-effect">
                                    <div class="icon">
                                        <i class="fa fa-plus-square"></i>
                                    </div>
                                    <div class="content" style="text-align: center;">
                                        <div class="text">Entrada </div>
                                        <div class="number">{{dashboard.carteira.entrada | number}}</div>
                                    </div>
