@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-cbss-receptivo">
    <div ng-if="dashboard.status === 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Receptivo Cbss</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- SELEÇÃO DE CAMPANHA-->
        <div class="row margin-bottom text-center" style="margin-top: 15px;">
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-primary active" ng-click=" carregarDashboard(8201)">
                    <input type="radio"> Ibicard
                </label>
                <label class="btn btn-primary" ng-click="carregarDashboard(8204)">
                    <input type="radio"> NPE
                </label>
                <label class="btn btn-primary" ng-click="carregarDashboard(8206)">
                    <input type="radio"> Digio
                </label>
            </div>
        </div>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--HORA INCIAL-->
                        <div class="form-group">
                            <label>Hora Inicial</label>
                            <div class="input-group bootstrap-timepicker timepicker">
                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                                <select class="form-control pull-right" ng-model="filtros.hrini">
                                    <option value="00">00 hr</option>
                                    <option value="01">01 hr</option>
                                    <option value="02">02 hr</option>
                                    <option value="03">03 hr</option>
                                    <option value="04">04 hr</option>
                                    <option value="05">05 hr</option>
                                    <option value="06">06 hr</option>
                                    <option value="07">07 hr</option>
                                    <option value="08">08 hr</option>
                                    <option value="09">09 hr</option>
                                    <option value="10">10 hr</option>
                                    <option value="11">11 hr</option>
                                    <option value="12">12 hr</option>
                                    <option value="13">13 hr</option>
                                    <option value="14">14 hr</option>
                                    <option value="15">15 hr</option>
                                    <option value="16">16 hr</option>
                                    <option value="17">17 hr</option>
                                    <option value="18">18 hr</option>
                                    <option value="19">19 hr</option>
                                    <option value="20">20 hr</option>
                                    <option value="21">21 hr</option>
                                    <option value="22">22 hr</option>
                                    <option value="23">23 hr</option>
                                </select>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--HORA FINAL-->
                        <div class="form-group">
                            <label>Hora Final</label>
                            <div class="input-group bootstrap-timepicker timepicker">
                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                                <select class="form-control pull-right" ng-model="filtros.hrfim">
                                    <option value="00">00 hr</option>
                                    <option value="01">01 hr</option>
                                    <option value="02">02 hr</option>
                                    <option value="03">03 hr</option>
                                    <option value="04">04 hr</option>
                                    <option value="05">05 hr</option>
                                    <option value="06">06 hr</option>
                                    <option value="07">07 hr</option>
                                    <option value="08">08 hr</option>
                                    <option value="09">09 hr</option>
                                    <option value="10">10 hr</option>
                                    <option value="11">11 hr</option>
                                    <option value="12">12 hr</option>
                                    <option value="13">13 hr</option>
                                    <option value="14">14 hr</option>
                                    <option value="15">15 hr</option>
                                    <option value="16">16 hr</option>
                                    <option value="17">17 hr</option>
                                    <option value="18">18 hr</option>
                                    <option value="19">19 hr</option>
                                    <option value="20">20 hr</option>
                                    <option value="21">21 hr</option>
                                    <option value="22">22 hr</option>
                                    <option value="23">23 hr</option>
                                </select>
                            </div>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard(filtros.fila)" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="box box-widget widget-user">
            <div class="box-footer">
                <div class="widget-user-header" style="background: url('/Content/Images/Cbss/banner_digio.png') center center; ">
                </div>
                <div class="row">
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Chamadas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.chamada | number"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Atendidas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.atendido | number"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Abandonadas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.abandonado | number"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Tempo Médio Atendimento</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.tma"></h5>
                        </div>
                    </div>
                </div>

                <div class="row" style="background-color: #9cb6e2; color: white">
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">
                                <select ng-model="dashFiltros.ns" style="color:black">
                                    <option value="ns10">NS 10s</option>
                                    <option value="ns20">NS 20s</option>
                                    <option value="ns50">NS 50s</option>
                                </select>
                            </span>
                            <h5 class="description-header" ng-bind="dashboard.resumo[dashFiltros.ns] / dashboard.resumo.chamada | percentage:1"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Atendidas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.atendido / dashboard.resumo.chamada | percentage:1"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Abandonadas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.abandonado / dashboard.resumo.chamada | percentage:1"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Tempo Médio em Fila</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.tmf"></h5>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!--POR HORA GRAFICO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Gráfico por Hora</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="dashFiltros.ns" style="color:black" ng-change="carregarGrafico()">
                                <option value="ns10">NS 10s</option>
                                <option value="ns20">NS 20s</option>
                                <option value="ns50">NS 50s</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.graficohora" axis-Categories="dashboard.horas" type="column"
                                    plot-Options-Column-Data-Label="true" plot-Options-Column-Stacking="normal" y-Axis1-Min="0"
                                    y-Axis1-Max="100"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--POR DIA TABELA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <!--TABELA-->
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.dia">
                                <thead>
                                    <tr>
                                        <th>Dia</th>
                                        <th>Agente</th>
                                        <th>
                                            <select ng-model="dashFiltros.ns" style="color:black">
                                                <option value="ns10">NS 10s</option>
                                                <option value="ns20">NS 20s</option>
                                                <option value="ns50">NS 50s</option>
                                            </select>
                                        </th>
                                        <th>Chamada</th>
                                        <th>Atendida</th>
                                        <th>Abandonada</th>
                                        <th>% Abandono</th>
                                        <th>Tempo Médio Atendimento</th>
                                        <th>Tempo Médio em Fila</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="d in dashboard.dia">
                                        <td>{{d.data}}</td>
                                        <td>{{d.agente | number}}</td>
                                        <td>{{d[dashFiltros.ns] / d.chamada | percentage:1}}</td>
                                        <td>{{d.chamada | number}}</td>
                                        <td>{{d.atendido | number}}</td>
                                        <td>{{d.abandonado | number}}</td>
                                        <td>{{d.abandonado / d.chamada | percentage:1}}</td>
                                        <td>{{d.tma}}</td>
                                        <td>{{d.tmf}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.agente | number}}</th>
                                        <th>{{dashboard.resumo[dashFiltros.ns] / dashboard.resumo.chamada | percentage:1}}</th>
                                        <th>{{dashboard.resumo.chamada | number}}</th>
                                        <th>{{dashboard.resumo.atendido | number}}</th>
                                        <th>{{dashboard.resumo.abandonado | number}}</th>
                                        <th>{{dashboard.resumo.abandonado / dashboard.resumo.chamada | percentage:1}}</th>
                                        <th>{{dashboard.resumo.tma}}</th>
                                        <th>{{dashboard.resumo.tmf}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-cbss-receptivo', function ($scope, $http, $filter) {

        $scope.dashboard = {};
        $scope.dashFiltros = {};
        $scope.showTbody = false;

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            hrini: '08',
            hrfim: '21',
            atrasos: '',
            fila: ''

        };

        $scope.dashFiltros = {
            ns: 'ns20'
        }

        //carregar dashboard
        $scope.carregarDashboard = function (fila) {
            $scope.filtros.fila = fila;
            $http({
                method: 'POST',
                url: "/api/cbss/dashboard/receptivo",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;

                $scope.dashboard.dados = r.data;
                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.horahora = r.data.Table1;
                $scope.dashboard.horas = r.data.Table1.map(obj => obj.hora);
                $scope.dashboard.dia = r.data.Table2;

                $scope.carregarGrafico();
            });
        }

        $scope.carregarGrafico = function () {
            $scope.dashboard.graficohora = [
                { name: 'atendido', type: 'column', data: $scope.dashboard.dados.Table1.map(obj => obj.atendido) },
                { name: 'abandonado', type: 'column', data: $scope.dashboard.dados.Table1.map(obj => obj.abandonado) },
                { name: $scope.dashFiltros.ns, type: 'spline', yAxis: 1, data: $scope.dashboard.dados.Table1.map(obj => (obj[$scope.dashFiltros.ns] * 100 / obj.chamada).toFixed(1) / 1) },
            ];
        }

        $scope.carregarDashboard(8201);

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });

</script>