<script>
    angular.module('app').controller('ctrl-estacio-balancoconsequencia', function ($scope, $http, $filter) {
        $scope.showTbody = false;

        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
        };

        $scope.dashboard = {};
        $scope.graficoHora = { indicador: 'acordo', exibir: 'false' };
        $scope.showTbody = false;

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/estacio/balancoConsequencia",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resultado = r.data.Table;
                $scope.dashboard.quartil = r.data.Table1;

                $scope.carregarGrafico();
            });
        }

        // carrega o grafico conforme com o indicador escolhido
        $scope.carregarGrafico = function () {

            let quartil1 = alasql('select qtdVezes, qtdOperador from ? where quartil = 1 order by 1,2', [$scope.dashboard.quartil]);
            $scope.dashboard.quartil1 = quartil1;
            let quartil2 = alasql('select qtdVezes, qtdOperador from ? where quartil = 2 order by 1,2', [$scope.dashboard.quartil]);
            $scope.dashboard.quartil2 = quartil2;
            let quartil3 = alasql('select qtdVezes, qtdOperador from ? where quartil = 3 order by 1,2', [$scope.dashboard.quartil]);
            $scope.dashboard.quartil3 = quartil3;
            let quartil4 = alasql('select qtdVezes, qtdOperador from ? where quartil = 4 order by 1,2', [$scope.dashboard.quartil]);
            $scope.dashboard.quartil4 = quartil4;

            $scope.dashboard.graficoq1 = {
                chart: {
                    polar: true,
                    type: 'line'
                },

                title: {
                    text: 'Passagens pelo 1º Quartil'
                },

                pane: {
                    size: '80%'
                },

                xAxis: {
                    categories: quartil1.map(obj => obj.qtdVezes),
                    tickmarkPlacement: 'on',
                    lineWidth: 0,
                    min: 0
                },

                yAxis: {
                    gridLineInterpolation: 'polygon',
                    lineWidth: 0,
                },

                tooltip: {
                    shared: true,
                    pointFormat: '<span style="color:{series.color}">{series.name}: <b>{point.y:,.0f}</b><br/>'
                },

                legend: {
                    align: 'right',
                    verticalAlign: 'middle',
                    layout: 'vertical'
                },

                series: [{ name: 'Quantidade Operadores', data: quartil1.map(obj => obj.qtdOperador), pointPlacement: 'on' }],

                responsive: {
                    rules: [{
                        condition: {
                            maxWidth: 500
                        },
                        chartOptions: {
                            legend: {
                                align: 'center',
                                verticalAlign: 'bottom',
                                layout: 'horizontal'
                            },
                            pane: {
                                size: '70%'
                            }
                        }
                    }]
                }
            }

            $scope.dashboard.graficoq2 = {
                chart: {
                    polar: true,
                    type: 'line'
                },

                title: {
                    text: 'Passagens pelo 2º Quartil',
                },

                pane: {
                    size: '80%'
                },

                xAxis: {

                    categories: quartil2.map(obj => obj.qtdVezes),
                    tickmarkPlacement: 'on',
                    lineWidth: 0,
                    min: 0
                },

                yAxis: {
                    gridLineInterpolation: 'polygon',
                    lineWidth: 0,
                },

                tooltip: {
                    shared: true,
                    pointFormat: '<span style="color:{series.color}">{series.name}: <b>{point.y:,.0f}</b><br/>'
                },

                series: [{ name: 'Quantidade Operadores', data: quartil2.map(obj => obj.qtdOperador), pointPlacement: 'on' }],

                responsive: {
                    rules: [{
                        condition: {
                            maxWidth: 500
                        },
                        chartOptions: {
                            legend: {
                                align: 'center',
                                verticalAlign: 'bottom',
                                layout: 'horizontal'
                            },
                            pane: {
                                size: '70%'
                            }
                        }
                    }]
                }
            }

            $scope.dashboard.graficoq3 = {
                chart: {
                    polar: true,
                    type: 'line'
                },

                title: {
                    text: 'Passagens pelo 3º Quartil'
                },

                pane: {
                    size: '80%'
                },

                xAxis: {

                    categories: quartil3.map(obj => obj.qtdVezes),
                    tickmarkPlacement: 'on',
                    lineWidth: 0,
                    min: 0
                },

                yAxis: {
                    gridLineInterpolation: 'polygon',
                    lineWidth: 0,
                },

                tooltip: {
                    shared: true,
                    pointFormat: '<span style="color:{series.color}">{series.name}: <b>{point.y:,.0f}</b><br/>'
                },

                series: [{ name: 'Quantidade Operadores', data: quartil3.map(obj => obj.qtdOperador), pointPlacement: 'on' }],

                responsive: {
                    rules: [{
                        condition: {
                            maxWidth: 500
                        },
                        chartOptions: {
                            legend: {
                                align: 'center',
                                verticalAlign: 'bottom',
                                layout: 'horizontal'
                            },
                            pane: {
                                size: '70%'
                            }
                        }
                    }]
                }
            }

            $scope.dashboard.graficoq4 = {
                chart: {
                    polar: true,
                    type: 'line'
                },

                title: {
                    text: 'Passagens pelo 4º Quartil'
                },

                pane: {
                    size: '80%'
                },

                xAxis: {

                    categories: quartil4.map(obj => obj.qtdVezes),
                    tickmarkPlacement: 'on',
                    lineWidth: 0,
                    min: 0
                },

                yAxis: {
                    gridLineInterpolation: 'polygon',
                    lineWidth: 0,
                },

                tooltip: {
                    shared: true,
                    pointFormat: '<span style="color:{series.color}">{series.name}: <b>{point.y:,.0f}</b><br/>'
                },

                series: [{ name: 'Quantidade Operadores', data: quartil4.map(obj => obj.qtdOperador), pointPlacement: 'on' }],

                responsive: {
                    rules: [{
                        condition: {
                            maxWidth: 500
                        },
                        chartOptions: {
                            legend: {
                                align: 'center',
                                verticalAlign: 'bottom',
                                layout: 'horizontal'
                            },
                            pane: {
                                size: '70%'
                            }
                        }
                    }]
                }
            }

        }

        $scope.carregarDashboard();

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>