@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-riachuelo-horahora">

    <!-- DAHSBOARD -->
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Hora Hora Digital</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--CAMPANHAS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Campanhas</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.carteiras" dados="dashFiltros.carteiras" style="width:100%"></select2>
                        </div>

                        <!--FUNCIONARIO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Funcionário</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.funcionario" dados="dashFiltros.funcionario" style="width:100%"></select2>
                        </div>

                        <!--FPD-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Cliente FPD</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.fpd" dados="dashFiltros.fpd" style="width:100%"></select2>
                        </div>

                        <!--ATRASO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Atraso</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.atraso" dados="dashFiltros.atraso" style="width:100%"></select2>
                        </div>

                        <!--INCLUSAO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Dt Inclusão</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.inclusao" dados="dashFiltros.inclusao" style="width:100%"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- RESUMO -->
        <div class="box box-widget widget-user">
            <div class="widget-user-header bg-black" style="background: url('/Content/Images/Riachuelo/oscar_freire.jpg') center center;">
            </div>
            <div class="widget-user-image">
                <img class="img-circle" src="/Content/Images/Riachuelo/riachuelo.png" height="128" width="128">
            </div>
            <div class="box-footer">
                <div class="row">
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.discado | megaNumber"></h5>
                            <span class="description-text">Discado</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.contato | megaNumber"></h5>
                            <span class="description-text">Contato</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpc | megaNumber"></h5>
                            <span class="description-text">CPC</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpca | number"></h5>
                            <span class="description-text">CPCA</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.promessa | number"></h5>
                            <span class="description-text">Promessa</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.novacao | number"></h5>
                            <span class="description-text">Novação</span>
                        </div>
                    </div>
                </div>

                <div class="row bg-black-gradient" style="background-color:#8e8e8e">
                    <div class="col-sm-2 col-sm-offset-1 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.carteiraativa.cobraveis | number"></h5>
                            <span class="description-text">Cobráveis</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.discado / dashboard.carteiraativa.cobraveis | number:1"></h5>
                            <span class="description-text">Spin</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1"></h5>
                            <span class="description-text">Hit Rate</span>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1"></h5>
                            <span class="description-text">Tx Loc</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="description-block">
                            <h5 class="description-header" ng-bind="dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1"></h5>
                            <span class="description-text">Conversao</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!--Visão Unique-->
        <div class="pull-left">
            <div class="btn-group btn-group-toggle" data-toggle="buttons" ng-click="carregarDashboard()">
                <label class="btn btn-primary active" ng-click="filtros.conceito = '_total'">
                    <input type="radio" checked> Total
                </label>
                <label class="btn btn-primary" ng-click="filtros.conceito = '_unique'">
                    <input type="radio"> Unique
                </label>
            </div>
        </div> <br /><br />

        <!-- PRODUTO -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Produto {{conceito.string}}</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('analise_por_produto','Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.carteira">
                                <thead>
                                    <tr>
                                        <th>Produto</th>
                                        <th>Carteira</th>
                                        <th>Cobráveis</th>
                                        <th>Spin</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Promessa</th>
                                        <th>Novação</th>
                                        <th>HitRate</th>
                                        <th>TxLoc</th>
                                        <th>TxApv</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="p in dashboard.carteira | groupBy: 'produto'">

                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{p[0].produto}}
                                        </td>
                                        <td>{{p | sumByColumn: 'carteira'| number}}</td>
                                        <td>{{p | sumByColumn: 'cobraveis'| number}}</td>
                                        <td>{{p | divideSumColumns: 'discado':'cobraveis' | number:1}}</td>
                                        <td>{{p | sumByColumn: 'discado'| number}}</td>
                                        <td>{{p | sumByColumn: 'contato'| number}}</td>
                                        <td>{{p | sumByColumn: 'cpc'| number}}</td>
                                        <td>{{p | sumByColumn: 'cpca'| number}}</td>
                                        <td>{{p | sumByColumn: 'promessa'| number}}</td>
                                        <td>{{p | sumByColumn: 'novacao'| number}}</td>
                                        <td>{{p | divideSumColumns: 'contato':'discado' | percentage:1}}</td>
                                        <td>{{p | divideSumColumns: 'cpc':'contato' | percentage:1}}</td>
                                        <td>{{p | divideSumColumns: 'cpca':'cpc' | percentage:1}}</td>
                                        <td>{{p | divideSumColumns: 'promessa':'cpca' | percentage:1}}</td>
                                    </tr>

                                    <tr ng-repeat="f in p" ng-show="showTbody">
                                        <td>{{f.funcionario}}</td>
                                        <td>{{f.carteira | number}}</td>
                                        <td>{{f.cobraveis | number}}</td>
                                        <td>{{f.discado / f.carteira | number:1}}</td>
                                        <td>{{f.discado | number}}</td>
                                        <td>{{f.contato | number}}</td>
                                        <td>{{f.cpc | number}}</td>
                                        <td>{{f.cpca | number}}</td>
                                        <td>{{f.promessa | number}}</td>
                                        <td>{{f.novacao | number}}</td>
                                        <td>{{f.contato / f.discado | percentage:1}}</td>
                                        <td>{{f.cpc / f.contato | percentage:1}}</td>
                                        <td>{{f.cpca / f.cpc | percentage:1}}</td>
                                        <td>{{f.promessa / f.cpca | percentage:1}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- HORA HORA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Hora {{conceito.string}}</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('analise_por_hora','Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.horahora">
                                <thead>
                                    <tr>
                                        <th>Hora</th>
                                        <th>Discado</th>
                                        <th>Contato</th>
                                        <th>CPC</th>
                                        <th>CPCA</th>
                                        <th>Promessa</th>
                                        <th>Novação</th>
                                        <th>Hit Rate</th>
                                        <th>Tx Loc</th>
                                        <th>Tx Apv</th>
                                        <th>Conversão</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="hora in dashboard.horahora">
                                        <td>{{hora.hora}}</td>
                                        <td>{{hora.discado | number}}</td>
                                        <td>{{hora.contato | number}}</td>
                                        <td>{{hora.cpc | number}}</td>
                                        <td>{{hora.cpca | number}}</td>
                                        <td>{{hora.promessa | number}}</td>
                                        <td>{{hora.novacao | number}}</td>
                                        <td>{{hora.contato / hora.discado | percentage:1}}</td>
                                        <td>{{hora.cpc / hora.contato | percentage:1}}</td>
                                        <td>{{hora.cpca / hora.cpc | percentage:1}}</td>
                                        <td>{{hora.promessa / hora.cpca | percentage:1}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.discado | number}}</th>
                                        <th>{{dashboard.resumo.contato | number}}</th>
                                        <th>{{dashboard.resumo.cpc | number}}</th>
                                        <th>{{dashboard.resumo.cpca | number}}</th>
                                        <th>{{dashboard.resumo.promessa | number}}</th>
                                        <th>{{dashboard.resumo.novacao | number}}</th>
                                        <th>{{dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1}}</th>
                                        <th>{{dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

            <!-- DIAGRAMA -->
            <div class="col-xs-12 col-lg-8 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Diagrama de Finalizações {{conceito.string}}</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('diagrama','Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <sankey-chart dados="dashboard.diagrama" series-name="Qt Tabulação"></sankey-chart>
                    </div>
                </div>
            </div>

            <!-- INSUCESSO CONTATO -->
            <div class="col-xs-12 col-lg-4 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Insucesso no Contato</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('discador','Table5')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.discador" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>

<script>

    angular.module('app').controller('ctrl-riachuelo-horahora', function ($scope, $http, $filter, $interval, dadosPagina) {
        dadosPagina.titulo = 'Hora Hora';
        dadosPagina.descricao = 'Riachuelo'

        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
            carteiras: '',
            funcionario: '',
            fpd: '',
            conceito: '',
            atraso: '',
            inclusao: '',
        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.conceito = { string: '' };

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/riachuelo/dashboard/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            let data = r.data;
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.carteiras = data.Table;
            $scope.dashFiltros.funcionario = data.Table1;
            $scope.dashFiltros.fpd = data.Table7;
            $scope.dashFiltros.atraso = data.Table9;
            $scope.dashFiltros.inclusao = data.Table10;
            
        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/riachuelo/dashboard/horahora",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.dados = r.data;
                $scope.dashboard.status = r.status;
                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.carteiraativa = data.Table1[0];
                $scope.dashboard.carteira = data.Table2;
                $scope.dashboard.horahora = data.Table3;
                $scope.dashboard.diagrama = data.Table4;
                $scope.dashboard.discador = [{ name: 'Quantidade', innerSize: '60%', data: data.Table5.map(obj => ({ name: obj.ocorrencia, y: obj.qtd })) }];


                if ($scope.filtros.conceito == '' || $scope.filtros.conceito == '_total') {
                    $scope.conceito.string = '- Total';
                } else {
                    $scope.conceito.string = '- Unique';
                }

            });
        }

        $scope.carregarDashboard();

        // extrair dados para excel
        $scope.extrair = function (nomeArquivo, tabela) {
            alasql('SELECT * INTO XLSX("' + nomeArquivo + '.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });

</script>