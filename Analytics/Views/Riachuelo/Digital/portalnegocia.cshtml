@{
    Layout = "~/Views/master.cshtml";
}

<!-- DAHSBOARD -->
    <div ng-controller="ctrl-rchlo-portal">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Portal Negocia</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <!-- Filtros -->
                            <div class="tab-pane active" id="control-sidebar-filters-tab">
                                <!--DATA INCIAL-->
                                <div class="form-group">
                                    <label class="control-sidebar-subheading">Data Inicial</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                                    </div>
                                </div>

                                <!--DATA FINAL-->
                                <div class="form-group">
                                    <label class="control-sidebar-subheading">Data Final</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                                    </div>
                                </div>

                                <!--BOTÃO-->
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()">Carregar Dados</button>
                                </div>

                            </div>
                            <!-- /.tab-pane -->
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-4 col-lg-3">
                <div class="small-box bg-gray">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.consulta | number"></h3>
                        <p>Consultas</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-desktop"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.pagou | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.pagou / dashboard.resumo.consulta | percentage: 1"></h4>
                        <p>Já Pagou</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-close"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.nega | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.nega / dashboard.resumo.consulta | percentage: 1"></h4>
                        <p>Nega Pgto</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-ban"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-2">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.boleto | number"></h3>
                        <h4 class="pull-right" ng-bind="dashboard.resumo.boleto / dashboard.resumo.consulta | percentage: 1"></h4>
                        <p>Boleto</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-barcode"></i>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-3">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.vlr | number"></h3>
                        <p>Valor Negociado</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-money"></i>
                    </div>
                </div>
            </div>
        </div>

        <!--DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">

                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Dia</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.dia">
                                <thead>
                                    <tr>
                                        <th>Dia</th>
                                        <th>Consulta</th>
                                        <th>Já Pagou</th>
                                        <th>Nega Pgto</th>
                                        <th>Boleto</th>
                                        <th>Valor Negociado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="dia in dashboard.dia">
                                        <td>{{dia.data | date : 'dd/MM/yyyy'}}</td>
                                        <td>{{dia.consulta | number}}</td>
                                        <td><b>{{dia.pagou | number}}</b> ({{dia.pagou / dia.consulta | percentage:1}})</td>
                                        <td><b>{{dia.nega | number}}</b> ({{dia.nega / dia.consulta | percentage:1}})</td>
                                        <td><b>{{dia.boleto | number}}</b> ({{dia.boleto / dia.consulta | percentage:1}})</td>
                                        <td>{{dia.vlr | currency:'R$'}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr style="background-color: #d3d3d3">
                                        <th>Total</th>
                                        <td>{{dashboard.resumo.consulta | number}}</td>
                                        <td><b>{{dashboard.resumo.pagou | number}}</b> ({{dashboard.resumo.pagou / dashboard.resumo.consulta | percentage:1}})</td>
                                        <td><b>{{dashboard.resumo.nega | number}}</b> ({{dashboard.resumo.nega / dashboard.resumo.consulta | percentage:1}})</td>
                                        <td><b>{{dashboard.resumo.boleto | number}}</b> ({{dashboard.resumo.boleto / dashboard.resumo.consulta | percentage:1}})</td>
                                        <td>{{dashboard.resumo.vlr | currency:'R$'}}</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--HORA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">

                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Hora</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.hora">
                                <thead>
                                    <tr>
                                        <th>Hora</th>
                                        <th>Consulta</th>
                                        <th>Já Pagou</th>
                                        <th>Nega Pgto</th>
                                        <th>Boleto</th>
                                        <th>Valor Negociado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="h in dashboard.hora">
                                        <td>{{h.hora | date : 'dd/MM/yyyy'}}</td>
                                        <td>{{h.consulta | number}}</td>
                                        <td><b>{{h.pagou | number}}</b> ({{h.pagou / h.consulta | percentage:1}})</td>
                                        <td><b>{{h.nega | number}}</b> ({{h.nega / h.consulta | percentage:1}})</td>
                                        <td><b>{{h.boleto | number}}</b> ({{h.boleto / h.consulta | percentage:1}})</td>
                                        <td>{{h.vlr | currency:'R$'}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr style="background-color: #d3d3d3">
                                        <th>Total</th>
                                        <td>{{dashboard.resumo.consulta | number}}</td>
                                        <td><b>{{dashboard.resumo.pagou | number}}</b> ({{dashboard.resumo.pagou / dashboard.resumo.consulta | percentage:1}})</td>
                                        <td><b>{{dashboard.resumo.nega | number}}</b> ({{dashboard.resumo.nega / dashboard.resumo.consulta | percentage:1}})</td>
                                        <td><b>{{dashboard.resumo.boleto | number}}</b> ({{dashboard.resumo.boleto / dashboard.resumo.consulta | percentage:1}})</td>
                                        <td>{{dashboard.resumo.vlr | currency:'R$'}}</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- MOTIVO RECUSA -->
        <div class="row">
            <div class="col-xs-12 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Motivo Recusa</span>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.motivo" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>

        </div>

    </div>


<script>
    angular.module('app').controller('ctrl-rchlo-portal', function ($scope, $http, $filter) {

        $scope.filtros = {
            dtini: $filter('date')(new Date(), "yyyy-MM-dd"),
            dtfim: $filter('date')(new Date(), "yyyy-MM-dd"),
        };
        $scope.dashboard = {};

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/riachuelo/dashboard/portalnegocia",
                data: $scope.filtros,
            }).then(function success(r) {           
                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.dia = r.data.Table1;
                $scope.dashboard.hora = r.data.Table2;
                $scope.dashboard.motivo = r.data.Table3;
                $scope.dashboard.motivo = [{ name: 'Quantidade', innerSize: '60%', data: r.data.Table3.map(obj => ({ name: obj.motivo_recusa, y: obj.qtd })) }];

                $scope.dashboard.status = r.status;
            });
        }

        $scope.carregarDashboard();

    });
</script>
