@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-riachuelo-efetividade">

    <!-- DAHSBOARD -->
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Efetividade - {{grafico.nome}}</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
            <div class="page-menu-button">
                <small class="pull-right">
                    <select class="form-control form-control-lg" ng-model="grafico.indicador" ng-change="carregarGrafico()">
                        <option value="total">Consolidado</option>
                        <option value="promessa">AD</option>
                        <option value="acordo_portal">Portal</option>
                    </select>
                </small>
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none" ng-if="dashFiltros.status == 200">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--CAMPANHAS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Campanhas</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.carteiras" dados="dashFiltros.carteiras" style="width:100%"></select2>
                        </div>

                        <!--FUNCIONARIO-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Funcionário</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.funcionario" dados="dashFiltros.funcionario" style="width:100%"></select2>
                        </div>

                        <!--EMPRESA-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Empresa</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.empresa" dados="dashFiltros.empresa" style="width:100%"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row margin-bottom">

            <div class="col-xs-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">{{grafico.subtitulo}} - Efetividade por Carteira</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.efetividadeCarteira" axis-Categories="dashboard.carteiras" plot-Options-Bar-Data-Label="true" type="bar"></high-chart>
                    </div>
                </div>
            </div>


            <div class="col-xs-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">{{grafico.subtitulo}} - Pagamentos por Carteira</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('PromessaPaga','Table')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.promessaPagaCarteira" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>

        </div>

        <!--POR DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">{{grafico.subtitulo}} - Análise por DIA</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <!--TABELA-->
                        <table class="table table-striped table-bordered" style="text-align:center" ng-if="dashboard.dia">
                            <thead>
                                <tr>
                                    <th style="text-align:center">Dia</th>
                                    <th style="text-align:center">Promessa AD</th>
                                    <th style="text-align:center">Promessa AD Pag</th>
                                    <th style="text-align:center">% Efet.</th>
                                    <th style="text-align:center">Promessa Portal</th>
                                    <th style="text-align:center">Promessa Portal Pag</th>
                                    <th style="text-align:center">% Efet. </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="dia in dashboard.dia">
                                    <td>{{dia.data | date : 'dd/MM/yyyy'}}</td>
                                    <td>{{dia.promessa | number}}</td>
                                    <td>{{dia.promessa_pago | number}}</td>
                                    <td>{{dia.promessa_pago / dia.promessa | percentage:1}}</td>
                                    <td>{{dia.acordo_portal | number}}</td>
                                    <td>{{dia.acordo_portal_pago | number}}</td>
                                    <td>{{dia.acordo_portal_pago / dia.acordo_portal | percentage:1}}</td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr style="background-color: #d3d3d3; font-weight: bold">
                                    <th>Total</th>
                                    <td>{{dashboard.resumo.promessa | number}}</td>
                                    <td>{{dashboard.resumo.promessa_pago | number}}</td>
                                    <td>{{dashboard.resumo.promessa_pago / dashboard.resumo.promessa | percentage:1}}</td>
                                    <td>{{dashboard.resumo.acordo_portal | number}}</td>
                                    <td>{{dashboard.resumo.acordo_portal_pago | number}}</td>
                                    <td>{{dashboard.resumo.acordo_portal_pago / dashboard.resumo.acordo_portal | percentage:1}}</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">{{grafico.subtitulo}} - Pagamentos por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('PromessaDia','Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.promessaPagaDia" axis-Categories="dashboard.dias" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">{{grafico.subtitulo}} - Efetividade por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.efetividadeDia" axis-Categories="dashboard.dias" plot-Options-Line-Data-Label="true"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">{{grafico.subtitulo}} - Lote Pago por Carteira</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('PagLoteCarteira','Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.efetividadeLoteCarteira" axis-Categories="dashboard.carteiras" plot-Options-Bar-Data-Label="true" type="bar"></high-chart>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">{{grafico.subtitulo}} - Pagamento Lote por Carteira</span>
                        <div class="card-header-button card-header-expand"> 
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.pagamentoLoteCarteira" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>
        </div>
        <div class="row margin-bottom">
            <div class="col-xs-12 ">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">{{grafico.subtitulo}} - Pagamentos Lotes</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('PagLoteDia','Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.pagamentoLoteDia" axis-Categories="dashboard.diaslote" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">{{grafico.subtitulo}} - % Pago Lotes</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.efetividadeLoteDia" axis-Categories="dashboard.diaslote" plot-Options-Line-Data-Label="true"></high-chart>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

<script>

    angular.module('app').controller('ctrl-riachuelo-efetividade', function ($scope, $http, $filter, $interval, dadosPagina) {
        dadosPagina.titulo = 'Efetividade';
        dadosPagina.descricao = 'Riachuelo'

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            carteiras: '',
            funcionario: '',
            empresa: '',
        };
        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.grafico = { indicador: 'total' , nome: 'GERAL', titulo: 'Promessas Paga'}

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/riachuelo/dashboard/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            let data = r.data;
            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.carteiras = data.Table;
            $scope.dashFiltros.funcionario = data.Table1;
            $scope.dashFiltros.empresa = data.Table12;
        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/riachuelo/dashboard/efetividade",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;
                $scope.dashboard.dia = data.Table1;
                $scope.dashboard.resumo = data.Table4[0];

                $scope.dashboard.carteiras = r.data.Table.map(obj => obj.carteira);

                $scope.carregarGrafico(); 

            });
        }


        $scope.carregarDashboard();

        // carrega o grafico de acordo com o indicador escolhido
        $scope.carregarGrafico = function () {

            switch ($scope.grafico.indicador) {
                case 'promessa':
                    $scope.grafico.nome = 'AD';
                    $scope.grafico.titulo = 'Promessas Pagas';
                    $scope.grafico.subtitulo = 'AD';
                    break;
                case 'acordo_portal':
                    $scope.grafico.nome = 'PORTAL';
                    $scope.grafico.titulo = 'Promessas Pagas Portal';
                    $scope.grafico.subtitulo = 'Portal';
                    break;
                case 'total':
                    $scope.grafico.nome = 'GERAL';
                    $scope.grafico.titulo = 'Promessas Pagas Total';
                    $scope.grafico.subtitulo = 'Geral';
                    break;
                default:
                    $scope.grafico.nome = 'AD';
                    $scope.grafico.titulo = 'Promessas Pagas';
                    $scope.grafico.subtitulo = 'AD';

            }

            let data = $scope.dashboard.dados;

            $scope.dashboard.dias = data.Table1.map(obj => obj.data);
            $scope.dashboard.diaslote = data.Table3.map(obj => obj.data);

            $scope.dashboard.promessaPagaCarteira = [{ name: [$scope.grafico.titulo], data: data.Table.map(obj => ({ name: obj.carteira, y: obj[$scope.grafico.indicador  + '_pago'] })) }];
            $scope.dashboard.efetividadeCarteira = [{ name: 'Efetividade', data: data.Table.map(obj => (obj[$scope.grafico.indicador  + '_pago'] * 100 / obj[$scope.grafico.indicador]).toFixed(1) / 1) }];
            
            $scope.dashboard.promessaPagaDia = [{ name: [$scope.grafico.titulo], data: data.Table1.map(obj => obj[$scope.grafico.indicador  + '_pago']) }];
            $scope.dashboard.efetividadeDia = [{ name: 'Efetividade', data: data.Table1.map(obj => (obj[$scope.grafico.indicador  + '_pago'] * 100 / obj[$scope.grafico.indicador]).toFixed(1) / 1) }];
            
            $scope.dashboard.pagamentoLoteCarteira = [{ name: 'Pago', data: data.Table2.map(obj => ({ name: obj.carteira, y: obj[$scope.grafico.indicador] })) }];
            $scope.dashboard.efetividadeLoteCarteira = [{ name: 'Efetividade', data: data.Table2.map(obj => (obj[$scope.grafico.indicador] * 100 / obj.inclusao).toFixed(1) / 1) }];

            $scope.dashboard.pagamentoLoteDia = [{ name: 'Pago', data: data.Table3.map(obj => obj[$scope.grafico.indicador]) }];
            $scope.dashboard.efetividadeLoteDia = [{ name: 'Efetividade', data: data.Table3.map(obj => (obj[$scope.grafico.indicador] * 100 / obj.inclusao).toFixed(1) / 1) }];

            }

        

        // extrair dados para excel
        $scope.extrair = function (nomeArquivo, tabela) {
            alasql('SELECT * INTO XLSX("' + nomeArquivo + '.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });

</script>