@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-riachuelo-lote">

    <!-- DAHSBOARD -->
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Lote Digital</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom">
            <div class="col-xs-12" ng-if="dashFiltros.status == 200">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <!-- Filtros -->
                            <div class="tab-pane active" id="control-sidebar-filters-tab">
                                <!--DATA INCIAL-->
                                <div class="form-group">
                                    <label class="control-sidebar-subheading">Data Inicial</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                                    </div>
                                </div>

                                <!--DATA FINAL-->
                                <div class="form-group">
                                    <label class="control-sidebar-subheading">Data Final</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                                    </div>
                                </div>

                                <!--CAMPANHAS-->
                                <div class="form-group">
                                    <label class="control-sidebar-subheading">Produto</label>
                                    <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.carteiras" dados="dashFiltros.carteiras" style="width:100%"></select2>
                                </div>

                                <!--BOTÃO-->
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()">Carregar Dados</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--RESUMO-->
        <div class="row margin-bottom">

            <div class="col-xs-12 col-md-6">
                <div class="small-box bg-black">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.contratos | number"></h3>
                        <p>Carteira Acumulada</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-briefcase"></i>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-6">
                <div class="small-box bg-black-active">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.discado | number"></h3>
                        <h4 class="pull-right"><b>{{dashboard.resumo.discado / dashboard.resumo.contratos | percentage: 1}}</b></h4>
                        <p>Trabalhado x Carteira</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-phone"></i>
                    </div>
                </div>
            </div>


        </div>

        <!--Produção-->
        <div class="row">
            <div class="col-xs-12 col-md-5 margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Resumo de Indicadores</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body" style="height:600px">
                            <!--Promessa-->
                            <div class="col-xs-6">
                                <div class="small-box bg-green">
                                    <div class="inner">
                                        <h5>Promessa</h5>
                                        <h3 align="center">{{dashboard.resumo.promessa | number}}</h3>
                                        <h7 class="right">Base: <b>{{dashboard.resumo.promessa / dashboard.resumo.contratos | percentage: 1}}</b></h7>
                                    </div>
                                    <div class="icon">
                                        <i class="fa fa-handshake-o"></i>
                                    </div>
                                </div>
                            </div>
                            <!--Conversão-->
                            <div class="col-xs-6">
                                <div class="small-box bg-green" style="opacity: 0.75">
                                    <div class="inner">
                                        <h5>Conversão</h5>
                                        <h3 align="center">{{dashboard.resumo.promessa / dashboard.resumo.cpca | percentage: 1}}</h3>
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <!--CPCA-->
                            <div class="col-xs-6">
                                <div class="small-box bg-new-blue">
                                    <div class="inner">
                                        <h5>CPCA</h5>
                                        <h3 align="center">{{dashboard.resumo.cpca | number}}</h3>
                                        <h7 class="right">Base: <b>{{dashboard.resumo.cpca / dashboard.resumo.contratos | percentage: 1}}</b></h7>
                                    </div>
                                    <div class="icon">
                                        <i class="fa fa-bullseye"></i>
                                    </div>
                                </div>
                            </div>
                            <!--Tx Apv-->
                            <div class="col-xs-6">
                                <div class="small-box bg-new-blue" style="opacity: 0.75">
                                    <div class="inner">
                                        <h5>Tx Aproveitamento</h5>
                                        <h3 align="center">{{dashboard.resumo.cpca / dashboard.resumo.cpc | percentage: 1}}</h3>
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <!--Cpc-->
                            <div class="col-xs-6">
                                <div class="small-box bg-yellow-active">
                                    <div class="inner">
                                        <h5>CPC</h5>
                                        <h3 align="center">{{dashboard.resumo.cpc | number}}</h3>
                                        <h7 class="right">Base: <b>{{dashboard.resumo.cpc / dashboard.resumo.contratos | percentage: 1}}</b></h7>
                                    </div>
                                    <div class="icon">
                                        <i class="fa fa-male"></i>
                                    </div>
                                </div>
                            </div>
                            <!--Tx Loc-->
                            <div class="col-xs-6">
                                <div class="small-box bg-yellow-active" style="opacity: 0.75">
                                    <div class="inner">
                                        <h5>Tx Localização</h5>
                                        <h3 align="center">{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage: 1}}</h3>
                                        <br />
                                    </div>
                                </div>
                            </div>
                            <!--Contato-->
                            <div class="col-xs-6">
                                <div class="small-box bg-new-grey">
                                    <div class="inner">
                                        <h5>Contato</h5>
                                        <h3 align="center">{{dashboard.resumo.contato | number}}</h3>
                                        <h7>Base: <b>{{dashboard.resumo.contato / dashboard.resumo.contratos | percentage: 1}}</b></h7>
                                    </div>
                                    <div class="icon">
                                        <i class="fa fa-comments-o"></i>
                                    </div>
                                </div>
                            </div>
                            <!--Hit Rate-->
                            <div class="col-xs-6">
                                <div class="small-box bg-new-grey" style="opacity: 0.75">
                                    <div class="inner">
                                        <h5>Hit Rate</h5>
                                        <h3 align="center">{{dashboard.resumo.contato / dashboard.resumo.discado | percentage: 1}}</h3>
                                        <br />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--FUNIL-->
            <div class="col-xs-12 col-md-7 row margin-bottom">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Gráfico de Indicadores</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Resumo','Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body" style="height:600px; width: 100%">
                        <high-charts config="dashboard.produto" style="width: 100%; height: 580px"></high-charts>
                    </div>
                </div>
            </div>
        </div>

        <!--GRAFICO DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Gráfico por inclusão</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <small class="pull-right">
                            <label>Indicador:</label>
                            <select ng-model="atual.indicador" ng-change="montarGraficoAtual()">
                                <option value="%discado">% Discado</option>
                                <option value="%contato">% Contato</option>
                                <option value="%cpc">% CPC</option>
                                <option value="%cpca">% CPCA</option>
                                <option value="%promessa">% Promessa</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-chart series="atual.grafico" axis-Categories="dashboard.dias"
                                    plot-Options-Spline-Data-Label="true" plot-Options-Column-Stacking="normal"
                                    y-Axis1-Min="0" y-Axis1-Max="100">
                        </high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--ANALISE POR DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por DIA</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('GraficoDia','Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <!--TABELA-->
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="text-align:center" ng-if="dashboard.dia">
                                <thead>
                                    <tr>
                                        <th style="text-align:center">Dia</th>
                                        <th style="text-align:center">Carteira</th>
                                        <th style="text-align:center">Discado</th>
                                        <th style="text-align:center">Contato</th>
                                        <th style="text-align:center">CPC</th>
                                        <th style="text-align:center">CPCA</th>
                                        <th style="text-align:center">Promessa</th>
                                        <th style="text-align:center">% Trab</th>
                                        <th style="text-align:center">% Hit</th>
                                        <th style="text-align:center">% Tx Loc</th>
                                        <th style="text-align:center">% Conversão</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="dia in dashboard.dia">
                                        <td>{{dia.data | date : 'dd/MM/yyyy'}}</td>
                                        <td>{{dia.contratos | number}}</td>
                                        <td>{{dia.discado | number}}</td>
                                        <td>{{dia.contato | number}}</td>
                                        <td>{{dia.cpc | number}}</td>
                                        <td>{{dia.cpca | number}}</td>
                                        <td>{{dia.promessa | number}}</td>
                                        <td>{{dia.discado / dia.contratos | percentage:1}}</td>
                                        <td>{{dia.contato / dia.discado| percentage:1}}</td>
                                        <td>{{dia.cpc / dia.contato | percentage:1}}</td>
                                        <td>{{dia.promessa / dia.cpca | percentage:1}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th style="text-align:center">Total</th>
                                        <th style="text-align:center">{{dashboard.resumo.contratos | number}}</th>
                                        <th style="text-align:center">{{dashboard.resumo.discado | number}}</th>
                                        <th style="text-align:center">{{dashboard.resumo.contato | number}}</th>
                                        <th style="text-align:center">{{dashboard.resumo.cpc | number}}</th>
                                        <th style="text-align:center">{{dashboard.resumo.cpca | number}}</th>
                                        <th style="text-align:center">{{dashboard.resumo.promessa | number}}</th>
                                        <th style="text-align:center">{{dashboard.resumo.discado / dashboard.resumo.contratos | percentage:1}}</th>
                                        <th style="text-align:center">{{dashboard.resumo.contato / dashboard.resumo.discado| percentage:1}}</th>
                                        <th style="text-align:center">{{dashboard.resumo.cpc / dashboard.resumo.contato | percentage:1}}</th>
                                        <th style="text-align:center">{{dashboard.resumo.promessa / dashboard.resumo.cpca | percentage:1}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-riachuelo-lote', function ($scope, $http, $filter) {
        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            carteiras: '',
        };

        $scope.dashFiltros = {};
        $scope.dashboard = {};
        $scope.atual = {
            indicador: '%discado',
        }

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/riachuelo/dashboard/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            let data = r.data;

            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.carteiras = data.Table;
        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/riachuelo/dashboard/lote",
                data: $scope.filtros,
            }).then(function success(r) {
                let data = r.data;
                $scope.dashboard.dados = r.data;
                $scope.dashboard.status = r.status;

                $scope.dashboard.resumo = data.Table[0];
                $scope.dashboard.dia = data.Table1;
                $scope.dashboard.dias = r.data.Table1.map(obj => obj.data);

                $scope.montarGraficoAtual();
                $scope.GraficoResumo();
            });
        }


        $scope.montarGraficoAtual = function () {
            $scope.atual.grafico = [
                { name: 'Contrato', type: 'column', color: 'black', data: $scope.dashboard.dia.map(o => (o.contratos)) },
                { name: $scope.atual.indicador, type: 'spline', color: 'gray', yAxis: 1, data: $scope.dashboard.dia.map(o => obterIndicador(o, $scope.atual.indicador)) },
            ];

        }

        function obterIndicador(registro, indicador) {
            if (indicador == '%discado') { return (registro['discado'] * 100 / registro['contratos']).toFixed(1) * 1 }
            else if (indicador == '%contato') { return (registro['contato'] * 100 / registro['contratos']).toFixed(1) * 1 }
            else if (indicador == '%cpc') { return (registro['cpc'] * 100 / registro['contratos']).toFixed(1) * 1 }
            else if (indicador == '%cpca') { return (registro['cpca'] * 100 / registro['contratos']).toFixed(1) * 1 }
            else if (indicador == '%promessa') { return (registro['promessa'] * 100 / registro['contratos']).toFixed(1) * 1 }
            else { return registro[indicador] }
        }


        $scope.GraficoResumo = function () {
            let resumo = $scope.dashboard.resumo;

            function percentual(a, b) {
                return (a / b * 100).toFixed(1) + '%';
            }

            $scope.dashboard.produto = {
                chart: {
                    type: 'column',
                    inverted: true,
                    polar: true
                },
                legend: {
                    enabled: false
                },
                title: {
                    text: ''
                },
                pane: {
                    size: '85%',
                    innerSize: '20%',
                    endAngle: 270
                },
                xAxis: {
                    categories: ['Base', 'Discado', 'Contato', 'CPC', 'CPCA', 'Promessa'],
                },
                yAxis: {
                    tickInterval: resumo.contratos,
                    showLastLabel: true,
                },
                plotOptions: {
                    column: {
                        dataLabels: {
                            format: '{point.pB}',
                            enabled: true
                        }
                    }
                },
                tooltip: {
                    followPointer: true,
                    pointFormat: 'Volume: <b>{point.y}</b><br/>% Base: <b>{point.pB}</b><br/>% Anterior:: <b>{point.pA}</b><br/>'
                },
                credits: {
                    enabled: false
                },
                series: [{
                    name: 'Quantidade',
                    data: [
                        { y: resumo.contratos, pB: percentual(resumo.contratos, resumo.contratos), pA: '-' },
                        { y: resumo.discado, pB: percentual(resumo.discado, resumo.contratos), pA: percentual(resumo.discado, resumo.contratos) },
                        { y: resumo.contato, pB: percentual(resumo.contato, resumo.contratos), pA: percentual(resumo.contato, resumo.discado) },
                        { y: resumo.cpc, pB: percentual(resumo.cpc, resumo.contratos), pA: percentual(resumo.cpc, resumo.contato) },
                        { y: resumo.cpca, pB: percentual(resumo.cpca, resumo.contratos), pA: percentual(resumo.cpca, resumo.cpc) },
                        { y: resumo.promessa, pB: percentual(resumo.promessa, resumo.contratos), pA: percentual(resumo.promessa, resumo.cpca) }
                    ],
                    color: '#333',
                }]
            };
        }


        // extrair dados para excel
        $scope.extrair = function (nomeArquivo, tabela) {
            alasql('SELECT * INTO XLSX("' + nomeArquivo + '.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

        $scope.carregarDashboard();



    });

</script>