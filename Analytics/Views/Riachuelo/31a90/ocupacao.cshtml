@{
    Layout = "~/Views/master.cshtml";
}



<div ng-controller="ctrl-riachuelo-tempo">
    <div ng-if="dashboard.status == 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Ocupação Operação</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.status == 200">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--SUPERVISOR-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Supervisor</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.supervisor" dados="dashFiltros.supervisor"></select2>
                        </div>

                        <!--EQUIPE-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Equipe</label>
                            <select2 style="width: 100%;" class="form-control" data-placeholder="Selecione" ng-model="filtros.equipe" dados="dashFiltros.equipe"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- QUADROS -->
        <div class="row margin-bottom">
            <!--INDICADORES ABSOLUTOS-->
            <div class="col-xs-12 col-sm-6 col-md-3">

                <div class="small-box" style="background-color:white;color:black">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.qtd_ad"></h3>
                        <p>Qtd Operador</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-users"></i>
                    </div>
                </div>

                <div class="small-box" style="background-color:white;color:black">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.tma | formatTimer"></h3>
                        <p>T. Médio Atendimento</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-clock-o"></i>
                    </div>
                </div>

                <div class="small-box" style="background-color:white;color:black">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.tme | formatTimer"></h3>
                        <p>T. Médio Espera</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-clock-o"></i>
                    </div>
                </div>

            </div>

            <div class="col-xs-12 col-sm-6 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Ocupação</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.ocupacao" type="pie" height="250" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-3">

                <div class="small-box" style="background-color:black;color:white">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.logado | formatTimer "></h3>
                        <p>Média Logado Operador</p>
                    </div>
                    <div class="icon" style="color:white">
                        <i class="fa fa-hourglass"></i>
                    </div>
                </div>

                <div class="small-box" style="background-color:black;color:white">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.falado | formatTimer "></h3>
                        <p>Média Falado Operador</p>
                    </div>
                    <div class="icon" style="color:white">
                        <i class="fa fa-hourglass-half"></i>
                    </div>
                </div>

                <div class="small-box" style="background-color:black;color:white">
                    <div class="inner">
                        <h3 ng-bind="dashboard.resumo.disponivel | formatTimer "></h3>
                        <p>Média Disponível Operador</p>
                    </div>
                    <div class="icon" style="color:white">
                        <i class="fa fa-hourglass-start"></i>
                    </div>
                </div>

            </div>
        </div>

        <!--ANALISE POR SUPERVISOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Supervisor/Equipe</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <!--TABELA-->
                        <div class="table-responsive" ng-show="grafico.exibir == 'true'">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.supervisor">
                                <thead>
                                    <tr>
                                        <th>Supervisor</th>
                                        <th>Agentes</th>
                                        <th>Atendidas</th>
                                        <th>Logado</th>
                                        <th>Falado</th>
                                        <th>Disponível</th>
                                        <th>Pausas</th>
                                        <th>TMA</th>
                                        <th>TME</th>
                                        <th>% Ocupação</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="c in dashboard.supervisor | groupBy: 'ds_supervisor'">

                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{c[0].ds_supervisor}}
                                        </td>
                                        <td>{{c | sumByColumn: 'qtd_ad' | number : 0 }}</td>
                                        <td>{{c | sumByColumn: 'atendido' | number : 0 }}</td>
                                        <td>{{c | avgColumn: 'logado'| formatTimer}}</td>
                                        <td>{{c | avgColumn: 'falado'| formatTimer}}</td>
                                        <td>{{c | avgColumn: 'disponivel'| formatTimer}}</td>
                                        <td>{{c | avgColumn: 'pausatotal'| formatTimer}}</td>
                                        <td>{{c | avgColumn: 'tma' | number : 0 | formatTimer}}</td>
                                        <td>{{c | avgColumn: 'tme' | number : 0 | formatTimer}}</td>
                                        <td>{{c | divideSumColumns: 'falado':'logado' | percentage: 1}}</td>
                                    </tr>

                                    <tr ng-repeat="p in c" ng-show="showTbody">
                                        <td>{{p.ds_equipe}}</td>
                                        <td>{{p.qtd_ad | number}}</td>
                                        <td>{{p.atendido | number}}</td>
                                        <td>{{p.logado | formatTimer }}</td>
                                        <td>{{p.falado | formatTimer }}</td>
                                        <td>{{p.disponivel | formatTimer }}</td>
                                        <td>{{p.pausatotal | formatTimer }}</td>
                                        <td>{{p.tma | formatTimer}}</td>
                                        <td>{{p.tme | formatTimer}}</td>
                                        <td>{{p.falado / p.logado | percentage: 1}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!--ANALISE DIA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('AnaliticoDia','Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.dia">
                                <thead>
                                    <tr>
                                        <th>Dia</th>
                                        <th>Logado</th>
                                        <th>Falado</th>
                                        <th>Pausa</th>
                                        <th>Disponível</th>
                                        <th>TMA</th>
                                        <th>TME</th>
                                        <th>Atendido</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="dia in dashboard.dia">
                                        <td>{{dia.data | date : 'dd/MM/yyyy'}}</td>
                                        <td>{{dia.logado}}</td>
                                        <td>{{dia.falado}}</td>
                                        <td>{{dia.pausatotal}}</td>
                                        <td>{{dia.disponivel}}</td>
                                        <td>{{dia.tma}}</td>
                                        <td>{{dia.tme}}</td>
                                        <td>{{dia.atendido}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <!--PRODUÇÃO POR OPERADOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Operador</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <d-table class="table table-striped table-bordered" style="width:100%" dados="dashboard.operador" scroll-collapse="true" scroll-y="324px" order="[[3,'desc']]"></d-table>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-riachuelo-tempo', function ($scope, $http, $filter) {

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);
        
        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            supervisor: '',
            equipe: '',

        };


        $scope.dashFiltros = {};
        $scope.dashboard = {};  
        $scope.grafico = { indicador: 'atendido', exibir: 'true' };


        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/riachuelo/31a90/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            let data = r.data;

            $scope.dashFiltros.status = r.status;
            $scope.dashFiltros.supervisor = data.Table4;
            $scope.dashFiltros.equipe = data.Table3;

        });

        // obtem filtros do escopo e carrega os dados do dashboard
        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/riachuelo/31a90/ocupacao",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.supervisor = r.data.Table2;
                $scope.dashboard.operador = r.data.Table3;
                $scope.dashboard.ocupacao = [{ name: 'Quantidade', innerSize: '10%', data: r.data.Table1.map(obj => ({ name: obj.legenda, y: obj.segundos })) }];
                $scope.dashboard.dia = r.data.Table4;


               // $scope.carregarGrafico();
            });
        }

        $scope.carregarDashboard();


        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>
