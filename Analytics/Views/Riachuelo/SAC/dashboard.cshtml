@{
    Layout = "~/Views/master.cshtml";
}

<div ng-controller="ctrl-caedusac-horahora">
    <div ng-if="dashboard.status === 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Hora Hora</div>
        </header>

        <!--RESUMO-->
        <div class="box box-widget widget-user">
            <div class="widget-user-header bg-black" style="background: url('/Content/Images/Riachuelo/oscar_freire.jpg') center center;">
            </div>
            <div class="widget-user-image">
                <img class="img-circle" src="/Content/Images/Riachuelo/riachuelo.png" height="128" width="128">
            </div>
            <div class="box-footer">

                <div class="row">
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Chamadas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.chamada | number"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Atendidas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.atendido | number"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Abandonadas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.abandonado | number"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Tempo Médio Atendimento</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.tma"></h5>
                        </div>
                    </div>
                </div>

                <div class="row" style="background-color: black; color: white">
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">NS (20s)</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.sla_ok / dashboard.resumo.chamada | percentage:1"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Atendidas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.atendido / dashboard.resumo.chamada | percentage:1"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Abandonadas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.abandonado / dashboard.resumo.chamada | percentage:1"></h5>
                        </div>
                    </div>
                    <div class="col-sm-3 border-right">
                        <div class="description-block">
                            <span class="description-text">Tempo Médio em Fila</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.tmf"></h5>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!--POR HORA GRAFICO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Gráfico por Hora</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.graficohora" axis-Categories="dashboard.horas" type="column"
                                    plot-Options-Column-Data-Label="true" plot-Options-Column-Stacking="normal" y-Axis1-Min="0"
                                    y-Axis1-Max="100"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--POR HORA TABELA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Hora</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <!--TABELA-->
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.horahora">
                                <thead>
                                    <tr>
                                        <th>Hora</th>
                                        <th>Agente</th>
                                        <th>NS (20s)</th>
                                        <th>Chamada</th>
                                        <th>Atendida</th>
                                        <th>Abandonada</th>
                                        <th>% Abandono</th>
                                        <th>Tempo Médio Atendimento</th>
                                        <th>Tempo Médio em Fila</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="hora in dashboard.horahora">
                                        <td>{{hora.hora}}</td>
                                        <td>{{hora.agente | number}}</td>
                                        <td>{{hora.sla_ok / hora.chamada | percentage:1}}</td>
                                        <td>{{hora.chamada | number}}</td>
                                        <td>{{hora.atendido | number}}</td>
                                        <td>{{hora.abandonado | number}}</td>
                                        <td>{{hora.abandonado / hora.chamada | percentage:1}}</td>
                                        <td>{{hora.tma}}</td>
                                        <td>{{hora.tmf}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.agente | number}}</th>
                                        <th>{{dashboard.resumo.sla_ok / dashboard.resumo.chamada | percentage:1}}</th>
                                        <th>{{dashboard.resumo.chamada | number}}</th>
                                        <th>{{dashboard.resumo.atendido | number}}</th>
                                        <th>{{dashboard.resumo.abandonado | number}}</th>
                                        <th>{{dashboard.resumo.abandonado / dashboard.resumo.chamada | percentage:1}}</th>
                                        <th>{{dashboard.resumo.tma}}</th>
                                        <th>{{dashboard.resumo.tmf}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--POR FILA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Fila</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <!--TABELA-->
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.fila">
                                <thead>
                                    <tr>
                                        <th>Fila</th>
                                        <th>Agente</th>
                                        <th>NS (20s)</th>
                                        <th>Chamada</th>
                                        <th>Atendida</th>
                                        <th>Abandonada</th>
                                        <th>% Abandono</th>
                                        <th>Tempo Médio Atendimento</th>
                                        <th>Tempo Médio em Fila</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="f in dashboard.fila">
                                        <td>{{f.fila}}</td>
                                        <td>{{f.agente | number}}</td>
                                        <td>{{f.sla_ok / f.chamada | percentage:1}}</td>
                                        <td>{{f.chamada | number}}</td>
                                        <td>{{f.atendido | number}}</td>
                                        <td>{{f.abandonado | number}}</td>
                                        <td>{{f.abandonado / f.chamada | percentage:1}}</td>
                                        <td>{{f.tma}}</td>
                                        <td>{{f.tmf}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.agente | number}}</th>
                                        <th>{{dashboard.resumo.sla_ok / dashboard.resumo.chamada | percentage:1}}</th>
                                        <th>{{dashboard.resumo.chamada | number}}</th>
                                        <th>{{dashboard.resumo.atendido | number}}</th>
                                        <th>{{dashboard.resumo.abandonado | number}}</th>
                                        <th>{{dashboard.resumo.abandonado / dashboard.resumo.chamada | percentage:1}}</th>
                                        <th>{{dashboard.resumo.tma}}</th>
                                        <th>{{dashboard.resumo.tmf}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--OCUPACAO E TEMPO DE FILA-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Ocupação da Operação</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.ocupacao" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Tempo de Fila</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.tempofila" axis-Categories="dashboard.tempos" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    angular.module('app').controller('ctrl-caedusac-horahora', function ($scope, $http, $filter) {
        $scope.dashboard = {};

        $scope.filtros = {
            dtini: '2018-08-11',
            dtfim: '2018-08-11',
            hrini: '08',
            hrfim: '17'
        };

        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/caedu/sac/dashboard/horahora",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                $scope.dashboard.dados = r.data;

                $scope.dashboard.resumo = r.data.Table[0];

                $scope.dashboard.horahora = r.data.Table1;
                $scope.dashboard.horas = r.data.Table1.map(obj => obj.hora);
                $scope.dashboard.graficohora = [
                                    { name: 'atendido', type: 'column', data: r.data.Table1.map(obj => obj.atendido) },
                                    { name: 'abandonado', type: 'column', data: r.data.Table1.map(obj => obj.abandonado) },
                                    { name: 'NS (20s)', type: 'spline', yAxis: 1, data: r.data.Table1.map(obj => (obj.sla_ok * 100 / obj.chamada).toFixed(1) / 1) },
                ];

                $scope.dashboard.fila = r.data.Table2;

                $scope.dashboard.tempos = r.data.Table3.map(obj => obj.tempo_fila);
                $scope.dashboard.tempofila = [{ name: 'chamada', data: r.data.Table3.map(obj => obj.chamada) }]
                    

                $scope.dashboard.ocupacao = [{ name: 'Qtd', data: r.data.Table4.map(obj => ({ name: obj.tipo_pausa, y: obj.duracao })) }];
                $scope.dashboard.operador = r.data.Table5;
            });
        }

        $scope.carregarDashboard();

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>