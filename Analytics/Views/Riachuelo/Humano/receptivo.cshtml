@{
    Layout = "~/Views/master.cshtml";
}


<div ng-controller="ctrl-riachuelo-receptivo">
    <div ng-if="dashboard.status === 200">

        <!-- HEADER-->
        <header class="page-header">
            <div class="page-name">Produção Receptivo</div>
            <div class="page-menu-button" ng-style="{'background-color': credor.cor_primaria, 'color': credor.cor_fonte_primaria}" onclick="toggleDisplayNone('filtros-window')">
                <i class="fa fa-filter"></i>
                FILTROS
            </div>
        </header>

        <!-- FILTROS -->
        <div class="row margin-bottom" ng-if="dashFiltros.empresas">
            <div class="col-xs-12">
                <div id="filtros-window" class="card display-none">
                    <div class="card-header">
                        <span class="card-header-title">Filtros</span>
                        <div class="card-header-button card-header-close">
                            <i class="fa fa-close"></i>
                        </div>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                    </div>
                    <div class="card-body">

                        <!--DATA INCIAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Inicial</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtini"></date-picker>
                            </div>
                        </div>

                        <!--HORA INCIAL-->
                        <div class="form-group">
                            <label>Hora Inicial</label>
                            <div class="input-group bootstrap-timepicker timepicker">
                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                                <select class="form-control pull-right" ng-model="filtros.hrini">
                                    <option value="00">00 hr</option>
                                    <option value="01">01 hr</option>
                                    <option value="02">02 hr</option>
                                    <option value="03">03 hr</option>
                                    <option value="04">04 hr</option>
                                    <option value="05">05 hr</option>
                                    <option value="06">06 hr</option>
                                    <option value="07">07 hr</option>
                                    <option value="08">08 hr</option>
                                    <option value="09">09 hr</option>
                                    <option value="10">10 hr</option>
                                    <option value="11">11 hr</option>
                                    <option value="12">12 hr</option>
                                    <option value="13">13 hr</option>
                                    <option value="14">14 hr</option>
                                    <option value="15">15 hr</option>
                                    <option value="16">16 hr</option>
                                    <option value="17">17 hr</option>
                                    <option value="18">18 hr</option>
                                    <option value="19">19 hr</option>
                                    <option value="20">20 hr</option>
                                    <option value="21">21 hr</option>
                                    <option value="22">22 hr</option>
                                    <option value="23">23 hr</option>
                                </select>
                            </div>
                        </div>

                        <!--DATA FINAL-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Data Final</label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <date-picker class="form-control pull-right" placeholder="yyyy-mm-dd" ng-model="filtros.dtfim"></date-picker>
                            </div>
                        </div>

                        <!--HORA FINAL-->
                        <div class="form-group">
                            <label>Hora Final</label>
                            <div class="input-group bootstrap-timepicker timepicker">
                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                                <select class="form-control pull-right" ng-model="filtros.hrfim">
                                    <option value="00">00 hr</option>
                                    <option value="01">01 hr</option>
                                    <option value="02">02 hr</option>
                                    <option value="03">03 hr</option>
                                    <option value="04">04 hr</option>
                                    <option value="05">05 hr</option>
                                    <option value="06">06 hr</option>
                                    <option value="07">07 hr</option>
                                    <option value="08">08 hr</option>
                                    <option value="09">09 hr</option>
                                    <option value="10">10 hr</option>
                                    <option value="11">11 hr</option>
                                    <option value="12">12 hr</option>
                                    <option value="13">13 hr</option>
                                    <option value="14">14 hr</option>
                                    <option value="15">15 hr</option>
                                    <option value="16">16 hr</option>
                                    <option value="17">17 hr</option>
                                    <option value="18">18 hr</option>
                                    <option value="19">19 hr</option>
                                    <option value="20">20 hr</option>
                                    <option value="21">21 hr</option>
                                    <option value="22">22 hr</option>
                                    <option value="23">23 hr</option>
                                </select>
                            </div>
                        </div>

                        <!--EMPRESA-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Empresas</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.empresas" dados="dashFiltros.empresas" style="width:100%"></select2>
                        </div>

                        <!--FAIXAS-->
                        <div class="form-group">
                            <label class="control-sidebar-subheading">Carteiras</label>
                            <select2 class="form-control" data-placeholder="Selecione" ng-model="filtros.carteiras" dados="dashFiltros.carteiras" style="width:100%"></select2>
                        </div>

                        <!--BOTÃO-->
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" data-toggle="control-sidebar" ng-click="carregarDashboard()" onclick="addDisplayNone('filtros-window')">Carregar Dados</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <!--RESUMO-->
        <div class="box box-widget widget-user">
            <div class="widget-user-header" style="background: url('/Content/Images/Riachuelo/oscar_freire.jpg') center center; ">
            </div>
            <div class="box-footer">

                <div class="row">
                    <div class="col-sm-2 col-sm-offset-1 border-right">
                        <div class="description-block">
                            <span class="description-text">Chamadas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.chamada | number"></h5>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <span class="description-text">Atendidas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.atendido | number"></h5>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <span class="description-text">Abandonadas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.abandonado | number"></h5>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <span class="description-text">Não lozalizado</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.nlocalizado | number"></h5>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <span class="description-text">Tempo Médio Atendimento</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.tma"></h5>
                        </div>
                    </div>
                </div>

                <div class="row" style="background-color: black; color:white">
                    <div class="col-sm-2 col-sm-offset-1 border-right">
                        <div class="description-block">
                            <span class="description-text">NS (20s)</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.sla_ok / dashboard.resumo.chamada | percentage:1"></h5>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <span class="description-text">% Atendidas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.atendido / dashboard.resumo.chamada | percentage:1"></h5>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <span class="description-text">% Abandonadas</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.abandonado / dashboard.resumo.chamada | percentage:1"></h5>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <span class="description-text">% Não Localizado</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.nlocalizado / dashboard.resumo.chamada | percentage:1"></h5>
                        </div>
                    </div>
                    <div class="col-sm-2 border-right">
                        <div class="description-block">
                            <span class="description-text">Tempo Médio em Fila</span>
                            <h5 class="description-header" ng-bind="dashboard.resumo.tmf"></h5>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!--TABELA EMPRESA/CREDOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Empresa/Carteira</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table2')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.fila">
                                <thead>
                                    <tr>
                                        <th>Produto</th>
                                        <th>NS (20s)</th>
                                        <th>Chamada</th>
                                        <th>Atendida</th>
                                        <th>Abandonada</th>
                                        <th>% Abandono</th>
                                        <th>Tempo Médio Atendimento</th>
                                        <th>Tempo Médio em Fila</th>
                                    </tr>
                                </thead>
                                <tbody ng-repeat="e in dashboard.fila | groupBy: 'ds_empresa'">

                                    <tr class="text-bold">
                                        <td>
                                            <i class="fa fa margin-right-5" ng-click="showTbody = !showTbody" ng-class="showTbody ? 'fa-minus' : 'fa-plus'"></i>
                                            {{e[0].ds_empresa}}
                                        </td>
                                        <td>{{e | divideSumColumns: 'sla_ok':'chamada'| percentage:1}}</td>
                                        <td>{{e | sumByColumn: 'chamada'| number}}</td>
                                        <td>{{e | sumByColumn: 'atendido'| number}}</td>
                                        <td>{{e | sumByColumn: 'abandonado'| number}}</td>
                                        <td>{{e | divideSumColumns: 'abandonado':'chamada'| percentage:1}}</td>
                                        <td>{{e | avgColumn: 'tma' | formatTimer}}</td>
                                        <td>{{e | avgColumn: 'tmf' | formatTimer}}</td>
                                    </tr>

                                    <tr ng-repeat="c in e" ng-show="showTbody">
                                        <td>{{c.ds_carteira}}</td>
                                        <td>{{c.sla_ok / c.chamada | percentage:1}}</td>
                                        <td>{{c.chamada | number}}</td>
                                        <td>{{c.atendido | number}}</td>
                                        <td>{{c.abandonado | number}}</td>
                                        <td>{{c.abandonado / c.chamada | percentage:1}}</td>
                                        <td>{{c.tma}}</td>
                                        <td>{{c.tmf}}</td>
                                    </tr>

                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--POR HORA GRAFICO-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Gráfico por Hora</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table1')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                        <small class="pull-right">
                            <select ng-model="dashFiltros.ns" style="color:black" ng-change="carregarGrafico()">
                                <option value="ns10">NS 10s</option>
                                <option value="ns20">NS 20s</option>
                                <option value="ns30">NS 30s</option>
                            </select>
                        </small>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.graficohora" axis-Categories="dashboard.horas" type="column"
                                    plot-Options-Column-Data-Label="true" plot-Options-Column-Stacking="normal" y-Axis1-Min="0"
                                    y-Axis1-Max="100"></high-chart>
                    </div>
                </div>
            </div>
        </div>


        <!--FINALIZAÇÕES OCORRENCIA DISCADOR-->
        <div class="row margin-bottom">
            <div class="col-xs-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Atendimentos por Produto</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table4')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        @*<high-chart series="dashboard.produtos" type="pie" tooltip-Point-Format="{point.y} (<b>{point.percentage:.1f}%</b>)"></high-chart>*@
                        <high-chart series="dashboard.produtos" axis-Categories="dashboard.segmentos" plot-Options-Bar-Data-Label="true" type="bar"></high-chart>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Tempo de Fila</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table5')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <high-chart series="dashboard.tempofila" axis-Categories="dashboard.tempos" plot-Options-Column-Data-Label="true" type="column"></high-chart>
                    </div>
                </div>
            </div>
        </div>

        <!--POR HORA TABELA-->
        <div class="row margin-bottom">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <span class="card-header-title">Análise por Dia</span>
                        <div class="card-header-button card-header-expand">
                            <i class="fa fa-expand"></i>
                        </div>
                        <div class="card-header-button" ng-click="extrair('Table3')">
                            <i class="fa fa-file-excel-o"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <!--TABELA-->
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="width:100%" ng-if="dashboard.diadia">
                                <thead>
                                    <tr>
                                        <th>Dia</th>
                                        <th>Agente</th>
                                        <th>NS (20s)</th>
                                        <th>Chamada</th>
                                        <th>Atendida</th>
                                        <th>Abandonada</th>
                                        <th>% Abandono</th>
                                        <th>Tempo Médio Atendimento</th>
                                        <th>Tempo Médio em Fila</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="dia in dashboard.diadia">
                                        <td>{{dia.data}}</td>
                                        <td>{{dia.agente | number}}</td>
                                        <td>{{dia.sla_ok / dia.chamada | percentage:1}}</td>
                                        <td>{{dia.chamada | number}}</td>
                                        <td>{{dia.atendido | number}}</td>
                                        <td>{{dia.abandonado | number}}</td>
                                        <td>{{dia.abandonado / dia.chamada | percentage:1}}</td>
                                        <td>{{dia.tma}}</td>
                                        <td>{{dia.tmf}}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th>{{dashboard.resumo.agente | number}}</th>
                                        <th>{{dashboard.resumo.sla_ok / dashboard.resumo.chamada | percentage:1}}</th>
                                        <th>{{dashboard.resumo.chamada | number}}</th>
                                        <th>{{dashboard.resumo.atendido | number}}</th>
                                        <th>{{dashboard.resumo.abandonado | number}}</th>
                                        <th>{{dashboard.resumo.abandonado / dashboard.resumo.chamada | percentage:1}}</th>
                                        <th>{{dashboard.resumo.tma}}</th>
                                        <th>{{dashboard.resumo.tmf}}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

<script>
    angular.module('app').controller('ctrl-riachuelo-receptivo', function ($scope, $http, $filter, dadosPagina) {
        dadosPagina.titulo = 'Hora Hora';
        dadosPagina.descricao = 'Riachuelo - Humano'

        $scope.dashboard = {};
        $scope.dashFiltros = {};
        $scope.showTbody = false;

        // filtros iniciais
        let newdate = new Date();
        let primeiroDiaMes = new Date(newdate.getFullYear(), newdate.getMonth(), 1);

        $scope.filtros = {
            dtini: $filter('date')(primeiroDiaMes, "yyyy-MM-dd"),
            dtfim: $filter('date')(newdate, "yyyy-MM-dd"),
            hrini: '08',
            hrfim: '23',
            empresas: '',
            carteiras: ''

        };

        $scope.dashFiltros = {
            ns: 'ns20'
        }

        // carregar os filtros
        $http({
            method: 'GET',
            url: "/api/riachuelo/dashboard/humano/filtros",
            data: $scope.filtros,
        }).then(function success(r) {
            $scope.dados = r.status;
            $scope.dashFiltros.empresas = r.data.Table;
            $scope.dashFiltros.carteiras = r.data.Table1;

        });



        $scope.carregarDashboard = function () {
            $http({
                method: 'POST',
                url: "/api/riachuelo/dashboard/humano/receptivo",
                data: $scope.filtros,
            }).then(function success(r) {
                $scope.dashboard.status = r.status;
                
                $scope.dashboard.dados = r.data;
                $scope.dashboard.resumo = r.data.Table[0];
                $scope.dashboard.horas = r.data.Table1.map(obj => obj.hora);
                $scope.dashboard.diadia = r.data.Table3;
                $scope.dashboard.segmentos = r.data.Table4.map(obj => obj.segmento);

                $scope.dashboard.fila = r.data.Table2;
                $scope.dashboard.produtos = [{ name: 'Quantidade', innerSize: '60%', data: r.data.Table4.map(obj => ({ name: obj.segmento, y: (obj.atendido * 100 / obj.total).toFixed(1) / 1 })) }];
                $scope.dashboard.tempos = r.data.Table5.map(obj => obj.tempo_fila);
                $scope.dashboard.tempofila = [{ name: 'chamada', data: r.data.Table5.map(obj => obj.chamada) }]

                $scope.carregarGrafico();
            });
        }

        $scope.carregarGrafico = function () {
            $scope.dashboard.graficohora = [
                { name: 'atendido', type: 'column', data: $scope.dashboard.dados.Table1.map(obj => obj.atendido) },
                { name: 'abandonado', type: 'column', data: $scope.dashboard.dados.Table1.map(obj => obj.abandonado) },
                { name: $scope.dashFiltros.ns, type: 'spline', yAxis: 1, data: $scope.dashboard.dados.Table1.map(obj => (obj[$scope.dashFiltros.ns] * 100 / obj.chamada).toFixed(1) / 1) },
            ];
        }

        $scope.carregarDashboard();

        // extrair dados para excel
        $scope.extrair = function (tabela) {
            alasql('SELECT * INTO XLSX("analytics.xlsx", {headers: true}) FROM ?', [$scope.dashboard.dados[tabela]]);
        }

    });
</script>
